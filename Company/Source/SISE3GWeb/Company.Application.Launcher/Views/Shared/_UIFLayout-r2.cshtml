    <script>
        var AppResources;
        var resourceManager = uif2.resourceManager({ path: rootPath + "Layout/GetResources" });
        resourceManager.getResources().then(function (resources) {
            AppResources = resources;

        });

        var AppResourcesPerson;
        var GetQueryParameter = function (parameterName) {
            var queryParameters = window.location.search.substring(1);
            var parameters = queryParameters.split("&");
            for (var i = 0; i < parameters.length; i++) {
                var parameter = parameters[i].split("=");
                if (parameter[0] == parameterName) {
                    return parameter[1];
                }
            }
        }
            $.ajax({
                type: "GET",
                url: rootPath + "Layout/GetResources",
                dataType: "json",
                async: false,
                contentType: "application/json; charset=utf-8"
            }).done(function (data) {
                Resources.Language = data;
                if (GetQueryParameter("daysToExpite") > 0) {
                    $.UifNotify('show', { 'type': 'danger', 'message': Resources.Language.PasswordDaysToExpire.format(GetQueryParameter("daysToExpite")), 'autoclose': true });
                }
            });

            $.ajax({
                type: "GET",
                url: rootPath + "Layout/GetGlobalResources",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                async: false
            }).done(function (data) {
                Resources.Global = data;
                if (GetQueryParameter("daysToExpite") > 0) {
                    $.UifNotify('show', { 'type': 'danger', 'message': Resources.Language.PasswordDaysToExpire.format(GetQueryParameter("daysToExpite")), 'autoclose': true });
                }
            });


            $.ajax({
                type: "GET",
                url: rootPath + "Layout/GetResourcesPerson",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                async: false
            }).done(function (data) {
                AppResourcesPerson = data;
                if (GetQueryParameter("daysToExpite") > 0) {
                    $.UifNotify('show', { 'type': 'danger', 'message': Resources.Language.PasswordDaysToExpire.format(GetQueryParameter("daysToExpite")), 'autoclose': true });
                }
            });

        </script>


