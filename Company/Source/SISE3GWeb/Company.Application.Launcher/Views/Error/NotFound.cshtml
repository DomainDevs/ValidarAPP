
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Error</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <style>
        html, body {
            margin: 0;
            text-align: center;
            font-family: 'Raleway', sans-serif;
        }

        header {
            background: #09427c;
            text-align: center;
            padding: 15px 0;
        }

        .logo {
            margin: 0 auto;
        }

        .content {
            width: 86%;
            margin: 100px auto 0;
            text-align: left;
        }

        .content {
            display: flex;
            justify-content: center;
        }

        em, p {
            color: #a0a0a0;
        }

        h2 {
            color: #fd3344;
            font-size: 2em;
            margin: .25em auto;
        }

        .msg {
            border-left: 1px solid #e0e0e0;
            margin-left: 20px;
            padding-left: 20px;
        }
    </style>
</head>
<body>
    <header>
        <img class="logo" src="@Url.Content("~/Lib/framework/build/layout/default/images/logo.png")" alt="">
    </header>
    <div class="content">

        <img class="error-img" src="@Url.Content("~/Lib/framework/build/layout/default/images/404.png")" alt="">


        <div class="msg">
            <em>ERROR 404 | No Existe Recurso</em>
            <h2>
                El recurso o servicio no está disponible...
            </h2>
            <p>
                Por favor, vuelve a intentarlo más tarde, o contacte a un administrador del sistema.
            </p>
        </div>


    </div>
</body>
</html>