@model Sistran.Core.Framework.UIF.Web.Areas.Underwriting.Models.PolicyModelsView
@{
    Layout = null;
}

<script id="title-template" type="text/template">
    <div class="column">
        @Resources.Language.ProductionReport
    </div>
</script>

<script id="footer-template" type="text/template">
    <div id="buttonsProductionReport" class="footerProductionReport">
        <button class="btn btn-default cancel" id="btnExit">
            <i class="fa fa-times-circle" aria-hidden="true"></i>
            <span class="" aria-hidden="true"></span>
            @Resources.Language.ButtonExit
        </button>
        <button type="button" class="btn btn-default" id="btnSaveProductionReport">
            <i class="fa fa-save" aria-hidden="true"></i>
            <span class="" aria-hidden="true"></span>
            @Resources.Language.ButtonSave
        </button>
    </div>
</script>


<div class="uif-alert" id="alert"></div>

<div id="uif-spinner-loading" hidden="hidden">
    <div class="spinner spinner-three-bounce">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
    </div>
</div>

<div class="uif-row">
    <div class="uif-col-6">
        <label class="field-required">@Resources.Language.LabelAgentPrincipal</label>
        @Html.TextBoxFor(model => model.AgentName, new { id = "inputAgentPrincipal", @class = "uif-input-search", placeholder = @Resources.Language.PlaceHolderKeyName })
        @Html.ValidationMessageFor(model => model.AgentName)
    </div>
    <div class="uif-col-6">
        <label class="field-required">@Resources.Language.LabelAgentAgency</label>
        <select class="uif-select form-control" id="selectAgentAgency" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlAgency"
                data-id="Id" data-name="FullName" name="AgencyId"></select>
        @Html.ValidationMessageFor(model => model.AgencyId)
    </div>
</div>
<div class="uif-row">
    <div class="uif-col-6">
        <label class="field-required">@Resources.Language.LabelBranch</label>
        <select class="uif-select form-control" id="selectBranch" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlBranch"
                data-id="Id" data-name="Description" name="BranchId"></select>
        @Html.ValidationMessageFor(model => model.BranchId)
    </div>
    <div class="uif-col-6">
        <label>@Resources.Language.LabelSalesPoint</label>
        <select class="uif-select form-control" id="selectSalesPoint" data-val="true" data-val-required="@Resources.Language.ErrorDocumentSalesPoint"
                data-id="Id" data-name="Description" name="SalePoint"></select>
    </div>
</div>
<div class="uif-row">
    <div class="uif-col-6">
        <label class="field-required">@Resources.Language.LabelPrefixCommercial</label>
        <select class="uif-select form-control" id="selectPrefixCommercial" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlPrefixCommercial"
                data-id="Id" data-name="Description" name="PrefixId"></select>
        @Html.ValidationMessageFor(model => model.PrefixId)
    </div>
    <div class="uif-col-6">
        <label class="field-required">@Resources.Language.LabelCommercialProduct</label>
        <select class="uif-select form-control" id="selectProduct" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlProduct"
                data-id="Id" data-name="Description" name="ProductId"></select>
        @Html.ValidationMessageFor(model => model.ProductId)
    </div>
</div>
