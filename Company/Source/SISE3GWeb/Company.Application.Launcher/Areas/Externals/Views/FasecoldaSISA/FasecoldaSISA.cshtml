<div class="row">
    <div class="uif-col col-md-12">
        <ul class="nav nav-tabs uif-tab-pc" id="tabs">
            <li class="tabGuarantee" id="optionPromissoryNote">
                <a href="#tabPromissoryNote" id="linkPromissoryNote" data-toggle="tab" class=""> @Resources.Language.LabelPoliceInformation</a>
            </li>
            <li class="tabGuarantee" id="optionPledge">
                <a href="#tabPledge" id="linkPledge" data-toggle="tab" class=""> @Resources.Language.LabelClaims</a>
            </li>
            <li class="tabGuarantee" id="optionCDT">
                <a href="#tabCDT" id="linkCDT" data-toggle="tab" class=""> @Resources.Language.LabelValuesGuide</a>
            </li>
            <li class="tabGuarantee" id="optionOthers">
                <a href="#tabOthers" id="linkOthers" data-toggle="tab" class=""> @Resources.Language.LabelVINVerification</a>
            </li>
        </ul>

        <div class="tab-content">
            <div id="tabPromissoryNote" class="tab-pane">
                @Html.Partial("PoliciesInformation", Model)
            </div>

            <div id="tabPledge" class="tab-pane">
                @Html.Partial("~/Areas/Externals/Views/FasecoldaSISA/Claims.cshtml", new Sistran.Core.Framework.UIF.Web.Areas.Person.Models.PledgeViewModel())
            </div>

            <div id="tabCDT" class="tab-pane">
                @Html.Partial("~/Areas/Externals/Views/FasecoldaSISA/ValuesGuide.cshtml", new Sistran.Core.Framework.UIF.Web.Areas.Person.Models.FixedTermDepositViewModel())
            </div>

            <div id="tabOthers" class="tab-pane">
                @Html.Partial("~/Areas/Externals/Views/FasecoldaSISA/VINVerification.cshtml", new Sistran.Core.Framework.UIF.Web.Areas.Person.Models.OthersViewModel())
            </div>
        </div>
    </div>
</div>

