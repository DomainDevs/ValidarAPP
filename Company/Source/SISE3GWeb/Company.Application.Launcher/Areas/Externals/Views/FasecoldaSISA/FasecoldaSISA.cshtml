                    @Html.ValidationMessageFor(model => model.Plate)
                </div>
                <div class="uif-col-3">
                    <label>@Resources.Language.LabelEngine</label>
                    @Html.TextBoxFor(model => model.Engine, new { id = "inputEngine", placeholder = @Resources.Language.LabelEngine })
                    @Html.ValidationMessageFor(model => model.Engine)
                </div>
                <div class="uif-col-3">
                    <label>@Resources.Language.LabelChassis</label>
                    @Html.TextBoxFor(model => model.Chassis, new { id = "inputChassis", placeholder = @Resources.Language.LabelChassis })
                    @Html.ValidationMessageFor(model => model.Chassis)
                </div>
