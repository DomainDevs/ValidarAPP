<form id="formCexper" autocomplete="off" class="form form-space-adjusted">
    <div class="row">
        <div class="uif-col-12">
            <div class="row row-space-adjusted"></div>
            <div class="row row-space-adjusted">

                <div class="uif-col-3">
                    <label class="field-required">@Resources.Language.LabelLicensePlate</label>
                    @Html.TextBoxFor(model => model.LicensePlate, new { id = "inputLicensePlate", placeholder = @Resources.Language.LabelPlate })
                    @Html.ValidationMessageFor(model => model.LicensePlate)
                </div>

                <div class="uif-col-3">
                    <label class="field-required">@Resources.Language.LabelTypeDocument</label>
                    <select class="uif-select form-control" id="DocumentType" data-id="Id" data-name="Description"
                            name="Process_Type" data-val="true" data-filter="false" data-native="false" data-val-required="@Resources.Language.ErrorGetProcessType"></select>
                    @Html.ValidationMessageFor(model => model.DocumentType)
                </div>

                <div class="uif-col-3">
                    <label class="field-required">@Resources.Language.LabelDocumentNumber</label>
                    @Html.TextBoxFor(model => model.DocumentNumber, new { id = "inputDocumentNumber", placeholder = @Resources.Language.LabelDocumentNumber })
                    @Html.ValidationMessageFor(model => model.DocumentNumber)
                </div>

