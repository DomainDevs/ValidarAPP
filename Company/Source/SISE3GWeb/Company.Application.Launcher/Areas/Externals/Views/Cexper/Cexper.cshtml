                    <button type="button" class="btn btn-primary" id="btnSearch">
                        <!-- Cexper -->
                        @Resources.Language.search
                    </button>

                </div>
            </div>
        </div>
    </div>
</form>

<div class="row">
    <div class="uif-col col-md-12">
        <ul class="nav nav-tabs uif-tab-pc" id="tabs">
            <li class="tabGuarantee" id="optionPromissoryNote">
                <a href="#tabPromissoryNote" id="linkPromissoryNote" data-toggle="tab" class=""> @Resources.Language.TitleHistoricalPolicy</a>
            </li>
            <li class="tabGuarantee" id="optionMortage">
                <a href="#tabMortage" id="linkMortage" data-toggle="tab" class=""> @Resources.Language.TitleHistoricalSinisters</a>
            </li>
            <li class="tabGuarantee" id="optionSimit">
                <a href="#tabSimit" id="linkSimit" data-toggle="tab" class=""> @Resources.Language.LabelSimit</a>
            </li>
        </ul>

        <div class="tab-content">
            <div id="tabPromissoryNote" class="tab-pane">
                @Html.Partial("HistoricalPolicy", Model)
            </div>

            <div id="tabMortage" class="tab-pane">
                @Html.Partial("~/Areas/Externals/Views/Cexper/HistoricalSinisters.cshtml", new Sistran.Core.Framework.UIF.Web.Areas.Person.Models.PledgeViewModel())
            </div>

            <div id="tabSimit" class="tab-pane">
                @Html.Partial("~/Areas/Externals/Views/Cexper/SimitSISA.cshtml", new Sistran.Core.Framework.UIF.Web.Areas.Person.Models.MortageViewModel())
            </div>
        </div>
    </div>
</div>

