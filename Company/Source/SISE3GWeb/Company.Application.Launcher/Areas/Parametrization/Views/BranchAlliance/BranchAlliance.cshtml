@model Sistran.Core.Framework.UIF.Web.Areas.Parametrization.Models.BranchAllianceViewModel

@section Title
{
    <div id="" class="row main-title">
        <div id="tittle" class="column-70">
            @Resources.Language.TitleBranchAlliances
        </div>
        <div class="column-30 even">
            @Html.TextBox("BranchAllied", null, new { @class = "uif-input-search", id = "inputBranchAllied", maxlength = "15", @placeholder = @Resources.Language.SearchBranchAllied })
        </div>
    </div>
}

    <script id="BranchAllianceTemplate" type="text/template">
        {{#ifCond Status "==" "create"}}
        <div><strong class="success">{{BranchDescription}}</strong></div>
        {{else ifCond Status "==" "update"}}
        <div><strong class="warning">{{BranchDescription}} ({{BranchId}})</strong></div>
        {{else ifCond Status "==" "delete"}}
        <div><strong class="danger">{{BranchDescription}} ({{BranchId}})</strong></div>
        {{else}}
        <div><strong>{{BranchDescription}} ({{BranchId}})</strong></div>
        {{/ifCond}}

        <div>{{lblCity}}: {{CityName}}, {{StateName}}</div>
    </script>

<script id="BranchAllianceSearchTemplate" type="text/template">
    {{#ifCond Status "==" 2}}
       <div><strong class="success">({{AllianceId}}) {{AllianceName}}</strong> {{BranchDescription}}</div>
    {{else ifCond Status "==" 3}}
        <div><strong>({{AllianceId}}) {{AllianceName}}</strong> {{BranchDescription}}</div>
    {{else}}
        <div><strong>({{AllianceId}}) {{AllianceName}}</strong> {{BranchDescription}}</div>
    {{/ifCond}}
</script>

<div class="uif-modal" id="ModalSalesPointsAlliance">
    <div class="uif-modalbody">
        @Html.Partial("SalesPointAlliance")
    </div>
</div>

<form id="formBranchAlliance" autocomplete="off" class="form form-space-adjusted">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="uif-col-6">
            <div class="row row-space-adjusted">
                <div class="uif-col-8">
                    <label class="field-required">@Resources.Language.LabelAllied</label>
                    <select class="uif-select form-control" id="selectAllied" data-id="AlliedCode" data-name="Description"
                            name="AllianceId" data-val="true" data-val-required="@Resources.Language.ErrorDocument"
                            data-filter="true" data-native="false"></select>
                    @Html.HiddenFor(model => model.AllianceId)
                    @Html.ValidationMessageFor(model => model.AllianceId)
                </div>
                <div class="uif-col-8">
                    <label class="field-required">@Resources.Language.LabelBranchCode</label>
                    @Html.TextBoxFor(model => model.BranchId, new { id = "inputBranchCode", maxlength = "8", placeholder = @Resources.Language.LabelBranchCode })
                    @Html.ValidationMessageFor(model => model.BranchId)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-8">
                    <label class="field-required">@Resources.Language.Description</label>
                    @Html.TextBoxFor(model => model.BranchDescription, new { id = "inputBranchAlliedDescription", maxlength = "50", placeholder = @Resources.Language.Description })
                    @Html.ValidationMessageFor(model => model.BranchDescription)
                </div>
                <div class="uif-col-8">
                    <label class="field-required">@Resources.Language.LabelCountry</label>
                    <select class="uif-select form-control" id="selectCountry" data-id="Id" data-name="Description"
                            name="CountryCD" data-val="true" data-val-required="@Resources.Language.ErrorDocument"
                            data-filter="true" data-native="false"></select>
                    @Html.HiddenFor(model => model.CountryCD)
                    @Html.ValidationMessageFor(model => model.CountryCD)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-8">
                    <label class="field-required">@Resources.Language.LabelState </label>
                    <select class="uif-select form-control" id="selectState" data-id="Id" data-name="Description"
                            name="StateCD" data-val="true" data-val-required="@Resources.Language.ErrorDocument"
                            data-filter="true" data-native="false"></select>
                    @Html.HiddenFor(model => model.StateCD)
                    @Html.ValidationMessageFor(model => model.StateCD)
                </div>
                <div class="uif-col-8">
                    <label class="field-required">@Resources.Language.LabelCity</label>
                    <select class="uif-select form-control" id="selectCity" data-id="Id" data-name="Description"
                            name="CityCD" data-val="true" data-val-required="@Resources.Language.ErrorDocument"
                            data-filter="true" data-native="false"></select>
                    @Html.HiddenFor(model => model.CityCD)
                    @Html.ValidationMessageFor(model => model.CityCD)
                </div>
            </div>
            <div class="row"></div>
            <div class="row">
                <div class="uif-col-8">
                    <button type="button" class="btn btn-default" id="btnSalePointAlliance">
                        @Resources.Language.LabelSalesPoint
                    </button>
                </div>
            </div>
        </div>
        <div class="uif-col-6 col-space-adjusted">
            <div id="listViewBranchAlliance" class="uif-listview"></div>
        </div>
    </div>
    <div class="row lineDividing">
        <div class="uif-col-6 center-col-right" id="btnsModule">
            <div class="pull-right width-save">
                <button type="button" class="btn btn-default" id="btnNewBranchAlliance">
                    @Resources.Language.New
                </button>
                <button type="button" class="btn btn-primary" id="btnAddBranchAlliance">
                    @Resources.Language.Add
                </button>
            </div>
        </div>
        <div class="uif-col-6">
            <div class="uif-summary">
                <div class="items">
                </div>
            </div>
        </div>
    </div>
</form>

@section Toolbar
{
    <footer>
        <div class="pull-right" id="buttonsABranchlliancePanel">
            <button type="button" class="btn btn-default" id="btnExitBranch">
                <i class="fa fa-times-circle" aria-hidden="true"></i>
                <span class="" aria-hidden="true">
                    @Resources.Language.ButtonExit
                </span>
            </button>
            <button class="btn btn-default" id="btnExportBranch">
                <i class="fa fa-cloud-download" aria-hidden="true"></i>
                <span class="" aria-hidden="true">
                    @Resources.Language.ButtonExport
                </span>
            </button>
            <button class="btn btn-primary" id="btnSaveBranch">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                <span class="" aria-hidden="true">@Resources.Language.ButtonSave</span>
            </button>
        </div>
    </footer>
}
@section Scripts
{
    @Scripts.Render("~/bundle/js/BranchAlliance")
    @Scripts.Render("~/bundle/js/Person")
}