@model Sistran.Core.Framework.UIF.Web.Areas.Parametrization.Models.ConditionTaxViewModel
<script id="ConditionTaxTemplate" type="text/template">
    {{#ifCond Status "==" 2}}
    <div>

        @Resources.Language.Condition: 
        <strong class="success">
            {{DescriptionCondition}}
            {{#ifCond IdCondition "!=" ""}}
            ({{IdCondition}})
            {{/ifCond}}
        </strong> 
        
        <br />

        @Resources.Language.NationalRate:
        {{#ifCond NationalRate "==" true}}
        <strong class="success"> @Resources.Language.Yes</strong>
        {{else }}
        <strong class="success"> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

        <br />

        @Resources.Language.Independent:
        {{#ifCond Independent "==" true}}
        <strong class="success"> @Resources.Language.Yes</strong>
        {{else }}
        <strong class="success"> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

        <br />

        @Resources.Language.Enabled:
        {{#ifCond Enabled "==" true}}
        <strong class="success"> @Resources.Language.Yes</strong>
        {{else }}
        <strong class="success"> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

    </div>

    {{else ifCond Status "==" 3}}
    <div>
        @Resources.Language.Condition: 
        <strong class="warning">
            {{DescriptionCondition}}
            {{#ifCond IdCondition "!=" ""}}
            ({{IdCondition}})
            {{/ifCond}}
        </strong> 
        
        <br />

        @Resources.Language.NationalRate:
        {{#ifCond NationalRate "==" true}}
        <strong class="warning"> @Resources.Language.Yes</strong>
        {{else }}
        <strong class="warning"> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

        <br />

        @Resources.Language.Independent:
        {{#ifCond Independent "==" true}}
        <strong class="warning"> @Resources.Language.Yes</strong>
        {{else }}
        <strong class="warning"> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

        <br />

        @Resources.Language.Enabled:
        {{#ifCond Enabled "==" true}}
        <strong class="warning"> @Resources.Language.Yes</strong>
        {{else }}
        <strong class="warning"> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

    </div>

    {{else ifCond Status "==" 4}}
    <div>
        @Resources.Language.Condition: 
        <strong class="danger">
            {{DescriptionCondition}}
            {{#ifCond IdCondition "!=" ""}}
            ({{IdCondition}})
            {{/ifCond}}
        </strong> 

        <br />

        @Resources.Language.NationalRate:
        {{#ifCond NationalRate "==" true}}
        <strong class="danger"> @Resources.Language.Yes</strong>
        {{else }}
        <strong class="danger"> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

        <br />

        @Resources.Language.Independent:
        {{#ifCond Independent "==" true}}
        <strong class="danger"> @Resources.Language.Yes</strong>
        {{else }}
        <strong class="danger"> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

        <br />

        @Resources.Language.Enabled:
        {{#ifCond Enabled "==" true}}
        <strong class="danger"> @Resources.Language.Yes</strong>
        {{else }}
        <strong class="danger"> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

    </div>

    {{else }}
    <div>

        @Resources.Language.Condition: 
        <strong>
            {{DescriptionCondition}}
            {{#ifCond IdCondition "!=" ""}}
            ({{IdCondition}})
            {{/ifCond}}
        </strong> 
        
        <br />

        @Resources.Language.NationalRate:
        {{#ifCond NationalRate "==" true}}
        <strong> @Resources.Language.Yes</strong>
        {{else }}
        <strong> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

        <br />

        @Resources.Language.Independent:
        {{#ifCond Independent "==" true}}
        <strong> @Resources.Language.Yes</strong>
        {{else }}
        <strong> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

        <br />

        @Resources.Language.Enabled:
        {{#ifCond Enabled "==" true}}
        <strong> @Resources.Language.Yes</strong>
        {{else }}
        <strong> @Resources.Language.LabelNot</strong>
        {{/ifCond}}

    </div>
    {{/ifCond}}
</script>


<script id="title-template" type="text/template">
    <div class="column column-30">
        @Resources.Language.ImpositiveConditions
    </div>
    <div class="column column-70">
        <label id="titleTaxSelected"></label>
    </div>
</script>
<div class="row">
    <div class="uif-col-6">
        <form id="formConditionTax" class="form">
            <div class="row">
                <div class="uif-col-3">
                    @Html.LabelFor(model => model.IdCondition, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.IdCondition, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdCondition)
                </div>
                <div class="uif-col-9">
                    @Html.LabelFor(model => model.DescriptionCondition, htmlAttributes: new { @class = "control-label field-required" })
                    @Html.TextBoxFor(model => model.DescriptionCondition, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DescriptionCondition)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-4">
                    <label>@string.Empty</label>
                    <div class="row-space-adjusted">
                        <input type="checkbox" id="NationalRate" name="NationalRate" />
                        @Html.LabelFor(model => model.NationalRate, htmlAttributes: new { @class = "control-label" })
                    </div>
                </div>
                <div class="uif-col-4">
                    <label>@string.Empty</label>
                    <div class="row-space-adjusted">
                        <input type="checkbox" id="Independent" name="Independent" />
                        @Html.LabelFor(model => model.Independent, htmlAttributes: new { @class = "control-label" })
                    </div>
                </div>
                <div class="uif-col-4">
                    <label>@string.Empty</label>
                    <div class="row-space-adjusted">
                        <input type="checkbox" id="Enabled" name="Enabled" />
                        @Html.LabelFor(model => model.Enabled, htmlAttributes: new { @class = "control-label" })
                    </div>
                </div>
            </div>

        </form>
    </div>
    <div class="uif-col-6 fit-col-secondary">
        <div id="lvConditionTax" class="uif-listview"></div>
    </div>
</div>
<div class="row">
    <div class="uif-col-6">
        <div class="pull-right">
            <button type="button" class="btn btn-default" id="CancelCondition">@Resources.Language.ButtonNew</button>
            <button type="button" class="btn btn-primary" id="AddCondition">@Resources.Language.ButtonAdd</button>
        </div>
    </div>

</div>

<script id="footer-template" type="text/template">
    <div class="pull-right">
        <button type="button" class="btn btn-default" id="ExitCondition">
            <i class="fa fa-times"></i> @Resources.Language.ButtonClose
        </button>
        <button type="button" class="btn btn-primary" id="SaveCondition">
            <i class="fa fa-floppy-o"></i> @Resources.Language.ButtonSave
        </button>
    </div>
</script>