@model Sistran.Core.Framework.UIF.Web.Areas.Parametrization.Models.ProtectionViewModel
@{
    Layout = null;
}
<script id="ProtectionTemplate" type="text/template">
	{{#ifCond StatusTypeService "==" 2}}
	<div><strong class="success">{{DescriptionLong}}</strong></div>
	{{else ifCond StatusTypeService "==" 3}}
	<div><strong class="warning">{{DescriptionLong}} ({{Id}})</strong></div>
	{{else ifCond Status "==" 4}}
	<div><strong class="danger">{{DescriptionLong}}</strong></div>
	{{else}}
	<div><strong>{{DescriptionLong}} ({{Id}})</strong></div>
	{{/ifCond }}
	<div class="hidden">
		{{StatusType}}
	</div>

</script>

<script id="title-template" type="text/template">
    <div class="column-70">
        @Resources.Language.LabelProtections
    </div>
    <div class="column-30 even">
        <input type="text" id="inputSearchProtection" class="uif-input-search" placeholder="@Resources.Language.SearchProtection" />
    </div>
</script>

<script id="footer-template" type="text/template">
    <div class="pull-right">
        <button class="btn btn-default cancel" id="btnExit">
            <i class="fa fa-times-circle" aria-hidden="true"></i>
            <span class="" aria-hidden="true"></span>
            @Resources.Language.ButtonExit
        </button>
        <button class="btn btn-default" id="btnExport">
            <i class="fa fa-download" aria-hidden="true"></i>
            <span class="" aria-hidden="true"></span>
            @Resources.Language.ButtonExport
        </button>

        <button class="btn btn-primary" id="btnSaveProtection" @*style="display: none"*@>
            <i class="fa fa-floppy-o" aria-hidden="true"></i>
            <span class="" aria-hidden="true"></span>
            @Resources.Language.SaveProtection
        </button>
    </div>
</script>
<form id="formProtection" autocomplete="off" class="form without-space">
    <div class="row">
        <input type="hidden" id="inputId" value="0" />
        <div class="uif-col-6">
            <br />
            <div class="row">
                <div class="uif-col-12">
                    <label class="field-required">@Resources.Language.LabelLongDescription</label>
                    @Html.TextBoxFor(model => model.DescriptionLong, new { id = "inputLongDescription", maxlength = 50 })
                    @Html.ValidationMessageFor(model => model.DescriptionLong)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-6">
                    <label class="field-required">@Resources.Language.LabelShortDescription</label>
                    @Html.TextBoxFor(model => model.DescriptionShort, new { id = "inputShortDescription", maxlength = 15 })
                    @Html.ValidationMessageFor(model => model.DescriptionShort)
                </div>
            </div>
        </div>
        <div class="uif-col-6 fit-col-secondary" id="panelProtection">
            <div id="listProtection" class="uif-listview"></div>
        </div>
    </div>
    <div class="row lineDividing">
        <div class="uif-col-6 center-col-right-Proteccion" id="btnsProtection">
            <div class="pull-right width-save">
                <button type="button" class="btn btn-default" id="btnNewProtection">@Resources.Language.New</button>
                <button type="button" class="btn btn-primary" id="btnProtectionAccept">@Resources.Language.Add</button>

            </div>
        </div>
    </div>
</form>
