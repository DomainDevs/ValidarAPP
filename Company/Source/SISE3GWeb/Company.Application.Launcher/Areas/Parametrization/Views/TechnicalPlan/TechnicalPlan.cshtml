@model Sistran.Core.Framework.UIF.Web.Areas.Parametrization.Models.TechnicalPlanViewModel
@{
	Layout = null;
}

@*Titulo - Busqueda*@
<script id="title-template" type="text/template">
	<div class="column-70">
		<div id="Title">@Resources.Language.LabelTechnicalPlan</div>
	</div>	
	<div class="column-30 even">
		@Html.TextBox("Id", null, new { @class = "uif-input-search", @id = "SearchTechnicalPlan", @placeholder = @Resources.Language.LabelPlaceHolderSearchTechnicalPlan })
		<button class="btn btn-default" id="BtnSearchAdvTechnicalPlan"><i class="fa fa-angle-down"></i></button>
	</div>
</script>

@*Footer Botones*@
<script id="footer-template" type="text/template">
	<div class="pull-right">
		<button class="btn btn-default cancel" id="BtnExitTechnicalPlan">
			<i class="fa fa-times" aria-hidden="true"></i>
			<span class="" aria-hidden="true"></span>
			@Resources.Language.ButtonExit
		</button>
		<button class="btn btn-default" id="BtnDeleteTechnicalPlan">
			<i class="fa fa-trash" aria-hidden="true"></i>
			<span class="" aria-hidden="true"></span>
			@Resources.Language.ButtonDelete
		</button>
		<button class="btn btn-default" id="BtnNewTechnicalPlan">
			<i class="fa fa-file-o" aria-hidden="true"></i>
			<span class="" aria-hidden="true"></span>
			@Resources.Language.ButtonNew
		</button>
		<button class="btn btn-default" id="BtnExportTechnicalPlan">
			<i class="fa fa-cloud-download" aria-hidden="true"></i>
			<span aria-hidden="true"></span>
			@Resources.Language.ButtonExport
		</button>
		<button class="btn btn-primary" id="BtnSaveTechnicalPlan">
			<i class="fa fa-floppy-o" aria-hidden="true"></i>
			<span aria-hidden="true"></span>
			@Resources.Language.ButtonSave
		</button>
	</div>
</script>

<form id="FormTechnicalPlan" class="form">
	@Html.Hidden("TechnicalPlanId")
	@Html.Hidden("TechnicalPlanStatus")
	<div class="uif-col-9 fit-col-main">
		<div class="row">
			<div class="uif-col-6">
				@Html.LabelFor(model => model.Description, new { @class = "field-required" })
				@Html.TextBoxFor(model => model.Description, new { @id = "TechnicalPlanDescription" })
				@Html.ValidationMessageFor(model => model.Description)
			</div>
			<div class="uif-col-6">
				@Html.LabelFor(model => model.ShortDescription, new { @class = "field-required" })
				@Html.TextBoxFor(model => model.ShortDescription, new { @id = "TechnicalPlanShortDescription" })
				@Html.ValidationMessageFor(model => model.ShortDescription)
			</div>
		</div>
		<div class="row">
            <div class="uif-col-6">
                @Html.LabelFor(m => m.RiskTypeId, new { @class = "field-required" })
                <select class="uif-select form-control" id="TechnicalPlanCoveredRiskType" data-id="Id" data-name="ShortDescription" name="RiskTypeId"
                        data-filter="true" data-native="false"></select>
                @*@Html.DropDownListFor(m => m.RiskTypeId, new List<SelectListItem>(), new { @class = "uif-select form-control", @id = "TechnicalPlanCoveredRiskType" })*@
                @Html.ValidationMessageFor(m => m.RiskTypeId)
            </div>
		</div>
	</div>
	@*Menu Parcial*@
	<div class="uif-col-3 fit-col-secondary">
		<div class="uif-right-bar" id="PanelButtonsRight">
			<ul>
				<li>
					<a href="#" id="BtnCoverages">@Resources.Language.LabelCoverages</a> <p id="SelectedCoverages"></p>
				</li>
			</ul>
		</div>
	</div>
</form>

@*Modales*@
<div class="uif-modal" id="ModalCoverages">
	<div class="uif-modalbody">
		@Html.Partial("TechnicalPlanCoverages")
	</div>	
</div>
<div class="uif-modal" id="ModalAllyCoverages">
	<div class="uif-modalbody">
		@Html.Partial("TechnicalPlanAllyCoverages")
	</div>
    <div id="ButtonsTechnicalPlanAllyCoverages" class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="BtnModalAllyCoverageClose">@Resources.Language.ButtonClose</button>
        <button type="button" class="btn btn-primary" id="BtnModalAllyCoverageSave">@Resources.Language.ButtonAccept</button>
    </div>
</div>