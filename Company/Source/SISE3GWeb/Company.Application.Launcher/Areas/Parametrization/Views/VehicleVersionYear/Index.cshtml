@model Sistran.Core.Framework.UIF.Web.Areas.Parametrization.Models.VehicleVersionYearViewModel
@{
    Layout = null;
}
@*Titulo - Busqueda*@
<script id="title-template" type="text/template">
    <div class="column">
        @Resources.Language.ValueVehiclesYear
    </div>    
    <div class="column-1">
        <button class="btn btn-default" id="btnShowSearchAdv"><i class="fa fa-angle-down"></i></button>        
    </div>
</script>
@*Footer Botones*@
<script id="footer-template" type="text/template">
    <div class="pull-right">
        <button class="btn btn-default" id="btnExit">
            <i class="fa fa-times" aria-hidden="true"></i>
            <span class="" aria-hidden="true"></span>
            @Resources.Language.ButtonExit
        </button>
        <button class="btn btn-default" id="btnDelete">
            <i class="fa fa-floppy-o" aria-hidden="true"></i>
            <span aria-hidden="true"></span>
            @Resources.Language.ButtonDelete
        </button>
        <button class="btn btn-default" id="btnClear">
            <i class="fa fa-floppy-o" aria-hidden="true"></i>
            <span aria-hidden="true"></span>
            @Resources.Language.ButtonNew
        </button>
        <button class="btn btn-default" id="btnExport">
            <i class="fa fa-cloud-download" aria-hidden="true"></i>
            <span aria-hidden="true"></span>
            @Resources.Language.ButtonExport
        </button>
        <button class="btn btn-primary" id="btnSave">
            <i class="fa fa-floppy-o" aria-hidden="true"></i>
            <span aria-hidden="true"></span>
            @Resources.Language.ButtonSave
        </button>
    </div>
</script>

<form id="formVehicleVersionYear">
    <br />
    <input type="hidden" id="Status" name="Status" value="" />
    <div class="row">
        <div class="uif-col-3">
            <label class="field-required">@Resources.Language.LabelMake</label>
            <select class="uif-select" data-filter="true" data-native="false" data-val-required="true"
                    data-val="true" data-id="Id" data-name="Description" id="MakeId" name="MakeId"></select>
            @Html.ValidationMessage("MakeId", Resources.Language.FieldRequired)
        </div>
        <div class="uif-col-3">
            <label class="field-required">@Resources.Language.LabelModel</label>
            <select class="uif-select" data-filter="true" data-native="false" data-val-required="true"
                    data-val="true" data-id="Id" data-name="Description" id="ModelId" name="ModelId"></select>
            @Html.ValidationMessage("ModelId", Resources.Language.FieldRequired)
        </div>
        <div class="uif-col-3">
            <label class="field-required">@Resources.Language.LabelVersion</label>
            <select class="uif-select" data-filter="true" data-native="false" data-val-required="true"
                    data-val="true" data-id="Id" data-name="Description" id="VersionId" name="VersionId"></select>
            @Html.ValidationMessage("VersionId", Resources.Language.FieldRequired)
        </div>
        <div class="uif-col-2">
            @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label field-required" })
            @Html.TextBoxFor(model => model.Year, new { @maxlength = 4 })
            @Html.ValidationMessageFor(model => model.Year)
        </div>
    </div>
    <div class="row">
        <div class="uif-col-3">
            <label class="field-required">@Resources.Language.LabelCurrencies</label>
            <select class="uif-select" data-filter="true" data-native="false" data-val-required="true"
                    data-val="true" data-id="Id" data-name="Description" id="CurrencyId" name="CurrencyId"></select>
            @Html.ValidationMessage("CurrencyId", Resources.Language.FieldRequired)
        </div>
        <div class="uif-col-3">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label field-required" })
            @Html.TextBoxFor(model => model.Price, new { @maxlength = 16 })
            @Html.ValidationMessageFor(model => model.Price)
        </div>
    </div>
</form>