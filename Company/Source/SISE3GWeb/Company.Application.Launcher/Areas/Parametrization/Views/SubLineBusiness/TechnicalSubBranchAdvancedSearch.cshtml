@model Sistran.Core.Framework.UIF.Web.Areas.Parametrization.Models.TechnicalSubBranchViewModel
<script id="advancedSearchSubBranchTemplate" type="text/template">
    <div>@Resources.Language.SubBranchCode: <strong>{{Id}}</strong></div>
    <div>
        <br>
        @Resources.Language.NameLengthofBranch:<strong>{{LineBusinessDescription}}</strong>
    </div>
    <div>
        <br>
        @Resources.Language.NameLengthofSubBranch:<strong>{{Description}}</strong>
    </div>
    <div>
        <br>
        @Resources.Language.NameShortofSubBranch: <strong>{{SmallDescription}}</strong>
    </div>
</script>

<div class="uif-alert" id="alertAdvanced"></div>
<form class="form">
    <div class="row">
        <div class="uif-col-12">
            <h4>@Resources.Language.AdvancedSubBranch</h4>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <label>@Resources.Language.NameTechnicalSubBranch</label>
            @Html.TextBoxFor(model => model.Description, new { id = "inputDescriptionSearch", placeholder = @Resources.Language.LabelDescriptionLong })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <label>@Resources.Language.TitleTechnicalBranch</label>
            <select class="uif-select form-control" id="selectLineBussinesSearch" data-id="Id" data-native="false" data-name="Description" name="LineBusinessId"
                    data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlPrefixTechnical"></select>
            @Html.ValidationMessageFor(model => model.LineBusinessId)
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <div class="without-label">
                <button type="button" name="name" id="btnShowSearch" class="btn btn-primary-Co width-container">@Resources.Language.search</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="uif-col-12">
            <div class="uif-listview" id="listViewSearchAdvancedSubRamo">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <div class="pull-right width-save">
                <button class="btn btn-default" id="btnCancelSearchAdv" type="button">@Resources.Language.Close</button>
                <button class="btn btn-primary" id="btnAcepSubBranch" type="button">@Resources.Language.Accept</button>
            </div>
        </div>
    </div>
</form>