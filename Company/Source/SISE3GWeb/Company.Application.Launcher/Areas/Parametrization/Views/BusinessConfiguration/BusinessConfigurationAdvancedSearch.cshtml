@{
    Layout = null;
}
<form class="form">
    <div class="row">
        <div class="uif-col-12">
            <h4>@Resources.Language.AdvancedSearch</h4>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <label>@Resources.Language.LabelBusinessDescription</label>
            <input type="text" name="Description" value="" id="inputDescriptionSearch" onkeyup="this.value = this.value.toUpperCase()" />
        </div>
    </div>
    <div class="row">
        <div class="uif-col-6">
            <label>@Resources.Language.CodeBusiness</label>
            <input type="text" id="inputCodeBusinessSearch" name="BusinessId" onKeyPress="return check(event,value)" onInput="checkLength()"/>
        </div>
        <div class="uif-col-6">
            <label class="field-required">@Resources.Language.LabelPrefixCommercial</label>
            <select class="uif-select form-control" id="selectPrefixCodeSearch" data-val="true" data-val-required="@Resources.Language.ErrorPrefix" data-id="PrefixCode" data-name="PrefixDescription" name="PrefixCodeSearch" data-filter="true" data-native="false"></select>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">            
            <button type="button" id="btnAdvancedSearchQuery" class="btn btn-primary-Co width-container">@Resources.Language.search</button>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <div class="uif-listview" id="lvSearchAdvBusinessConfiguration">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="uif-col-12">
            <div class="pull-right width-save">
                <button class="btn btn-default" id="btnCancelSearchAdv" type="button">@Resources.Language.Close</button>
                <button class="btn btn-primary" id="btnOkSearchAdv" type="button">@Resources.Language.Accept</button>
            </div>
        </div>
    </div>
</form>
