@*Fields ListView*@
<script id="advSearchTemplate" type="text/template">
    <div>
        <div>
            @Resources.Language.LabelLineBusiness: {{LineBusiness.Description}} ({{LineBusiness.Id}})
        </div>
        <div>
            @Resources.Language.LabelInsuranceObject: {{InsuredObject.Description}}({{InsuredObject.Id}})
        </div>
        <div>
            @Resources.Language.LabelProtection: {{Peril.Description}}({{Peril.Id}})
        </div>
        <div>
            @Resources.Language.LabelNameCoverage: <strong><span>{{Description}}({{Id}})</span></strong>
        </div>        
    </div>
</script>

@*Formulario Principal*@
<form id="formAdv">
    <div class="row">
        <div class="uif-col-12">
            <h4>@Resources.Language.AdvancedSearch</h4>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-6">
            <label>@Resources.Language.LabelLineBusiness</label>
            <select class="uif-select form-control" id="selectLineBusinessAdv" data-id="Id" data-name="Description" name="LineBusinessId" data-filter="true" data-native="false"></select>
        </div>
        <div class="uif-col-6">
            <label>@Resources.Language.LabelInsuranceObject</label>
            <select class="uif-select form-control" id="selectInsuranceObjectAdv" data-id="Id" data-name="Description" name="InsuredObjectId" data-filter="true" data-native="false"></select>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-6">
            <label>@Resources.Language.LabelProtection</label>
            <input type="text" id ="PerilDescription" name="PerilDescription" value="" data-val="true" data-val-length-max="50" data-val-length="@Resources.Language.ErrorMaximumLength50" placeholder ="@Resources.Language.LabelProtection"/>            
            @Html.ValidationMessage("PerilDescription")

        </div>
        <div class="uif-col-6">
            <label>@Resources.Language.NameCoverage</label>
            <input type="text" id="inputCoverageNameAdv" name="Description" value="" data-val="true" data-val-length-max="50" data-val-length="@Resources.Language.ErrorMaximumLength50" placeholder="@Resources.Language.NameCoverage" />
            @Html.ValidationMessage("Description")            
        </div>
    </div>    
</form>
<div class="row">
    <div class="uif-col-12">
        <button class="btn btn-primary-Co width-container" id="btnAdvancedSearch">
            <span aria-hidden="true">@Resources.Language.ButtonSearch</span>
        </button>
    </div>
</div>
<div class="row">
    <div class="uif-col-12">
        <div class="uif-listview" id="listViewSearchAdvanced"></div>
    </div>
</div>
<div class="row">
    <div class="uif-col-12">
        <div class="pull-right width-save">
            <button class="btn btn-default" id="btnCancelSearch" data-dismiss="modal" type="button">@Resources.Language.Close</button>
            <button class="btn btn-primary" id="btnLoadCoverage" type="button">@Resources.Language.Accept</button>
        </div>
    </div>
</div>
