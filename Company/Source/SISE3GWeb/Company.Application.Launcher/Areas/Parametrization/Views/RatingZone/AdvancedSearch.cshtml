@{
    Layout = null;
}


<form class="form">
    <div class="row">
        <div class="uif-col-12">
            <h4>@Resources.Language.AdvancedSearch</h4>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <label class="">@Resources.Language.LabelPrefix</label>
            <select class="uif-select" name="Id" id="PrefixCodeBus" data-id="Id" data-name="Description" data-val="true" data-val-required="true"
                    data-filter="true" data-native="false"></select>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            @Html.Label(Resources.Language.NameRatingZone)
            @Html.TextBox("advDescription", "")
        </div>
    </div>

    <div class="row">
        <div class="uif-col-12">
            <button class="btn btn-primary-Co width-container" id="btnSearchAdvSearch" type="button">
                <span aria-hidden="true"></span>
                @Resources.Language.search
            </button>
        </div>
    </div>

    <div class="row">
        <div class="uif-col-12">
            <div id="listRatingZoneAdvSearch" class="uif-listview"></div>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <div class="pull-right width-save">
                <button class="btn btn-default" id="btnCancelAdvSearch" type="button">@Resources.Language.Close</button>
                <button class="btn btn-primary" id="btnAcceptAdvSearch" type="button">@Resources.Language.Accept</button>
            </div>
        </div>
    </div>
</form>
