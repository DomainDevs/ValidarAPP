@{
    Layout = null;
}
<script id="title-template" type="text/template">
    <div class="column-90">
        @Resources.Language.LackPeriods
    </div>
    <div class="column-10 even">

    </div>
</script>
<form id="formLackPeriod" class="form">
    <div class="uif-col-12">
        <div class="row">
            <div class="uif-col-4">
                <label>@Resources.Language.Prefix</label>
                <select class="uif-select form-control" id="selectPrefix"
                        data-id="Id" data-name="Description" name="PrefixId"
                        data-filter="true" data-native="false"></select>
            </div>

            <div class="uif-col-4">
                <label>@Resources.Language.LabelCause</label>
                <select class="uif-select form-control" id="selectCause"
                        data-id="Id" data-name="Description" name="CauseId"
                        data-filter="true" data-native="false"></select>
            </div>

            @*<div class="without-label">
                <button type="button" class="btn btn-default secondary-Colombia" id="btnsavesubcause" data-id="Id">
                    Agregar
                </button>
            </div>*@
        </div>
    </div>
    <div class="uif-col-12">
        <table class="uif-table" id="tblLackPeriod" data-pagesize="10"  data-add="true" data-edit="true" data-delete="true" data-title="<b>Cobertura Asignada</b>" data-selectiontype="none">
            <thead>
                <tr>
                    <th data-property="Description"><b>@Resources.Language.Description</b></th>
                    <th data-property="Id"><b>@Resources.Language.LabelLackPeriod</b></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</form>
