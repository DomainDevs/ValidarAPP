@model Sistran.Core.Framework.UIF.Web.Areas.Parametrization.Models.AllyCoverageViewModel
@{
    Layout = null;
}
@section title
{
    <div class="row main-title">
        <div class="column-70">
            Cobertura Aliada
        </div>
        <div class="column-30 even">
        </div>
    </div>
}

    <script type="text/template" id="display-template-AllyCoverage">
        {{#ifCond Status "==" 2}}
        <div><strong class="success">Cobertura principal: </strong> {{CoverageId}} -<strong class="success">Desc.:</strong> {{CoverageId_object.PrintDescription}}</div>
        <div><strong class="success">Cobertura Aliada: </strong> {{AllyCoverageId}} -<strong class="success">Desc.:</strong> {{AllyCoverageId_object.PrintDescription}}</div>
        <div><strong class="success">Porcentaje:</strong>{{CoveragePct}} <strong>%</strong></div>
        {{else ifCond Status "==" 3}}
        <div><strong class="warning">Cobertura principal: </strong> {{CoverageId}} -<strong class="warning">Desc.:</strong> {{CoverageId_object.PrintDescription}}</div>
        <div><strong class="warning">Cobertura Aliada: </strong> {{AllyCoverageId}} -<strong class="warning">Desc.:</strong> {{AllyCoverageId_object.PrintDescription}}</div>
        <div><strong class="warning">Porcentaje:</strong>{{CoveragePct}} <strong>%</strong></div>
        {{else ifCond Status "==" 4}}
        <div><strong class="danger">Cobertura principal: </strong> {{CoverageId}} -<strong class="danger">Desc.:</strong> {{CoverageId_object.PrintDescription}}</div>
        <div><strong class="danger">Cobertura Aliada: </strong> {{AllyCoverageId}} -<strong class="danger">Desc.:</strong> {{AllyCoverageId_object.PrintDescription}}</div>
        <div><strong class="danger">Porcentaje:</strong>{{CoveragePct}} <strong>%</strong></div>
        {{else}}
        <div><strong>Cobertura principal: </strong> {{CoverageId}} - <strong>Desc.: </strong> {{CoverageId_object.PrintDescription}}</div>
        <div><strong>Cobertura Aliada: </strong> {{AllyCoverageId}} -<strong>Desc.:</strong> {{AllyCoverageId_object.PrintDescription}}</div>
        <div><strong>Porcentaje: </strong> {{CoveragePct}} <strong>%</strong></div>
        {{/ifCond}}
    </script>

@*Titulo - Busqueda*@
<script id="title-template" type="text/template">
    <div id="title" class="column-40">
        Cobertura Aliada
    </div>
    <div class="column-60">
    </div>
    <div class="column-04 even">
        @*@Html.TextBox("GroundsRejectionSearch", null, new { @class = "uif-input-search", id = "inputGroundsGroupPolicies", placeholder = Resources.Language.SearchGroupPolicies })*@
        <button class="btn btn-default" id="btnSearchAdvScript"><i class="fa fa-angle-down"></i></button>
    </div>
</script>
@*Body Content*@
<form id="AllyCoverageForm">
    <div class="row">
        <div class="uif-col-6 fit-col-main">
            <div class="row">
                <div class="uif-col-6">
                    <label class="field-required">Cobertura Principal</label>
                    <select class="uif-select" name="PrincipalCoverage" id="PrincipalCoverageId" data-id="Id" data-native="false" data-name="PrintDescription" data-val="true" data-val-required="@Resources.Language.OptionSelect"></select>
                    @Html.ValidationMessageFor(model => model.CoverageId)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-6">
                    <label>Coberturas</label>
                    <select class="uif-select" name="Coverage" id="IdAllyCoverage" data-id="Id" data-name="PrintDescription" data-native="false" data-val="true" data-val-required="@Resources.Language.OptionSelect"></select>
                    @Html.ValidationMessageFor(model => model.AllyCoverageId)
                </div>
                <div class="uif-col-4">
                    <label>Porcentaje</label>
                    @Html.TextBoxFor(model => model.CoveragePct, new { @Id = "IdAllyCoveragePct", @class = "text-center" })
                </div>
            </div>
        </div>
        <div class="uif-col-6 fit-col-secondary">
            <div id="lsvAllyCoverages" class="uif-listview"></div>
        </div>
    </div>
    <div class="row lineDividing">
        <div class="uif-col-6 center-col-right">
            <div class="pull-right width-save">
                <button type="button" class="btn btn-default" id="btnAllyCoverageNew">
                    <span aria-hidden="true"></span>
                    @Resources.Language.NewForm
                </button>
                <button type="button" class="btn btn-primary" id="btnAllyCoverageAccept">
                    <span aria-hidden="true"></span>
                    @Resources.Language.AddForm
                </button>
            </div>
        </div>
        <div class="uif-col-6" id="summaryAgent">
            <div class="uif-summary">
                <div class="items">
                </div>
            </div>
        </div>
    </div>
    <script id="footer-template" type="text/template">
        <div class="pull-right">
            <button class="btn btn-default cancel" id="btnExit">
                <i class="fa fa-times" aria-hidden="true"></i>
                <span class="" aria-hidden="true"></span>
                @Resources.Language.ButtonExit
            </button>
            <button type="button" class="btn btn-default width" id="btnExport">
                <i class="fa fa-download" aria-hidden="true"></i>
                <span class="" aria-hidden="true">  </span>
                @Resources.Language.ButtonExport
            </button>
            <button class="btn btn-primary" id="btnSave">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                <span aria-hidden="true"></span>
                @Resources.Language.ButtonSave
            </button>

        </div>
    </script>
</form>

@section Scripts
{
    @Scripts.Render("~/bundle/js/AllyCoverage")
}