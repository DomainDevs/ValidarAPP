@model Sistran.Core.Framework.UIF.Web.Areas.Parametrization.Models.LineBusinessViewModel
@{
    Layout = null;
}

<script id="LineBusinessTemplate" type="text/template">
    <div>Ramo Técnico: <strong>{{RamoTecnico}}</strong></div>
    <div>
        <br>
        ID: <strong>{{Id}}</strong>
    </div>
    <div>
        <br>
        Descripción <strong>{{DescriptionRiskType}}</strong>
    </div>
    <div>
        <p class="warning">
            <strong>{{EnabledDescription}}</strong>
            </>
    </div>
</script>

@*Titulo - Busqueda*@
<script id="title-template" type="text/template">
    <div id="title" class="column-70">
        @Resources.Language.TitleTechnicalBranch
    </div>
    <div class="column-30 even">
        @Html.TextBox("inputLineBusinessSearch", null, new { @class = "uif-input-search", id = "inputLineBusinessSearch", @placeholder = @Resources.Language.LabelPlaceHolderSearchTechnicalBranch})
        <button type="button" class="btn btn-default" id="btnShowAdvanced"><i class="fa fa-angle-down"></i></button>
    </div>
</script>

@*Footer Botones*@
<script id="footer-template" type="text/template">
    <div class="pull-right">
        <button type="button" class="btn btn-default cancel" id="btnExit">
            <i class="fa fa-times-circle" aria-hidden="true"></i>
            <span class="" aria-hidden="true"></span>
            @Resources.Language.ButtonExit
        </button>
        <button type="button" class="btn btn-default" id="btnDelete">
            <span class="" aria-hidden="true"></span>
            @Resources.Language.Delete
        </button>
		<button type="button" class="btn btn-default" id="btnNew">
			<span class="" aria-hidden="true"></span>
			@Resources.Language.New
		</button>
        <button type="button" class="btn btn-default" id="btnExport">
            <i class="fa fa-download" aria-hidden="true"></i>
            <span class="" aria-hidden="true"></span>
            @Resources.Language.ButtonExport
        </button>
        <button type="button" class="btn btn-primary" id="btnNewLineBusiness">
            <i class="fa fa-floppy-o" aria-hidden="true"></i>
            <span class="" aria-hidden="true"></span>
            @Resources.Language.SaveTechnicalBranch
        </button>
    </div>
</script>

@*Formulario Principal*@
<form id="formLineBusiness" autocomplete="off" class="form">
    <div class="uif-col-9 fit-col-main">
        <div class="uif-row">
            <div class="uif-col-4">
                <label class="field-required">@Resources.Language.LabelTechnicalBranchCode</label>
                @Html.TextBoxFor(model => model.Id, new { id = "inputLineBusinessCode" })
                @Html.ValidationMessageFor(model => model.Id)
            </div>
            <div class="uif-col-6">
                <label class="field-required">@Resources.Language.LabelDescriptionLong</label>
                @Html.TextBoxFor(model => model.LongDescription, new { id = "inputDescriptionLong" })
                @Html.ValidationMessageFor(model => model.LongDescription)
            </div>
        </div>

        <div class="uif-row">
            <div class="uif-col-4">
                <label class="field-required">@Resources.Language.LabelDescriptionShort</label>
                @Html.TextBoxFor(model => model.ShortDescription, new { id = "inputDescriptionShort" })
                @Html.ValidationMessageFor(model => model.ShortDescription)
            </div>
            <div class="uif-col-3">
                <label class="field-required">@Resources.Language.LabelAbbreviation</label>
                @Html.TextBoxFor(model => model.TyniDescription, new { id = "inputAbbreviation" })
                @Html.ValidationMessageFor(model => model.TyniDescription)
            </div>
        </div>

        <div class="uif-row">
            <div class="uif-col-6">
                <label class="field-required">@Resources.Language.MessageRiskType</label>

                <div class="input-with-buttons">

                    <select class="uif-select form-control" id="selectRiskTypeLineBusinessMain" data-id="Id" data-name="Description" name="RiskTypeId"
                            data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlRiskTypeCovered"
                            data-filter="true" data-native="false"></select>
                    @Html.ValidationMessageFor(model => model.RiskTypeId)
                    @Html.HiddenFor(model => model.RiskTypeId)
                    <button type="button" class="btn btn-primary" id="btnRiskTypeLineBusiness">
                        <span class="glyphicon glyphicon glyphicon-plus"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="uif-row hidden">
            <div class="uif-col-9">
                <div class="uif-col-6 fit-col-secondary" id="panelModule">
                    <div id="listviewLineBusiness" class="uif-listview"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="uif-col-3 fit-col-secondary">
        <div class="uif-right-bar" id="panelButtonsRight">
            <ul>
                <li>
                    <a href="#" id="btnInsuranceObjects">@Resources.Language.LabelInsuredObject</a>
                    <p id="selectedCoInsurance"></p>
                </li>
                <li>
                    <a href="#" id="btnProtections">@Resources.Language.LabelProtections</a>
                    <p id="selectedProtections"></p>
                </li>
                <li>
                    <a href="#" id="btnClauses">@Resources.Language.LabelClauses</a>
                    <p id="selectedClauses"></p>
                </li>
            </ul>
        </div>
    </div>
</form>

