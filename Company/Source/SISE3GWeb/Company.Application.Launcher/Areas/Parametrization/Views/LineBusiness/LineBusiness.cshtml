@*Modales*@
<form id="formRiskTypeLineBusiness">
    <div class="uif-modal" id="ModalRiskTypeLineBusiness">
        <div class="uif-modalbody">
            @Html.Partial("RiskType")
        </div>
        <div class="uif-modalbuttons">
            <button type="button" class="btn btn-default" id="btnCancelModalRiskType" data-dismiss="modal">@Resources.Language.Close</button>
            <button type="button" class="btn btn-primary" id="btnSave">@Resources.Language.SaveTechnicalBranch </button>
        </div>
    </div>
</form>

<form id="FormInsuranceObjects">
    <div class="uif-modal" id="ModalInsuranceObjects">
        <div class="uif-modalbody">
            @Html.Partial("Insuranceobjects")
        </div>
        <div class="uif-modalbuttons">
            <button type="button" class="btn btn-default cancel" id="btnCloseobjects" data-dismiss="modal">
                @Resources.Language.ButtonClose
            </button>
            <button type="button" class="btn btn-primary" id="btnSaveObjects">
                @Resources.Language.SaveTechnicalSubBranch
            </button>
        </div>
    </div>
</form>

<form id="FormProtection">
    <div class="uif-modal" id="ModalProtection">
        <div class="uif-modalbody">
            @Html.Partial("Protection")
        </div>
        <div class="uif-modalbuttons">
            <button type="button" class="btn btn-default cancel" id="btnCloseProtection" data-dismiss="modal">
                @Resources.Language.ButtonClose
            </button>
            <button type="button" class="btn btn-primary" id="btnSaveProtection">
                @Resources.Language.SaveTechnicalSubBranch
            </button>
        </div>
    </div>
</form>

<div class="uif-modal" id="modalClauses">
    <div class="uif-modalbody">
        @Html.Partial("Clauses")
    </div>
    <div id="buttonsClauses" class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="btnModalClausesClose">@Resources.Language.ButtonClose</button>
        <button type="button" class="btn btn-primary" id="btnModalClausesSave">@Resources.Language.ButtonSave</button>
    </div>
</div>

