@*Footer Botones*@
<script id="footer-template" type="text/template">
    <div class="pull-right">
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0289"))
        {
            <button class="btn btn-default" id="btnExentoSarlaft" style="display: none">
                <i class="fa fa-file-o" aria-hidden="true"></i>
                <span class="" aria-hidden="true"></span>
                @Resources.Language.ButtonExempt
            </button>
        }
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0288"))
        {
            <button class="btn btn-default cancel" id="btnExitSarlaft">
                <i class="fa fa-times" aria-hidden="true"></i>
                <span class="" aria-hidden="true"></span>
                @Resources.Language.ButtonExit
            </button>
        }
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0287"))
        {
            <button class="btn btn-default" id="btnNewSarlaft">
                <i class="fa fa-file-o" aria-hidden="true"></i>
                <span class="" aria-hidden="true"></span>
                @Resources.Language.ButtonNew
            </button>
        }
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0037"))
        {
            <button class="btn btn-default cancel" id="btnEditSarlaft">
                <i class="fa fa-pencil" aria-hidden="true"></i>
                <span class="" aria-hidden="true"></span>
                @Resources.Language.ButtonEdit
            </button>
        }
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0285"))
        {
            <button class="btn btn-default" id="btnConsultSarlaft">
                <i class="fa fa-search" aria-hidden="true"></i>
                <span aria-hidden="true"></span>
                @Resources.Language.ButtonConsult
            </button>
        }

        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0286"))
        {
            <button class="btn btn-primary" id="btnSaveSarlaft">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                <span aria-hidden="true"></span>
                @Resources.Language.ButtonSave
            </button>
        }

    </div>
</script>

