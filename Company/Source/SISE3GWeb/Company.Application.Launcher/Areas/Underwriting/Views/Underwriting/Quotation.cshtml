@{
    Layout = null;
}

<script id="title-template" type="text/template">
    <div class="column-40">
        @Resources.Language.DataQuotation
    </div>
    <div class="column-30 no-padding">
        <div class="date important">
            <i class="fa fa-calendar"></i>@Resources.Language.LabelDateIssuance<span id="inputIssueDate"></span>
        </div>
    </div>
    <div class="column-30 even">
        @Html.TextBox("Id", null, new { @class = "uif-input-search", id = "inputQuotation", @placeholder = @Resources.Language.SearchTemporal })
        <button class="btn btn-default" id="btnShowAdvQuot"><i class="fa fa-angle-down"></i></button>
    </div>
</script>
<script id="footer-template" type="text/template">
    <div id="buttonsUnderwriting" class="footerUnderwriting">
        <button class="btn btn-default cancel" id="btnExit">
            <i class="fa fa-times-circle" aria-hidden="true"></i>
            <span class="" aria-hidden="true"></span>
            @Resources.Language.ButtonExit
        </button>
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0717"))
        {
            <button type="button" class="btn btn-default" id="btnNewVersion">
                <i class="fa fa-file-o" aria-hidden="true"></i>
                <span class="" aria-hidden="true"></span>
                @Resources.Language.ButtonNewVersion
            </button>
        }

        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0716"))
        {
            <button type="button" class="btn btn-default" id="btnNewQuotation">
                <i class="fa fa-file-o" aria-hidden="true"></i>
                <span class="" aria-hidden="true"></span>
                @Resources.Language.ButtonNewQuotation
            </button>
        }

        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0715"))
        {
            <button class="btn btn-primary" id="btnIssuePolicy">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                <span class="" aria-hidden="true">@Resources.Language.IssuePolicy</span>
            </button>
        }
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0714"))
        {
            <button type="button" class="btn btn-default" id="btnSaveTempQuotation">
                <i class="fa fa-save" aria-hidden="true"></i>
                <span class="" aria-hidden="true"></span>
                @Resources.Language.ButtonSaveTemporal
            </button>
        }

        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0713"))
        {
            <button type="button" class="btn btn-default" id="btnSaveQuotation">
                <i class="fa fa-save" aria-hidden="true"></i>
                <span class="" aria-hidden="true"></span>
                @Resources.Language.QuotationSave
            </button>
        }

    </div>
</script>

<div class="uif-alert" id="alert"></div>

<div id="uif-spinner-loading" hidden="hidden">
    <div class="spinner spinner-three-bounce">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
    </div>
</div>

@Html.Partial("~/Areas/Underwriting/Views/Underwriting/Underwriting.cshtml")