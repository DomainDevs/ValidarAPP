@{
    Layout = null;
}
@model Sistran.Company.Application.Transports.TransportApplicationService.DTOs.TransportDTO


<script id="title-template" type="text/template">
    <div class="column-80">
        @Resources.Language.DataRisk
    </div>
    <div class="column-20 even">
        <i class="fa fa-file-o" aria-hidden="true"></i>
        <div id="globalTitle"></div>
    </div>
</script>
<script id="footer-template" type="text/template">
    <div id="buttonsVehicle">
        <button type="button" class="btn btn-default" id="btnClose">
            <span aria-hidden="true"></span>
            @Resources.Language.ButtonClose
        </button>
        <button type="button" class="btn btn-default" id="btnDeleteRisk">
            <span class="" aria-hidden="true">
                @Resources.Language.RiskDelete
            </span>
        </button>
        <button type="button" class="btn btn-default" id="btnAddRisk">
            <span class="" aria-hidden="true">
                @Resources.Language.RiskNew
            </span>
        </button>

        <button type="button" class="btn btn-primary" id="btnAccept">
            <span aria-hidden="true"></span>
            @Resources.Language.RiskSave
        </button>
    </div>
</script>
<!-- Barra y circulo superior-->
<div id="uif-spinner-loading" hidden="hidden">
    <div class="spinner spinner-three-bounce">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
    </div>
</div>
<script id="coverageTemplate" type="text/template">
    <div><strong>{{Description}}</strong></div>
    <div>@Resources.Language.LabelSumInsured:<span class="warning"><b>{{InsuredLimitAmount}}</b></span></div>
    <div>@Resources.Language.LabelPremium:<span class="warning"> <b>{{PremiumAmount}}</b></span></div>
</script>

<div class="uif-modal" id="modalTexts">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/Texts.cshtml", new Sistran.Core.Framework.UIF.Web.Areas.Underwriting.Models.TextsModelsView())
    </div>
    <div id="buttonsTexts" class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" id="btnTextClose" data-dismiss="modal">@Resources.Language.ButtonClose</button>
        <button type="button" class="btn btn-primary" id="btnTextSave">@Resources.Language.ButtonSave</button>
    </div>
</div>

<div class="uif-modal" id="modalClauses">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/Clauses.cshtml")
    </div>
    <div id="buttonsClauses" class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" id="btnClausesClose" data-dismiss="modal">@Resources.Language.ButtonClose</button>
        <button type="button" class="btn btn-primary" id="btnClausesSave">@Resources.Language.ButtonSave</button>
    </div>
</div>

<div id="modalBeneficiaries" class="uif-modal">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/Beneficiaries.cshtml", new Sistran.Core.Framework.UIF.Web.Areas.Underwriting.Models.BeneficiaryModelsView())
    </div>
    <div id="buttonsBeneficiaries" class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" id="btnBeneficiaryClose" data-dismiss="modal">@Resources.Language.ButtonClose</button>
        <button type="button" class="btn btn-primary" id="btnBeneficiarySave">@Resources.Language.ButtonSave</button>
    </div>
</div>
<form id="FormExecuteScript">
    <div class="uif-modal" id="ModalExecuteScript">
        <div class="uif-modalbody">
            @Html.Partial("~/Areas/RulesScripts/Views/Scripts/ExecuteScript.cshtml")
        </div>
        <div class="uif-modalbuttons width-save">
            <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Language.ButtonClose</button>
            <button type="button" class="btn btn-primary" onclick="return false" id="btnRecordScrip">@Resources.Language.ButtonSave</button>
        </div>
    </div>
</form>
<div class="uif-modal" id="modalIndividualDetail">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/IndividualDetail.cshtml")
    </div>
</div>

<div class="uif-modal" id="modalDefaultSearch">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/DefaultResults.cshtml")
    </div>
</div>

<div class="uif-modal" id="modalIndividualSearch">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/IndividualResults.cshtml")
    </div>
</div>
<div class="uif-modal" id="modalTextSearch">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/TextsResults.cshtml")
    </div>
</div>

<div class="uif-modal" id="modalPersonOnline">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/PersonOnline.cshtml")
    </div>
</div>

<form id="formTransport" class="form without-space">
    @Html.HiddenFor(model => model.RiskId, new { id = "hiddenRiskId" })
    <div class="row">
        <div class="uif-col-6">
            <div class="row box-title">
                <div class="col-md-2">
                    <label>@Resources.Language.LabelRiskData</label>
                </div>
                <div class="col-md-10">
                    <select class="uif-select form-control" id="selectRisk" data-id="Id" data-name="Description" name="Id"></select>
                    @Html.ValidationMessageFor(model => model.RiskId)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-12">
                    <label class="field-required">@Resources.Language.LabelPrincipalInsured</label>
                    <div class="input-with-buttons">
                        @Html.TextBoxFor(model => model.InsuredName, new { id = "inputInsured", @class = "uif-input-search", placeholder = @Resources.Language.PlaceHolderDocumentName })
                        @Html.ValidationMessageFor(model => model.InsuredName)
                        <button type="button" class="btn btn-default secondary-Colombia" id="btnDetail">
                            @Resources.Language.ButtonDetail
                        </button>
                        <button type="button" class="btn btn-default secondary-Colombia" id="btnConvertProspect">
                            @Resources.Language.ButtonConvertProspect
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="uif-col-12">
                    <label class="field-required">@Resources.Language.LabelGroupCoverage</label>
                    <div class="input-with-buttons">
                        <select class="uif-select form-control" id="selectGroupCoverage" data-id="Id" data-name="Description" name="CoverageGroupId"
                                data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlGroupCoverage"></select>
                        @Html.ValidationMessageFor(model => model.CoverageGroupId)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="uif-col-12">
                    <label class="field-required">@Resources.Language.EconomicActivity</label>
                    <input class="uif-autocomplete" type="text" data-source="@Url.Content("~/Underwriting/RiskTransport/GetRiskCommercialClasses")" data-displaykey="Description" placeholder="@Resources.Language.EconomicActivity" data-displayrecords="5" data-minlenght="1" id="inputRiskCommercialClass" name="inputRiskCommercialClass" data-val="true" required>
                    <span class="text-danger" data-valmsg-for="inputRiskCommercialClass" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="row">
                <div class="uif-col-6">
                    <label class="field-required">@Resources.Language.LabelCargoType</label>
                        <select class="uif-select form-control" data-native="false" id="selectCargoType" data-id="Id" data-name="Description" name="CargoTypeId"
                                data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlCargoType" data-filter="true" style=" width: 100% !important;"></select>
                        @Html.ValidationMessageFor(model => model.CargoTypeId)
                </div>
                <div class="uif-col-6">
                    <label class="field-required">@Resources.Language.LabelPackagingType</label>
                        <select class="uif-select form-control" @*data-size="5"*@ data-native="false" id="selectPackagingType" data-id="Id" data-name="Description" name="TransportPackagingId"
                                data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlPackagingType" data-filter="true" style=" width: 100% !important;"></select>
                        @Html.ValidationMessageFor(model => model.TransportPackagingId)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-6">
                    <label class="field-required">@Resources.Language.Origin</label>
                    <div class="input-with-buttons">
                        @Html.TextBoxFor(model => model.Source, new { id = "inputSource" })
                        @Html.ValidationMessageFor(model => model.Source)
                        <span id="ReqinputSource" style="display:none" class="text-danger field-validation-error" data-valmsg-replace="true"><span class="">obligatorio.</span></span>
                    </div>
                </div>
                <div class="uif-col-6">
                    <label class="field-required">@Resources.Language.Destiny</label>
                    <div class="input-with-buttons">
                        @Html.TextBoxFor(model => model.Target, new { id = "inputTarget" })
                        @Html.ValidationMessageFor(model => model.Target)
                        <span id="ReqinputTarget" style="display:none" class="text-danger field-validation-error" data-valmsg-replace="true"><span class="">obligatorio.</span></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="uif-col-6">
                    <label class="field-required">@Resources.Language.LabelTransportType</label>
                    <select class="uif-multiselect form-control" id="selectTransportTypeIds" data-id="Id" data-name="Description" name="TransportTypeIds" multiple="multiple"
                            data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlTransportType"></select>
                    <span style="display:none" class="field-validation-error" id="reqSelectTransportTypeIds" data-valmsg-replace="true"><span class="">Medio Transporte es obligatorio</span></span>

                    @*@Html.ValidationMessageFor(model => model.TransportTypeIds)*@
                </div>
                <div class="uif-col-6">
                    <label class="field-required">@Resources.Language.LabelMinimumPremium</label>
                    <div class="input-with-buttons">
                        @Html.TextBoxFor(model => model.MinimumPremium, new { id = "inputMinimumPremium", @class = "rightAlign input-money" })
                        @Html.ValidationMessageFor(model => model.MinimumPremium)
                    </div>
                </div>
            </div>
            <div id="SpecificTransport" style="display:none;">
                <div class="row">
                    <div class="uif-col-4">
                        <label>@Resources.Language.From</label>
                        <div class="input-with-buttons">
                            <select class="uif-select form-control" id="selectFromCountry" data-id="Id" data-name="Description" name="FromCountryId"
                                    data-val="true"></select>
                        </div>
                    </div>
                    <div class="uif-col-4">
                        <label>@Resources.Language.LabelDepartment</label>
                        <div class="input-with-buttons">
                            <select class="uif-select form-control" id="selectFromDepartment" data-id="Id" data-name="Description" name="FromStateId"
                                    data-val="true"></select>
                        </div>
                    </div>
                    <div class="uif-col-4">
                        <label>@Resources.Language.Town</label>
                        <div class="input-with-buttons">
                            <select class="uif-select form-control" id="selectFromTown" data-id="Id" data-name="Description" name="FromCityId"
                                    data-val="true"></select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label>@Resources.Language.To</label>
                        <div class="input-with-buttons">
                            <select class="uif-select form-control" id="selectToCountry" data-id="Id" data-name="Description" name="ToCountryId"
                                    data-val="true"></select>
                        </div>
                    </div>
                    <div class="uif-col-4">
                        <label>@Resources.Language.LabelDepartment</label>
                        <div class="input-with-buttons">
                            <select class="uif-select form-control" id="selectToDepartment" data-id="Id" data-name="Description" name="ToStateId"
                                    data-val="true"></select>
                        </div>
                    </div>
                    <div class="uif-col-4">
                        <label>@Resources.Language.Town</label>
                        <div class="input-with-buttons">
                            <select class="uif-select form-control" id="selectToTown" data-id="Id" data-name="Description" name="ToCityId"
                                    data-val="true"></select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label>@Resources.Language.Via</label>
                        <div class="input-with-buttons">
                            <select class="uif-select form-control" id="selectVia" data-id="Id" data-name="Description" name="ViaId"
                                    data-val="true"></select>
                        </div>
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelHolderTypes</label>
                        <select class="uif-select form-control" id="selectHolderTypes"
                                data-id="Id" data-name="Description" name="HolderTypes" data-val="true" required></select>
                        <span class="text-danger" data-valmsg-for="HolderTypes" data-valmsg-replace="true"></span>
                        @*@Html.ValidationMessageFor(model => model.HolderTypeId)*@
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label class="releaseAmtlbl">@Resources.Language.LabelAnualBudget</label>
                        @Html.TextBoxFor(model => model.ReleaseAmount, new { id = "inputReleaseAmountEsp", @class = "rightAlign input-money" })
                        @Html.ValidationMessageFor(model => model.ReleaseAmount)
                        <span id="ReqinputReleaseAmountEsp" style="display:none" class="text-danger field-validation-error" data-valmsg-replace="true"><span class="">obligatorio.</span></span>
                    </div>
                    <div class="uif-col-4">
                        <label class="freigthAmtlbl">@Resources.Language.LabelAnnualFreightProjection</label>
                        @Html.TextBoxFor(model => model.FreightAmount, new { id = "inputFreightAmountEsp", @class = "rightAlign input-money" })
                        @Html.ValidationMessageFor(model => model.FreightAmount)
                        <span id="ReqinputFreightAmountEsp" style="display:none" class="text-danger field-validation-error" data-valmsg-replace="true"><span class="">obligatorio.</span></span>
                    </div>
                </div>
            </div>
            <div id="AutomaticTransport" style="display:none;">
                <div class="row">
                    <div class="uif-col-6">
                        <label class="field-required">@Resources.Language.LabelDeclarationPeriod</label>
                        <select class="uif-select form-control" id="selectDeclarationPeriod"
                                data-id="Id" data-name="Description" name="DeclarationPeriodId" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlDeclarationPeriod"></select>
                        @Html.ValidationMessageFor(model => model.DeclarationPeriodId)
                    </div>
                    <div class="uif-col-6">
                        <label class="field-required">@Resources.Language.LabelBillingPeriod</label>
                        <select class="uif-select form-control" id="selectBillingPeriod"
                                data-id="Id" data-name="Description" name="BillingPeriodId" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlBillingPeriod"></select>
                        @Html.ValidationMessageFor(model => model.BillingPeriodId)
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-6">
                        <label class="field-required">@Resources.Language.LabelLimitMaxRealeaseAmount</label>
                        <input class="rightAlign input-money valid" data-val="true" data-val-number="El campo LimitMaxRealeaseAmount debe ser un número." id="inputLimitMaxReleaseAmount" name="LimitMaxRealeaseAmount" type="text" value="" aria-describedby="inputLimitMaxReleaseAmount-error" required>
                        <span class="text-danger" data-valmsg-for="LimitMaxRealeaseAmount" data-valmsg-replace="true"></span>
                        @*@Html.TextBoxFor(model => model.LimitMaxRealeaseAmount, new { id = "inputLimitMaxReleaseAmount", @class = "rightAlign input-money" })
                            @Html.ValidationMessageFor(model => model.LimitMaxRealeaseAmount)*@

                    </div>
                    @*<div class="uif-col-6">
                            <label class="field-required">@Resources.Language.LabelHolderTypes</label>
                            <div class="input-with-buttons">
                                <select class="uif-select form-control" id="selectGroupCoverage" data-id="Id" data-name="Description" name="CoverageGroupId"
                                        data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlGroupCoverage"></select>
                                @Html.ValidationMessageFor(model => model.CoverageGroupId)
                            </div>
                        </div>*@
                    @*<div class="uif-col-6">
                            <label>@Resources.Language.LabelFrom</label>
                            @Html.TextBoxFor(model => model.StartDate, "{0:dd/MM/yyyy}", new { id = "inputFromCoverage", @class = "uif-datepicker" })
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </div>*@
                    <div class="uif-col-6">
                        <label class="field-required">@Resources.Language.LabelHolderTypes</label>
                        <select class="uif-select form-control" id="autSelectHolderTypes"
                                data-id="Id" data-name="Description" name="HolderTypes" data-val="true" required></select>
                        <span class="text-danger" data-valmsg-for="HolderTypes" data-valmsg-replace="true"></span>
                        @*@Html.ValidationMessageFor(model => model.HolderTypeId)*@
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-6">
                        <label class="releaseAmtlbl">@Resources.Language.LabelAnualBudget</label>
                        @Html.TextBoxFor(model => model.ReleaseAmount, new { id = "inputReleaseAmount", @class = "rightAlign input-money" })
                        @Html.ValidationMessageFor(model => model.ReleaseAmount)
                        <span id="ReqinputReleaseAmount" style="display:none" class="text-danger field-validation-error" data-valmsg-replace="true"><span class="">obligatorio.</span></span>

                    </div>
                    <div class="uif-col-6">
                        <label class="freigthAmtlbl">@Resources.Language.LabelAnnualFreightProjection</label>
                        @Html.TextBoxFor(model => model.FreightAmount, new { id = "inputFreightAmount", @class = "rightAlign input-money" })
                        @Html.ValidationMessageFor(model => model.FreightAmount)
                        <span id="ReqinputFreightAmount" style="display:none" class="text-danger field-validation-error" data-valmsg-replace="true"><span class="">obligatorio.</span></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="uif-col-4">
                    <input type="checkbox" id="chkIsFacultative" name="IsFacultative" />
                    <label for="chkIsFacultative">@Resources.Language.LabelIsOptional</label>
                </div>
                <div class="uif-col-4">
                    <input type="checkbox" id="chkIsRetention" name="IsRetention" />
                    <label for="chkIsRetention">@Resources.Language.LabelRetention</label>
                </div>
            </div>
        </div>

        <div class="uif-col-6">
            <div class="row">
                <div class="uif-col-10">
                    <div id="listCoverages" class="uif-listview"></div>
                </div>
                <div class="uif-col-4 fit-col-secondary">
                    <div class="uif-right-bar without-border-left" id="panelButtonsRightRisk">
                        <div class="right-bar-title">
                            <a href="#" id="btnScript">
                                <i class="fa fa-gear"></i>
                                <b class="primary">@Resources.Language.LabelScript</b>
                            </a>
                        </div>
                        <ul>
                            <li>
                                <a href="#" id="btnBeneficiary">@Resources.Language.LabelBeneficiaries</a>
                                <p id="selectedBeneficiaries"></p>
                            </li>
                            <li>
                                <a href="#" id="btnTexts">@Resources.Language.LabelText</a>
                                <p id="selectedTexts"></p>
                            </li>
                            <li>
                                <a href="#" id="btnClauses">@Resources.Language.LabelClauses</a>
                                <p id="selectedClauses"></p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="uif-col-10">
                    <div class="uif-summary">
                        <div class="items">
                            <div class="item">
                                <div>
                                    <div>@Resources.Language.LabelInsuredValue</div>
                                    <div id="SubLimitAmount">0</div>
                                </div>
                            </div>
                            <div class="item">
                                <div>
                                    <div>@Resources.Language.LabelPremium</div>
                                    <div id="PremiumAmount">0</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="uif-col-4">
                </div>
            </div>
        </div>
    </div>
</form>
