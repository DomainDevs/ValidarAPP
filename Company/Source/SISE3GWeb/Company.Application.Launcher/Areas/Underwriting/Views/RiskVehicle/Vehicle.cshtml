@{
    Layout = null;
}
@model Sistran.Core.Framework.UIF.Web.Areas.Underwriting.Models.RiskVehicleModelsView
<script id="title-template" type="text/template">
    <div class="column-80">
        @Resources.Language.DataRisk
    </div>
    <div class="column-20 even">
        <i class="fa fa-file-o" aria-hidden="true"></i>
        <div id="globalTitle"></div>
    </div>
</script>
<script id="footer-template" type="text/template">
    <div id="buttonsVehicle">
        <button type="button" class="btn btn-default" id="btnClose">
            <span aria-hidden="true"></span>
            @Resources.Language.ButtonClose
        </button>
        <button type="button" class="btn btn-default" id="btnDeleteRisk">
            <span class="" aria-hidden="true">
                @Resources.Language.RiskDelete
            </span>
        </button>
        <button type="button" class="btn btn-default" id="btnAddRisk">
            <span class="" aria-hidden="true">
                @Resources.Language.RiskNew
            </span>
        </button>

        <button type="button" class="btn btn-primary" id="btnAccept">
            <span aria-hidden="true"></span>
            @Resources.Language.RiskSave
        </button>
    </div>
</script>


<script id="coverageTemplate" type="text/template">
    <div><strong>{{Description}}</strong></div>
    <div>@Resources.Language.LabelDeductible: {{DeductibleDescription}}</div>
    <div>@Resources.Language.LabelSumInsured:<span class="warning"><b>{{SubLimitAmount}}</b></span></div>
    <div>@Resources.Language.LabelPremium:<span class="warning"> <b>{{PremiumAmount}}</b></span></div>
    <div>@Resources.Language.LabelRate: {{DisplayRate}}</div>
    <div>@Resources.Language.LabelStatus: {{CoverStatusName}}</div>
</script>

<div class="uif-alert" id="alert"></div>

<div id="uif-spinner-loading" hidden="hidden">
    <div class="spinner spinner-three-bounce">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
    </div>
</div>

<div id="modalAccessories" class="uif-modal">
    <div class="uif-modalbody">
        @Html.Partial("Accessories", new Sistran.Core.Framework.UIF.Web.Areas.Underwriting.Models.AccessoryModelsView())
    </div>
    <div id="buttonsAccesories" class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" id="btnAccessoryClose" data-dismiss="modal">@Resources.Language.ButtonClose</button>
        <button type="button" class="btn btn-primary" id="btnAccessorySave">@Resources.Language.ButtonSave</button>
    </div>
</div>

<div class="uif-modal" id="modalTexts">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/Texts.cshtml", new Sistran.Core.Framework.UIF.Web.Areas.Underwriting.Models.TextsModelsView())
    </div>
    <div id="buttonsTexts" class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" id="btnTextClose" data-dismiss="modal">@Resources.Language.ButtonClose</button>
        <button type="button" class="btn btn-primary" id="btnTextSave">@Resources.Language.ButtonSave</button>
    </div>
</div>

<div id="modalClauses" class="uif-modal">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/Clauses.cshtml")
    </div>
    <div id="buttonsClauses" class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" id="btnClausesClose" data-dismiss="modal">@Resources.Language.ButtonClose</button>
        <button type="button" class="btn btn-primary" id="btnClausesSave">@Resources.Language.ButtonSave</button>
    </div>
</div>

<div id="modalBeneficiaries" class="uif-modal">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/Beneficiaries.cshtml", new Sistran.Core.Framework.UIF.Web.Areas.Underwriting.Models.BeneficiaryModelsView())
    </div>
    <div id="buttonsBeneficiaries" class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" id="btnBeneficiaryClose" data-dismiss="modal">@Resources.Language.ButtonClose</button>
        <button type="button" class="btn btn-primary" id="btnBeneficiarySave">@Resources.Language.ButtonSave</button>
    </div>
</div>

<div id="modalAdditionalData" class="uif-modal">
    <div class="uif-modalbody">
        @Html.Partial("AdditionalData", new Sistran.Core.Framework.UIF.Web.Areas.Underwriting.Models.AdditionalDataModelsView())
    </div>
    <div id="buttonsAdditionalData" class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" id="btnAdditionalDataClose" data-dismiss="modal">@Resources.Language.ButtonClose</button>
        <button type="button" class="btn btn-primary" id="btnAdditionalDataSave">@Resources.Language.ButtonSave</button>
    </div>
</div>

<form id="FormExecuteScript">
    <div class="uif-modal" id="ModalExecuteScript">
        <div class="uif-modalbody">
            @Html.Partial("~/Areas/RulesScripts/Views/Scripts/ExecuteScript.cshtml")
        </div>
        <div class="uif-modalbuttons width-save">
            <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Language.ButtonClose</button>
            <button type="button" class="btn btn-primary" onclick="return false" id="btnRecordScrip">@Resources.Language.ButtonSave</button>
        </div>
    </div>
</form>

<div class="uif-modal" id="modalIndividualDetail">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/IndividualDetail.cshtml")
    </div>
</div>

<div class="uif-modal" id="modalDefaultSearch">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/DefaultResults.cshtml")
    </div>
</div>

<div class="uif-modal" id="modalIndividualSearch">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/IndividualResults.cshtml")
    </div>
</div>
<div class="uif-modal" id="modalTextSearch">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/TextsResults.cshtml")
    </div>
</div>

<div class="uif-modal" id="modalPersonOnline">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Underwriting/Views/Underwriting/PersonOnline.cshtml")
    </div>
</div>

<form id="formVehicle" class="form without-space">
    <div id="modalVehicle">
        @Html.HiddenFor(model => model.OriginalPrice, new { id = "hiddenOriginalPrice" })
        @Html.HiddenFor(model => model.StandardVehiclePrice, new { id = "hiddenStandardVehiclePrice" })
        @Html.HiddenFor(model => model.OriginalRiskId, new { id = "hiddenOriginalRiskId" })
        <div class="row">
            <div class="uif-col-6">
                <div class="row box-title">
                    <div class="col-md-2">
                        <label>@Resources.Language.LabelRiskData</label>
                    </div>
                    <div class="col-md-10">
                        <select class="uif-select form-control" id="selectRisk" data-native="false" data-id="Id" data-name="Description" name="RiskId" data-filter="true"></select>
                        @Html.ValidationMessageFor(model => model.RiskId)
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-12">
                        <label class="field-required">@Resources.Language.LabelPrincipalInsured</label>
                        <div class="input-with-buttons">
                            @Html.TextBoxFor(model => model.InsuredName, new { id = "inputInsured", @class = "uif-input-search", placeholder = @Resources.Language.PlaceHolderDocumentName })
                            @Html.ValidationMessageFor(model => model.InsuredName)
                            <button type="button" class="btn btn-default secondary-Colombia" id="btnDetail">
                                @Resources.Language.ButtonDetail
                            </button>
                            @*<button type="button" class="btn btn-default secondary-Colombia" id="btnConvertProspect">
                                    @Resources.Language.ButtonConvertProspect
                                </button>*@
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-12">
                        <label class="field-required">@Resources.Language.LabelGroupCoverage</label>
                        <div class="input-with-buttons">
                            <select class="uif-select form-control" id="selectGroupCoverage" data-native="false" data-id="Id" data-name="Description" name="GroupCoverage"
                                    data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlGroupCoverage"></select>
                            @Html.ValidationMessageFor(model => model.GroupCoverage)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="uif-col-12">
                        <h5><strong>@Resources.Language.LabelDataVehicle</strong></h5>
                    </div>
                </div>

                <!--inicio-->
                <!--fin-->
                <div class="row">
                    <div class="uif-col-4">
                        <label id="PlateFieldRequired" class="field-required">@Resources.Language.LabelPlate</label>
                        @Html.TextBoxFor(model => model.LicensePlate, new { id = "inputPlate", @class = "rightAlign" })
                        @Html.ValidationMessageFor(model => model.LicensePlate)
                    </div>
                    <div class="uif-col-4">
                        <label id="EngineFieldRequired" class="field-required">@Resources.Language.LabelEngine</label>
                        @Html.TextBoxFor(model => model.Engine, new { id = "inputEngine" })
                        @Html.ValidationMessageFor(model => model.Engine)
                    </div>
                    <div class="uif-col-4">
                        <label id="ChassisFieldRequired" class="field-required">@Resources.Language.LabelChassis</label>
                        @Html.TextBoxFor(model => model.Chassis, new { id = "inputChassis" })
                        @Html.ValidationMessageFor(model => model.Chassis)
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label id="PlateFieldRequired2" class="field-required">@Resources.Language.LabelPlateConfirmation</label>
                        @Html.TextBoxFor(model => model.LicensePlateConfirmation, new { id = "inputPlateConfirmation" })
                        @Html.ValidationMessageFor(model => model.LicensePlateConfirmation)
                    </div>
                    <div class="uif-col-4">
                        <label id="EngineFieldRequired2" class="field-required">@Resources.Language.LabelEngineConfirmation</label>
                        @Html.TextBoxFor(model => model.EngineConfirmation, new { id = "inputEngineConfirmation" })
                        @Html.ValidationMessageFor(model => model.EngineConfirmation)
                    </div>
                    <div class="uif-col-4">
                        <label id="ChassisFieldRequired2" class="field-required">@Resources.Language.LabelChassisConfirmation</label>
                        @Html.TextBoxFor(model => model.ChassisConfirmation, new { id = "inputChassisConfirmation" })
                        @Html.ValidationMessageFor(model => model.ChassisConfirmation)
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelFasecoldaCode</label>
                        @Html.TextBoxFor(model => model.FasecoldaCode, new { id = "inputFasecoldaCode", @class = "rightAlign" })
                        @Html.ValidationMessageFor(model => model.FasecoldaCode)
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelMake</label>
                        <select class="uif-select form-control" id="selectMake" data-native="false"
                                data-id="Id" data-name="Description" name="Make" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlMake" data-filter="true"></select>
                        @Html.ValidationMessageFor(model => model.Make)
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelModel</label>
                        <select class="uif-select form-control" id="selectModel" data-native="false" data-id="Id" data-name="Description" name="Model" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlModel" data-filter="true"></select>
                        @Html.ValidationMessageFor(model => model.Model)
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelVersion</label>
                        <select class="uif-select form-control" id="selectVersion" data-native="false" data-id="Id" data-name="Description" name="Version" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlVersion" data-filter="true"></select>
                        @Html.ValidationMessageFor(model => model.Version)
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelType</label>
                        <select class="uif-select form-control" id="selectType" data-native="false" data-id="Id" data-name="Description" name="Type"></select>
                        @Html.ValidationMessageFor(model => model.Type)
                    </div>
                    <div class="uif-col-4">

                        <label class="field-required">@Resources.Language.LabelYear</label>
                        <select class="uif-select form-control" id="selectYear" data-native="false" data-id="Description" data-name="Description" name="Year"
                                data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlYear"></select>
                        @Html.ValidationMessageFor(model => model.Year)

                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelUse</label>
                        <select class="uif-select form-control" id="selectUse"
                                data-id="Id" data-name="Description" data-native="false" name="Use" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlUse" data-filter="true"></select>
                        @Html.ValidationMessageFor(model => model.Use)
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelColor</label>
                        <select class="uif-select form-control" id="selectColor"
                                data-id="Id" data-name="Description" data-native="false" name="Color" data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlColor"></select>
                        @Html.ValidationMessageFor(model => model.Color)
                    </div>
                    <div class="uif-col-4">
                        <div class="without-label">
                            <input type="checkbox" id="chkIsNew" name="IsNew" />
                            <label for="chkIsNew">@Resources.Language.LabelIsNew</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelService</label>
                        <select class="uif-select form-control" id="selectServiceType" data-id="Id" data-name="Description" name="ServiceType" data-val-required="@Resources.Language.ErrorDocumentControlService"
                                data-val="true" data-filter="true" data-native="false"></select>
                        @Html.ValidationMessageFor(model => model.ServiceType)
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelInsuredValue</label>
                        @Html.TextBoxFor(model => model.Price, new { id = "inputPrice", maxLength = 22, @class = "rightAlign" })
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelRateZone</label>
                        <select class="uif-select form-control" id="selectRatingZone" data-native="false" data-id="Id" data-name="Description" name="RatingZone"
                                data-val="true" data-val-required="@Resources.Language.ErrorDocumentControlRatingZone" data-filter="true"></select>
                        @Html.ValidationMessageFor(model => model.RatingZone)
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label>@Resources.Language.LabelValueAccesories</label>
                        <div class="input-with-buttons">
                            @Html.TextBoxFor(model => model.PriceAccesories, new { id = "inputPriceAccesories", disabled = "disabled", maxLength = 20, @class = "rightAlign" })
                            @Html.ValidationMessageFor(model => model.PriceAccesories)
                            <button type="button" class="btn btn-default" id="btnAccesories">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-8">
                        <label class="field-required">@Resources.Language.LabelLimitRC</label>
                        <select class="uif-select form-control" id="selectLimitRC" data-native="false" data-val="true" data-id="Id" data-name="Description"
                                name="LimitRC" data-val-required="@Resources.Language.ErrorLimitRc"></select>
                        @Html.ValidationMessageFor(model => model.LimitRC)
                    </div>
                    <div class="uif-col-4">
                        <label>@Resources.Language.SingleRate</label>
                        @Html.TextBoxFor(model => model.Rate, new { id = "inputRate", maxLength = 20, @class = "rightAlign" })
                        @Html.ValidationMessageFor(model => model.Rate)
                    </div>
                </div>

            </div>
            <div class="uif-col-4 fit-col-secondary">
                <div id="listCoverages" class="uif-listview"></div>
            </div>
            <div class="uif-col-2 fit-col-secondary">
                <div class="uif-right-bar without-border-left" id="panelButtonsRightRisk">
                    <div class="right-bar-title">
                        <a href="#" id="btnScript">
                            <i class="fa fa-gear"></i>
                            <b class="primary">@Resources.Language.LabelScript</b>
                        </a>
                    </div>
                    <ul>
                        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0009"))
                        {
                            <li>
                                <a href="#" id="btnBeneficiary">@Resources.Language.LabelBeneficiaries</a>
                                <p id="selectedBeneficiaries"></p>
                            </li>
                        }
                        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0010"))
                        {
                            <li>
                                <a href="#" id="btnAdditionalData">@Resources.Language.LabelAdditionalData</a>
                                <p id="selectedAdditionalData"></p>
                            </li>
                        }
                        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0011"))
                        {
                            <li>
                                <a href="#" id="btnTexts">@Resources.Language.LabelText</a>
                                <p id="selectedTexts"></p>
                            </li>
                        }
                        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0012"))
                        {
                            <li>
                                <a href="#" id="btnClauses">@Resources.Language.LabelClauses</a>
                                <p id="selectedClauses"></p>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </div>
        <div class="row lineDividing">
            <div class="uif-col-6">
                <div class="pull-right">
                    <button type="button" class="btn btn-primary btn-calculate" id="btnCalculate">
                        <div>
                            <i class="fa fa-calculator"></i>
                            <div>
                                @Resources.Language.ButtonCalculate
                            </div>
                        </div>
                    </button>
                </div>
            </div>
            <div class="uif-col-4">
                <div class="uif-summary">
                    <div class="items">
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelTotalSumInsured</div>
                                <div id="inputAmountInsured">0</div>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelPremiumRisk</div>
                                <div id="inputPremium">0</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
