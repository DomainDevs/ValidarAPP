@model Sistran.Core.Framework.UIF.Web.Areas.Printing.Models.PrinterModelsView

@section Title
{
    <div class="row main-title">
        <div class="column">
            Impresión Contragarantías
        </div>
    </div>
}

@section Toolbar
{
    <footer>
        <div>
            <button type="button" class="btn btn-default" id="btnClose"><i class="fa fa-times-circle" aria-hidden="true"></i>@Resources.Language.ButtonExit</button>
            @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0662"))
            {
                <button type="button" class="btn btn-primary" id="btnPrintCounterGuarantee" disabled="disabled">
                    <i class="fa fa-print" aria-hidden="true"></i>@Resources.Language.LabelPrinter
                </button>
            }

        </div>
    </footer>
}
<form id="formCounterGuaranteePrinting" class="form without-peripheral">
    <div class="row">
        <div class="uif-col-6">
            <label class="field-required">@Resources.Language.LabelSecure</label>
            <div class="input-with-buttons">
                @Html.TextBoxFor(model => model.SecureName, new { id = "inputSecure", @class = "uif-input-search", placeholder = @Resources.Language.PlaceHolderDocumentName })
                @Html.ValidationMessageFor(model => model.SecureName)
            </div>
        </div>
        <div class="uif-col-6">
            <label>@Resources.Language.LabelCounterGuarantees</label>
            <select class="uif-select form-control" id="selectGuarantee" name="selectGuarantee" data-val="true" data-native="false" data-id="Id" data-name="Description"></select>
            @Html.ValidationMessageFor(model => model.BranchId)
        </div>
    </div>
    
    <div class="row" style="display:none" id="divDownload">
        @*<div class="uif-col-12">*@
        <div class="uif-col-3">
            <div class="without-label">
                <label>@Resources.Language.ProcessPrinting</label>
            </div>
        </div>
        <div class="uif-col-3">
            <div class="without-label">
                <a href="" id="hrfPathPdf" class="btn btn-primary" download="" target="_blank">
                    <i class="fa fa-download"></i>
                    <span id="hrfPathName" style="padding-left:5px"></span>
                </a>
            </div>
        </div>
        @*</div>*@
    </div>
    <div>
        <iframe src="" type="application/pdf" id="embed" width="100%" height="400px" style="display:none"> </iframe>
    </div>
</form>
<div class="uif-modal" id="modalIndividualSearch">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Printing/Views/Printer/IndividualResults.cshtml")
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundle/js/CounterGuarantee");
}