@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.ExchangeDifference;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.ClosingExercise</li>
        <li>@Global.ExchangeDifference</li>
    </ol>
}

@section Toolbar
{
    <footer>
        <button class="btn btn-primary" role="button" id="processExchangeDifference" onclick="return false">
            <span class="glyphicon glyphicon-cog"></span>
            @Global.Generate
        </button>
        <button class="btn btn-primary" role="button" id="printExchangeDifference" onclick="return false" disabled="disabled">
            <span class="glyphicon glyphicon-print"></span>
            @Global.PrintReport
        </button>        
        <button class="btn btn-primary" role="button" id="accountExchangeDifference" onclick="return false" disabled="disabled">
            <span class="glyphicon glyphicon-usd"></span>
            @Global.Accounting
        </button>
    </footer>
}

<form id="ExchangeDifferenceForm" onsubmit="return false">
    <div class="uif-row">
        <div class="uif-col-3">
            <label>@Global.StartDate</label>
            <input type="text" id="StartDate" name="StartDate" data-mask="99/99/9999" class="uif-datepicker" maxlength="10" data-val="true" data-val-required="@Global.RequiredField" />
            <span class="text-danger" data-valmsg-for="StartDate" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-3">
            <label>@Global.DateTo</label>
            <input type="text" id="EndDate" name="EndDate" data-mask="99/99/9999" class="uif-datepicker" maxlength="10" data-val="true" data-val-required="@Global.RequiredField" />
            <span class="text-danger" data-valmsg-for="EndDate" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-3">
            <input type="hidden" id="Year" name="Year" disabled="disabled"/>
        </div>
    </div>
</form>

<div class="uif-row">
    <div class="uif-col-12">
        <div class="uif-alert" id="ExchangeDifferenceAlert"></div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/accountingClosing/bundles/ExchangeDifference")
}

