@{
    Layout = null;
}

<div class="uif-modal" id="modalRule">
    <div class="uif-modalbody">
        <form class="form" id="formModalRule">
            <input type="hidden" id="hdnIndexRule"/>
            <div class="uif-row">
                <div class="uif-col-12">
                    <label class="field-required">@Resources.Language.LabelRuleDescription</label>
                    <input type="text" id="txtDescriptionRule" name="txtDescriptionRule" required="required" maxlength="50"/>
                    <span class="field-validation-valid" data-valmsg-for="txtDescriptionRule" data-valmsg-replace="true"></span>
                </div>
            </div>
        </form>
    </div>

    <div class="uif-modalbuttons width-save">
        <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Language.Close</button>
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0616"))
        {
            <button type="button" class="btn btn-primary" id="btnSaveRule">@Resources.Language.ButtonSave</button>
        }

    </div>
</div>