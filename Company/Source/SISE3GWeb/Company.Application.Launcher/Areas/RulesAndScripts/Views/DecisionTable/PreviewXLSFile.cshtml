@model System.Data.DataTable
@{
    Layout = null;
}

@if (string.IsNullOrEmpty(ViewBag.tempUrl))
{
    <input type="hidden" id="nameFileXLS" value="" />
    <textarea rows="25" readonly></textarea>
}
else
{
    <input type="hidden" id="nameFileXLS" value="@ViewBag.tempUrl" />
    <div id="TxtPreviewXLS" style="background-color:white;width:100%;height:400px;overflow:auto">
        <table border="1">
            <thead>
                <tr>
                    @foreach (System.Data.DataColumn Column in Model.Columns)
                    {
                        var value = "";
                        for (var i = 0; i < Column.ColumnName.Split('_').Length; i++)
                        {
                            if (i > 0)
                            {
                                var item = Column.ColumnName.Split('_')[i];
                                value += item + "_";
                            }
                        }
                        <th>@value.Substring(0, value.Length - 1)</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in Model.Rows)
                {
                    <tr>
                        @foreach (var item in row.ItemArray)
                        {
                            <td style="text-align:center; height:16px">
                                @item
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}