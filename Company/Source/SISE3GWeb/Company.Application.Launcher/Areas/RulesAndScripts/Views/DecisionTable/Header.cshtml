@*TEMPLATES*@
<script id="template-Condition-Action" type="text/template">
    <div>
        {{DescriptionFacade}}
    </div>
</script>
@**@


<form class="form" id="formRuleBase">
    <div class="uif-row">
        <div class="uif-col-12">
            <label class="field-required">Nombre de la Tabla</label>
            <input type="text" id="txtDescriptionRuleBase" name="txtDescriptionRuleBase" required />
            <span class="field-validation-valid" data-valmsg-for="txtDescriptionRuleBase" data-valmsg-replace="true"></span>
        </div>
    </div>

    <div class="uif-row">
        <div class="uif-col-xs-6">
            <label class="field-required">@Resources.Language.LabelPackages</label>
            <select id="ddlPackage"
                    data-val="true"
                    data-id="PackageId"
                    data-name="Description">
            </select>
        </div>
        <div class="uif-col-xs-6">
            <label class="field-required">@Resources.Language.LabelLevels</label>
            <select id="ddlLevel"
                    data-val="true"
                    data-id="LevelId"
                    data-name="Description">
            </select>
        </div>
    </div>
</form>

<div class="uif-row">
    <div class="uif-col-6">
        <div id="LsvCondition" class="uif-listview">
        </div>
    </div>

    <div class="uif-col-6">
        <div id="LsvAction" class="uif-listview">
        </div>
    </div>
</div>

