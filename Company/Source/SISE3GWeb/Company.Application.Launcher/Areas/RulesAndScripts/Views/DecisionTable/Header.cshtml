@*FOOTER*@
<script id="footer-template" type="text/template">
    <div class="uif-row">
        <div class="uif-col-12">
            <div class="pull-right">
                <button type="button" class="btn btn-default btn-sm" id="btnBack">
                    <i class="fa fa-times-circle-o" aria-hidden="true"></i>
                    <span class="" aria-hidden="true">@Resources.Language.ButtonGoBack</span>
                </button>
                <button type="button" class="btn btn-primary btn-sm" id="btnSaveHead">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
                    <span class="" aria-hidden="true">@Resources.Language.ButtonSave</span>
                </button>
            </div>
        </div>
    </div>
</script>
