    <div class="row" id="btnConsultationRisk">
        <div class="uif-col-6">
            <h4><strong>@Resources.Language.ConsultationRisk</strong> </h4>
            @*  @if (Model.SubCoveredRiskType == 1)
                {
                    <label>@Resources.Language.LabelLicencesePlate</label>
                }
                else
                {
                    <label>@Resources.Language.LabelPropertyRiskNumber</label>
                }*@
            @Html.TextBoxFor(model => model.DescriptionRisk, new { id = "inputDescriptionRisk", @class = "uif-input-search", maxLength = 10 })
            @Html.ValidationMessageFor(model => model.DescriptionRisk, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="uif-col-12">
            <p id="resultConsultationRisk"></p>
        </div>
