@{
    Layout = null;
}
@model Sistran.Core.Framework.UIF.Web.Areas.Endorsement.Models.ExtensionViewModel
<script id="title-template" type="text/template">
    <div class="column-70">
        <div>@Resources.Language.EndorsementExtended</div>
    </div>
    <div class="column-30">
        <div class="important">
            <div class="date">
                <i class="fa fa-calendar"></i>@Resources.Language.LabelDateIssuance <span id="inputIssueDate"></span>
            </div>
        </div>
    </div>
</script>
<script id="footer-template" type="text/template">
    <div class="pull-right">
        <div class="row">
            <div class="uif-col-12">
                <div class="pull-right">
                    <button type="button" class="btn btn-default" id="btnCancel">@Resources.Language.ButtonClose</button>
                    <button type="button" class="btn btn-default" id="btnPrintTemporalExtension">
                        <i class="fa fa-print" aria-hidden="true"></i>
                        <span class="" aria-hidden="true"></span>
                        @Resources.Language.PrintTemporal
                    </button>
                    <button class="btn btn-default" id="btnRiskTarif">@Resources.Language.ExcelRisksTariffed</button>
                    <button type="button" class="btn btn-primary" id="btnSave">@Resources.Language.ModificationSave</button>
                </div>
            </div>
        </div>
    </div>
</script>
<div class="uif-alert" id="alert"></div>

<form id="formExtension" class="without-peripheral">

    <div class="row">
        <div class="uif-col-12">
            <h5 id="globalTitle"></h5>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <h5><strong>@Resources.Language.LabelCurrentStatusPolicy</strong></h5>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-2">
            <label>@Resources.Language.LabelCurrentFrom</label>
            @Html.TextBoxFor(model => model.EndorsementFrom, new { id = "inputcurrentFrom", @class = "uif-datepicker", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.CurrentFrom)
        </div>
        <div class="uif-col-2">
            <label>@Resources.Language.LabelCurrentTo</label>
            @Html.TextBoxFor(model => model.EndorsementTo, new { id = "inputCurrentTo", @class = "uif-datepicker", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.CurrentTo)
        </div>
        <div class="uif-col-1">
            <label>@Resources.Language.LabelDays</label>
            @Html.TextBoxFor(model => model.EndorsementDays, new { id = "inputCurrentDays", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Days)
        </div>
        <div class="uif-col-2">
            <label>@Resources.Language.Endorsement</label>
            @Html.TextBoxFor(model => model.EndorsementCurrent, new { id = "labelLastEndorsement", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.EndorsementCurrent)


        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <div class="uif-summary field-summary-alignment">
                <div class="items">
                    <div class="item">
                        <div>
                            <div>@Resources.Language.LabelTableRisk</div>
                            <div id="labelCurrentRisk">0</div>
                        </div>
                    </div>
                    <div class="item">
                        <div>
                            <div>@Resources.Language.LabelTableSum</div>
                            <div id="labelCurrentSum">0</div>
                        </div>
                    </div>
                    <div class="item">
                        <div>
                            <div>@Resources.Language.LabelTablePremium</div>
                            <div id="labelCurrentPremium">0</div>
                        </div>
                    </div>
                    <div class="item">
                        <div>
                            <div>@Resources.Language.LabelTableExpenses</div>
                            <div id="labelCurrentExpenses">0</div>
                        </div>
                    </div>
                    <div class="item">
                        <div>
                            <div>@Resources.Language.LabelSurcharge</div>
                            <div id="labelCurrentSurcharges">0</div>
                        </div>
                    </div>
                    <div class="item">
                        <div>
                            <div>@Resources.Language.LabelDiscount</div>
                            <div id="labelCurrentDiscounts">0</div>
                        </div>
                    </div>
                    <div class="item">
                        <div>
                            <div>@Resources.Language.LabelTableTaxes</div>
                            <div id="labelCurrentTaxes">0</div>
                        </div>
                    </div>
                    <div class="item primary">
                        <div>
                            <div>@Resources.Language.LabelTableTotalPremium</div>
                            <div id="labelCurrentTotalPremium">0</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-12">
            <h5><strong>@Resources.Language.LabelDataTermExtension</strong></h5>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-2">
            <label>@Resources.Language.LabelCurrentFrom</label>
            @Html.TextBoxFor(model => model.CurrentFrom, new { id = "inputExtensionFrom", @class = "uif-datepicker" })
            @Html.ValidationMessageFor(model => model.CurrentFrom)
        </div>
        <div class="uif-col-2">
            <label>@Resources.Language.LabelCurrentTo</label>
            @Html.TextBoxFor(model => model.CurrentTo, new { id = "inputExtensionTo", @class = "uif-datepicker" })
            @Html.ValidationMessageFor(model => model.CurrentTo)
        </div>
        <div class="uif-col-1">
            <label>@Resources.Language.LabelDays</label>
            @Html.TextBoxFor(model => model.Days, new { id = "inputDays", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Days)
        </div>
        <div class="uif-col-4">
            <label>@Resources.Language.LabelReasons</label>
            <select class="uif-select form-control" id="selectEndorsementReason" data-native="false" data-id="Id" data-name="Description"
                    name="EndorsementReasonId"
                    data-val="true" data-val-required="@Resources.Language.ErrorDocumentModificationReason"></select>
            @Html.ValidationMessageFor(model => model.EndorsementReasonId)
        </div>
        <div class="uif-col-2" id="divCoInsuranceAccepted" style="display:none">
            <label>@Resources.Language.LabelLeadingPolicy</label>
            @Html.TextBoxFor(model => model.BusinessTypeDescription, new { id = "inputBusinessTypeDescription" })
            @Html.ValidationMessageFor(model => model.BusinessTypeDescription)
        </div>
    </div>
    <div class="row">
        <div class="uif-col-6">
            <label>@Resources.Language.LabelText</label>
            @Html.TextAreaFor(model => model.Text, new { id = "inputText", rows = "5", style = "text-transform:uppercase" })
            @Html.ValidationMessageFor(model => model.Text)
        </div>
        <div class="uif-col-6">
            <label>@Resources.Language.LabelObservations</label>
            @Html.TextAreaFor(model => model.Observations, new { id = "inputObservations", rows = "5", style = "text-transform:uppercase" })
            @Html.ValidationMessageFor(model => model.Observations)
        </div>
    </div>
    <div class="row">
        <div class="uif-col-6">
            <label>@Resources.Language.RecordObservations</label>
            <textarea id="inputRecord" name="inputRecord" rows="5" required></textarea>
        </div>
    </div>
    <div id="panelSummaryExtension">
        <div class="row">
            <div class="uif-col-2">
                <label class="field-required">@Resources.Language.LabelFilingNumber</label>
                @Html.TextBoxFor(model => model.TicketNumber, new { id = "inputTicketNumber", type = "text", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TicketNumber)

            </div>
            <div class="uif-col-2">
                <label class="field-required">@Resources.Language.LabelFilingDate</label>
                @Html.TextBoxFor(model => model.TicketDate, new { id = "inputTicketDate", @class = "uif-datepicker" })
                @Html.ValidationMessageFor(model => model.TicketDate)
            </div>
        </div>
        <div class="row lineDividing">
            <div class="uif-col-12">
                <div class="pull-right">
                    <button type="button" class="btn btn-primary btn-calculate" id="btnCalculate">
                        <div>
                            <i class="fa fa-calculator"></i>
                            <div>
                                @Resources.Language.LabelButtonCalculate
                            </div>
                        </div>
                    </button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="uif-col-12">
                <div class="uif-summary field-summary-alignment">
                    <div class="title">
                        @Resources.Language.LabelSummaryExtension
                    </div>
                    <div class="items">
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelTableRisk</div>
                                <div id="labelRisk">0</div>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelTableSum</div>
                                <div id="labelSum">0</div>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelTablePremium</div>
                                <div id="labelPremium">0</div>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelTableExpenses</div>
                                <div id="labelExpenses">0</div>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelSurcharge</div>
                                <div id="labelCurrentSurcharges">0</div>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelDiscount</div>
                                <div id="labelCurrentDiscounts">0</div>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelTableTaxes</div>
                                <div id="labelTaxes">0</div>
                            </div>
                        </div>
                        <div class="item primary">
                            <div>
                                <div>@Resources.Language.LabelTableTotalPremium</div>
                                <div id="labelTotalPremium">0</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>


