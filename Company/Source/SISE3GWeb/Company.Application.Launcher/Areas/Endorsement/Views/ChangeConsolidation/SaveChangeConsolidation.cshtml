@{
    Layout = null;
}
@model Sistran.Core.Framework.UIF.Web.Areas.Endorsement.Models.ChangeConsolidationViewModel

<form id="formSavePolicyHolder" class="form modal-Colombia">
    @Html.HiddenFor(model => model.IsPrincipal, new { id = "hiddenIsPrincipal" })
    <div class="row">
        <div class="uif-col-6" id="AddPolicyHolder">
            <div class="row">
                <div class="uif-col-12">
                    <label>@Resources.Language.LabelChangeConsolidationName</label>
                    @Html.TextBoxFor(model => model.ChangeConsolidationName, new { id = "inputChangeConsolidationName", @class = "uif-input-search", placeholder = @Resources.Language.PlaceHolderKeyName })
                    @Html.ValidationMessageFor(model => model.ChangeConsolidationName)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-12">
                    <label>@Resources.Language.LabelChangeConsolidationAddress</label>
                    @Html.TextBoxFor(model => model.ChangeConsolidationAddress, new { id = "inputChangeConsolidationAddress", @class = "rightAlign", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.ChangeConsolidationAddress)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-6" id="addPolicyHolderPhone">
                    <label>@Resources.Language.LabelChangeConsolidationPhone</label>
                    @Html.TextBoxFor(model => model.ChangeConsolidationPhone, new { id = "inputChangeConsolidationPhone", @class = "rightAlign", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.ChangeConsolidationPhone)
                </div>
                <div class="uif-col-6" id="addPolicyHolderEmail">
                    <label>@Resources.Language.LabelChangeConsolidationEmail</label>
                    @Html.TextBoxFor(model => model.ChangeConsolidationEmail, new { id = "inputChangeConsolidationEmail", @class = "rightAlign", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.ChangeConsolidationEmail)
                </div>
            </div>

            <div class="row" id="checkboxIsPrincipal">
                <div class="uif-col-3">
                    <input type="checkbox" name="agentIsPrincipal" value=" " id="policyHolderIsPrincipal" />
                    <label for="agentIsPrincipal">@Resources.Language.LabelPrincipalCheckBox</label>
                </div>
            </div>
        </div>
        <div class="uif-col-6" id="listChangeConsolidation">
            <div id="listSaveChangeConsolidation" class="uif-listview"></div>
        </div>
    </div>
    <div class="row lineDividing">
        <div class="uif-col-6" id="btnsChangeConsolidation">
            <div class="pull-right width-save">
                <button type="button" class="btn btn-default" id="btnChangeConsolidationCancel">
                    @Resources.Language.NewForm
                </button>
                <button type="button" class="btn btn-primary" id="btnChangeConsolidationAccept">
                    @Resources.Language.AddForm
                </button>
            </div>
        </div>
    </div>
</form>
