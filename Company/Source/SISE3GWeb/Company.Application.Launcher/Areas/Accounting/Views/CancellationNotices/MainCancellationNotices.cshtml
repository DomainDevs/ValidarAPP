@*AVISOS DE CANCELACION ES SOLO PARA BE*@
@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.CancellationNotices;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li><a href="/Home">@Global.CancellationNotices</a></li>
        <li class="active">@Global.CancellationNotices</li>
    </ol>
}

@section Toolbar
{
    <footer>
        <button type="button" class="btn btn-default" id="CleanCancellationNotices">
            <i class="fa fa-paint-brush"></i> @Global.Clean
        </button>
        <button type="submit" class="btn btn-primary" id="ReportCancellationNotices" onclick="return false" data-role="button">
            <i class="fa fa-print"></i> @Global.Accept
        </button>
    </footer>
}

<form id="CancellationNotices" onsubmit="return false">
    <div class="uif-panel" data-title='@Global.Dates'>
        <div class="progress" id="progressBar">
            <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 0">
            </div>
        </div>
        <div class="uif-row">
            <div class="uif-col-3">
                    <label class="control-label" for="cancellationDate">
                    @Global.RequestDate
                </label>
                <input type="text" id="cancellationDate" name="cancellationDate" maxlength="10" class="uif-datepicker" data-mask="99/99/9999" data-val="true" data-val-required='@Global.RequiredField' />
                <span class="text-danger" data-valmsg-for="cancellationDate" data-valmsg-replace="true">
                </span>
            </div>
            <div class="uif-col-3">
                <label class="control-label" for="effectiveDate">
                    @Global.DateOfEffectiveCancellation
                </label>
                <input type="text" id="effectiveDate" name="effectiveDate" maxlength="10" class="uif-datepicker" data-mask="99/99/9999" data-val="true" data-val-required='@Global.RequiredField' />
                <span class="text-danger" data-valmsg-for="effectiveDate" data-valmsg-replace="true" />
            </div>
            <div class="uif-col-3">
                <label class="control-label" for="daysFrom">
                    @Global.DaysFrom
                </label>
                <input type="text" id="daysFrom" name="daysFrom" maxlength="3" onkeypress="return OnlyDecimalNumber(event,this)" />
            </div>
            <div class="uif-col-3">
                <label class="control-label" for="daysTo">@Global.DaysTo</label>
                <input type="text" id="daysTo" name="daysTo" maxlength="3" onkeypress="return OnlyDecimalNumber(event,this)" />
            </div>
        </div>
   </div>
    <div class="uif-panel" data-title='@Global.Intermediaries'>
        <div class="uif-row">
            <div class="uif-col-12">
                <div class="uif-alert" id="alertCancellationNotices"></div>
            </div>
        </div>
        <div class="uif-row">
            <div class="uif-col-6">
                <input type="radio" id="allIntermediaries" name="oneIntermediary" value="0" checked>
                <label class="control-label" for="allIntermediaries">@Global.AllIntermediaries</label>
            </div>
            <div class="uif-col-6">
                <input type="radio" id="oneIntermediary" name="oneIntermediary" value="1">
                <label class="control-label" for="oneIntermediary">@Global.OneIntermediary</label>
            </div>
        </div>
        <div class="uif-row">
            <div class="uif-col-6">
                <label class="control-label" for="AgentDocumentNumber">
                    @Global.DocumentNumberIntermediary
                </label>
                <input class="uif-autocomplete" type="text" id="AgentDocumentNumber" name="AgentDocumentNumber" data-source="@Url.Action("GetAgentByDocumentNumber", "Common")" data-displaykey="DocumentNumberName" onkeypress="return OnlyDecimalNumber(event,this)" />
            </div>
            <div class="uif-col-6">
                <label class="control-label" for="AgentName">
                    @Global.IntermediaryName
                </label>
                <input class="uif-autocomplete" type="text" id="AgentName" name="AgentName" data-source="@Url.Action("GetAgentByName", "Common")" data-displaykey="DocumentNumberName" />
            </div>
        </div>
   </div>
</form>

    <div class="uif-row" id="Form1">
        <div class="uif-col-4">
            <a id="dynamicLink">@Global.DownloadFileLink</a>
        </div>
    </div>

