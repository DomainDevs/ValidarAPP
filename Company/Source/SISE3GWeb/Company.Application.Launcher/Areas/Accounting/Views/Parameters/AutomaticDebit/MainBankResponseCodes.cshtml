@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.BankResponseCodes;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.Parameters</li>
        <li>@Global.AutomaticDebit</li>
        <li>@Global.BankResponseCodes</li>
    </ol>
}

@section Modals
{
<form id="BankResponseCodeAddForm" onsubmit="return false" class="form">
    <div class="uif-modal" id="BankResponseCodeModalAdd">
        <div class="uif-modalbody">
            @Html.Partial("../Parameters/AutomaticDebit/BankResponseCodesModal")
        </div>

        <div class="uif-modalbuttons">
            <button type="button" class="btn btn-default" id="BankResponseCodeCancelAdd" data-dismiss="modal">@Global.Cancel</button>
            <button type="submit" class="btn btn-primary" id="BankResponseCodeSaveAdd" onclick="return false">@Global.Save</button>
        </div>
    </div>
</form>

<form id="BankResponseCodeEditForm" onsubmit="return false" class="form">
    <div class="uif-modal" id="BankResponseCodeModalEdit">
        <div class="uif-modalbody">
            @Html.Partial("../Parameters/AutomaticDebit/BankResponseCodesModal")
        </div>
        <div class="uif-modalbuttons">
            <button type="button" class="btn btn-default" data-dismiss="modal">@Global.Cancel</button>
            <button type="submit" class="btn btn-primary" id="BankResponseCodeSaveEdit" onclick="return false">@Global.Save</button>
        </div>
    </div>
</form>

    <!-- /.Modal de Eliminación -->
    <div class="modal fade" id="modalDeleteResponse" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="padding: 10px">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="fa fa-times-circle">
                        </i>
                    </button>
                    <h4 class="modal-title"><label id="BankResponseCodeDeleteMessageTitle">@Global.Delete</label></h4>
                </div>
                <div class="modal-body" id="BankResponseCodeDeleteMessageModal">
                    <p>@Global.DeleteConfirmationMessage</p>
                </div>
                <div class="modal-footer" style="padding: 10px 20px 10px">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove"></span> @Global.Cancel
                    </button>
                    <button type="button" class="btn btn-primary" id="BankResponseCodeDeleteModal">
                        <span class="glyphicon glyphicon-ok"></span> @Global.Accept
                    </button>
                </div>
            </div>
        </div>
    </div>
}
<br />
<div class="uif-row">
    <div class="uif-alert" id="BankResponseCodeAlert"></div>
</div>
<div class="uif-row">
    <div class="uif-col-12">
        <table class="uif-table" id="tableBankResponseCodes" data-exporttocsv="false" data-add="true" data-edit="true"
               data-delete="true" data-selectiontype="multiple" data-filter="true"
               data-source="@Url.Action("GetBankNetworkStatus", "Networks")"
               data-paginate="true" data-title="@Global.BankResponseCodes">
            <thead>
                <tr>
                    <th data-property="Id">Id</th>
                    <th data-property="Description">@Global.Net</th>
                    <th data-property="TableCode">@Global.TableCode</th>
                    <th data-property="RejectionDefaultCode">@Global.RejectionDefaultCode</th>
                    <th data-property="RejectionDescription" data-visible="false">@Global.Description</th>
                    <th data-property="AcceptedDefaultCode">@Global.AcceptedDefaultCode</th>
                    <th data-property="AcceptedDescription" data-visible="false">@Global.Description</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div> 
</div>

@section scripts
{
    @Scripts.Render("~/accounting/bundles/MainBankResponseCodes")
}
