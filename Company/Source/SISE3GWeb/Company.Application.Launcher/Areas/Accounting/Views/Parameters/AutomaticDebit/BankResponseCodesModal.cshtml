@using Sistran.Core.Framework.UIF.Web.Resources

@model Sistran.Core.Application.AccountingServices.Models.AutomaticDebits.BankNetworkStatus


<div class="uif-panel">
    <div class="uif-row">
        <div class="uif-col-6">
            <label>@Global.Net</label>
            @Html.DropDownList("selectNetwork", Enumerable.Empty<SelectListItem>(), new
                    {
                        @class = "uif-select form-control",
                        data_source = @Url.Content("~/Accounting/Common/GetNets"),
                        data_id = "Id",
                        data_name = "Description",
                        data_val = "true",
                        data_val_required = @Global.RequiredField,
                        data_native = "true"
                    })
            <span class="text-danger" data-valmsg-for="selectNetwork" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-6">
            <label>Código Tabla</label>@*@Global.TableCode*@
            @Html.DropDownList("selectTable", Enumerable.Empty<SelectListItem>(), new
                    {
                        @class = "uif-select form-control",
                        data_source = @Url.Content("~/Networks/GetDebitStatusTables"),
                        data_id = "Id",
                        data_name = "Description",
                        data_val = "true",
                        data_val_required = @Global.RequiredField,
                        data_native = "true"
                    })
            <span class="text-danger" data-valmsg-for="selectTable" data-valmsg-replace="true" />
        </div>
    </div>
    <div class="uif-row">
        <div class="uif-col-6">
            <label>@Global.RejectionDefaultCode</label>
            <br />
            <select class="uif-select form-control" id="selectRejection" name="selectRejection" data-val="true" data-native="true"
                    data-val-required='@Global.RequiredField' data-source='' data-id="Id" data-name="Description"></select>
            <span class="text-danger" data-valmsg-for="selectRejection" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-6">
            <label>@Global.AcceptedDefaultCode</label>
            <select class="uif-select form-control" id="selectAccepted" name="selectAccepted" data-source='' data-id="Id"
                    data-name="Description" data-val="true" data-val-required='@Global.RequiredField' data-native="true"></select>
            <span class="text-danger" data-valmsg-for="selectAccepted" data-valmsg-replace="true" />
        </div>
    </div>
    <div class="uif-row">
        <div class="uif-alert" id="alertForm"></div>
    </div>
</div>


