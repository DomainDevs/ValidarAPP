@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = Global.RetentionBase;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li><a href="/Home">@Global.Parameters</a></li>
        <li class="active">@Global.RetentionBase</li>
    </ol>
}

<script id="listTemplateRetentionBase" type="text/template">
    <span>
        <strong>
            @Global.Description:
        </strong>
        <span class="label label-success">
            {{Description}}
        </span>
    </span>
</script>

<script id="add-template" type="text/template">
    @Html.Partial("~/Areas/Accounting/Views/Parameters/Retention/RetentionBaseEditor.cshtml")
</script>

<div class="row">
    <div class="col-md-12">
        <div class="uif-alert" id="alertRetentionBase"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="uif-listview" id="retentionBaseListView">
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/accounting/bundles/RetentionBase")
}
