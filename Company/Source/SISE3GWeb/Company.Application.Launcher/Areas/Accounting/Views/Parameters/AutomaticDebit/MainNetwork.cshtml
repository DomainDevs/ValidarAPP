@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.Networks;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.Parameters</li>
        <li>@Global.AutomaticDebit</li>
        <li>@Global.Networks</li>
    </ol>
}

@section Modals
{
<form id="MainNetworkAddForm" onsubmit="return false" class="form">
    <div class="uif-modal" id="MainNetworkModalAdd">
        <div class="uif-modalbody">
            @Html.Partial("~/Areas/Accounting/Views/Parameters/AutomaticDebit/BankNetworkModal.cshtml")
        </div>

        <div class="uif-modalbuttons">
            <button type="button" class="btn btn-default" data-dismiss="modal">@Global.Cancel</button>
            <button type="submit" class="btn btn-primary" id="MainNetworkSaveAdd" onclick="return false">@Global.Save</button>
        </div>
    </div>
</form>
    
<form id="MainNetworkEditForm" onsubmit="return false" class="form">
    <div class="uif-modal" id="MainNetworkModalEdit">
        <div class="uif-modalbody">
            @Html.Partial("~/Areas/Accounting/Views/Parameters/AutomaticDebit/BankNetworkModal.cshtml")
        </div>
        <div class="uif-modalbuttons">
            <button type="button" class="btn btn-default" data-dismiss="modal">@Global.Cancel</button>
            <button type="submit" class="btn btn-primary" id="MainNetworkSaveEdit" onclick="return false">@Global.Save</button>
        </div>
    </div>
</form>

    <div class="uif-modal" id="modalBankNetwork"></div>

    <!-- /.Modal de Eliminación -->
    <div class="modal fade" id="modalDeleteNetwork" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="padding: 10px">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="fa fa-times-circle">
                        </i>
                    </button>
                    <h4 class="modal-title"><label id="deleteMessageTitle">@Global.Delete</label></h4>
                </div>
                <div class="modal-body" id="deleteMessageModal">
                    <p>@Global.DeleteConfirmationMessage</p>
                </div>
                <div class="modal-footer" style="padding: 10px 20px 10px">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove"></span> @Global.Cancel
                    </button>
                    <button type="button" class="btn btn-primary" id="MainNetworkDeleteModal">
                        <span class="glyphicon glyphicon-ok"></span> @Global.Accept
                    </button>
                </div>
            </div>
        </div>
    </div>

}

<br />

<div class="uif-row">
    <div class="uif-col-12">
        <div class="uif-alert" id="MainNetworkAlert"></div>
    </div>
</div>

<div class="uif-row">
    <div class="uif-col-12">
        <table class="uif-table" id="tableNetwork" data-exporttocsv="false" data-add="true" data-edit="true"
               data-delete="true" data-selectiontype="none" data-filter="false"
               data-source="@Url.Action("GetNetworks", "Networks")"
               data-paginate="true" data-title="@Global.Networks">
            <thead>
                <tr>
                    <th data-property="Id">Id</th>
                    <th data-property="Description">@Global.Net</th>
                    <th data-property="IsHasTax" data-type="boolean">@Global.HasTax</th>
                    <th data-property="TaxCategoryId" data-visible="false">@Global.TypeTax</th>
                    <th data-property="TaxCategoryDescription">@Global.TypeTax</th>
                    <th data-property="CommissionValue">@Global.CommissionValue</th>
                    <th data-property="RetriesNumber">@Global.RetriesNumber</th>
                    <th data-property="PreNotifications" data-type="boolean">@Global.PreNotifications</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<input type="hidden" id="ViewBagControlSpanNetwork" value="true" />

@section scripts
{
    @Scripts.Render("~/accounting/bundles/MainNetwork")
}
