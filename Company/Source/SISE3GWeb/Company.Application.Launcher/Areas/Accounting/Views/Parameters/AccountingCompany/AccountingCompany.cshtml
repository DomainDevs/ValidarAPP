@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.AccountingCompany;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.Parameters</li>
        <li>@Global.Billing</li>
        <li>@Global.AccountingCompany</li>
    </ol>
}

<script id="AccountingCompanyListTemplate" type="text/template">
    <span>
        <strong>
            @Global.Code:
        </strong>
        <span class="label label-success">
            {{Id}}
        </span>
        <strong>
            @Global.Description:
        </strong>
        <span class="label label-success">
            {{Description}}
        </span>
    </span>
</script>

<script id="add-template" type="text/template">
    @Html.Partial("AccountingCompany/AccountingCompanyEditor")
</script>

<div class="row">
    <div class="uif-col-12">
        <div class="uif-alert" id="alertAccountingCompany"></div>
    </div>
</div>

<div class="row">
    <div class="uif-col-12">
        <div class="uif-listview" id="AccountingCompanyList">
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/accounting/bundles/AccountingCompany")
}
