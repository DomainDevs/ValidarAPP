@using Sistran.Core.Framework.UIF.Web.Resources
@{
    ViewBag.Title = @Global.CurrentPolicies;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li><a href="/Home">@Global.Reports</a></li>
        <li class="active">@Global.CurrentPolicies</li>
    </ol>
}

@section modals{
    <div class="modal fade" id="modalMassiveTotRecords" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><b>@Global.PortfolioByBroker</b></h4>
                </div>
                <div class="modal-body">
                    <b id="pnlModalTotRecords"></b>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="CPLReportModal">@Global.Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Global.No</button>
                </div>
            </div>
        </div>
    </div>
}

<form id="CPLReportForm" onsubmit=" return false ">
    <div class="uif-row">
        <div class="uif-col-3">
            <label class="control-label">@Global.Currency </label>
            <select class="uif-select form-control required" id="CPLReportCurrency" name="CPLReportCurrency"
                    data-source='@Url.Content("~/Accounting/Common/GetCurrencies")' data-id="Id"
                    data-name="Description" data-val="true"
                    data-val-required='@Global.RequiredField' data-native="true"></select>
            <span class="text-danger" data-valmsg-for="CPLReportCurrency" data-valmsg-replace="true" />

        </div>
        <div class="uif-col-4">
            <label class="control-label">@Global.Branch</label>
            <select class="uif-select form-control required" id="CPLReportBranch" name="CPLReportBranch"
                    data-source='@Url.Content("~/Accounting/Common/GetListBranchesbyUserName")'
                    data-id="Id" data-selectedid="@ViewBag.BranchDefault" data-name="Description" data-val="true"
                    data-val-required='@Global.RequiredField' data-native="true"></select>
            <span class="text-danger" data-valmsg-for="CPLReportBranch" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-5">
            <label class="control-label"> @Global.Prefix </label>
            <select class="uif-select form-control" id="CPLReportPrefix"
                    data-source='@Url.Content("~/Accounting/Common/GetPrefixes")' data-id="Id"
                    data-name="Description" data-val="true"></select>
        </div>
    </div>

    <div class="uif-row">
        <div class="uif-col-3">
            <label>@Global.DateTo</label>
            <input type="text" id="CPLReportDateTo" name="CPLReportDateTo" class="uif-datepicker" data-mask-date="99/99/9999" maxlength="10" data-val="true" data-val-required="@Global.RequiredField" />
            <span class="text-danger" data-valmsg-for="CPLReportDateTo" data-valmsg-replace="true" />
        </div>

    </div>

    <div class="uif-row">
        <div class="uif-col-12">
            <div class="uif-alert" id="alertCPLForm"></div>
        </div>
    </div>

    @section Toolbar
{
        <footer>
            <button id="CPLReportClean" class="btn btn-default" role="button">
                <span class="glyphicon glyphicon-remove"></span>  @Global.Clean
            </button>
            <button id="CPLReportGenerate" class="btn btn-primary" role="button">
                <span class="glyphicon glyphicon-play"></span>  @Global.btnPlay
            </button>
        </footer>
    }
</form>

@*VIEWBAGS*@
<input type="hidden" id="ViewBagBranchDisable" value="@ViewBag.BranchDisable" />

@section scripts
{
    @Scripts.Render("~/accounting/bundles/CurrentPoliciesList")
}

<div class="uif-row">
    <div class="uif-col-12">
        <div style="padding: 0 0 0 0">
            @Html.Partial("PartialProgressReports")
        </div>
    </div>
</div>