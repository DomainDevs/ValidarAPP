@using Sistran.Core.Framework.UIF.Web.Resources
@{
    ViewBag.Title = Global.BrokerExpiredPortfolio;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{

<ol class="breadcrumb global-header-breadcrumb">
    <li>@Global.Reports</li>
    <li>@Global.PortfolioReports</li>
    <li class="active">@Global.BrokerExpiredPortfolio</li>
</ol>
}

<form id="ReportFormBrokerExpiredPortfolio" onsubmit=" return false ">
    <div class="uif-row">
        <div class="uif-col-6">
            <div class="radio">
                <label>
                    <input type="radio" name="options" id="allBrokerExpiredPortfolio" value="2" checked>
                    @Global.All
                </label>
                <label>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" name="options" id="OnlyDebitsBrokerExpiredPortfolio" value="1">
                        @Global.OnlyDebts
                </label>
                
            </div>
        </div>
        <div class="uif-col-6">
            <label>@Global.DateTo @Global.OfExpiration </label>
            @Html.TextBox("EndDateBrokerExpiredPortfolio", "", new
           {
               style = "text-align: left",
               maxlength = "40",
               data_val = "true",
               data_name = "EndDateBrokerExpiredPortfolio",
               @class = "uif-datepicker",
               data_mask = "99/99/9999",
               data_val_required = @Global.RequiredField
           })
            <span class="text-danger" data-valmsg-for="EndDateBrokerExpiredPortfolio" data-valmsg-replace="true" />
        </div>
        
    </div>

    <div class="uif-row">
        <div class="uif-col-6">
            <label class="control-label" for="AgentDocumentBrokerExpiredPortfolio">
                @Global.AgentDocumentNumber
            </label>
            <input class="uif-autocomplete" type="text"
                   data-source="@Url.Action("GetAgentByDocumentNumber", "Common")"
                   data-displaykey="DocumentNumber" placeholder='@Global.EnterAgentName' id="AgentDocumentBrokerExpiredPortfolio"
                   name="AgentDocumentBrokerExpiredPortfolio" hidden="hidden" data-val="true" data-val-required="@Global.RequiredField" />
            <span class="text-danger" data-valmsg-for="AgentDocumentBrokerExpiredPortfolio" data-valmsg-replace="true">
            </span>
        </div>
        <div class="uif-col-6">
            <label class="control-label" for="AgentNameBrokerExpiredPortfolio">
                @Global.Agent
            </label>
            <input class="uif-autocomplete" type="text"
                   data-source="@Url.Action("GetAgentByName", "Common")"
                   data-displaykey="Name" placeholder='@Global.EnterAgentDocument' id="AgentNameBrokerExpiredPortfolio"
                   name="AgentNameBrokerExpiredPortfolio" hidden="hidden" data-val="true" data-val-required="@Global.RequiredField" />
            <span class="text-danger" data-valmsg-for="AgentNameBrokerExpiredPortfolio" data-valmsg-replace="true">
            </span>
        </div>
        
    </div>

    <div class="uif-row">
       <div class="uif-col-12">

       </div>
    </div>

    <div class="uif-row">
       <div class="uif-col-12">
          <div class="uif-alert" id="alertForm"></div>
       </div>
    </div>


  @section Toolbar
    {
    <footer>
        <button id="CancelBrokerExpiredPortfolio" class="btn btn-default" role="button">
            <span class="glyphicon glyphicon-remove"></span>  @Global.Clean
        </button>
        <button id="MassiveReportBrokerExpiredPortfolio" class="btn btn-primary" role="button">
            <span class="glyphicon glyphicon-play"></span>  @Global.btnPlay
        </button>
    </footer>
}
</form>

@section modals{

    @*VENTANAS MODALES DE CONFIRMACION*@
    <!-- Modal Confirma proceso de masivos-->
    <div class="modal fade" id="modalMassiveTotRecords" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><b>@Global.BrokerExpiredPortfolio</b></h4>
                </div>
                <div class="modal-body">
                    <b id="pnlModalTotRecords"></b>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnModalBrokerExpiredPortfolio">@Global.Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="btnModalMassiveNo">@Global.No</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <!-- Modal Confirmacion del Proceso Masivo de cada reporte -->
    <div class="modal fade" id="modalMassiveReport" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><b>@Global.BrokerExpiredPortfolio</b></h4>
                </div>
                <div class="modal-body">
                    @Global.ConfirmMessageProcess
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnModalMassiveProcessReport">@Global.Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Global.No</button>
                </div>
            </div>
        </div>
    </div>
}



@section scripts
{
    @Scripts.Render("~/accounting/bundles/BrokerExpiredPortfolioList")
}

<div class="uif-row">
    <div class="uif-col-12">
        <div style="padding: 0 0 0 0">
            @Html.Partial("PartialProgressReports")
        </div>
    </div>
</div>


