@using Sistran.Core.Framework.UIF.Web.Resources
@{
    ViewBag.Title = @Global.PendingApplication;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.Reports</li>
        <li>@Global.PortfolioReports</li>
        <li>@Global.Recovery_Receipt</li>
        <li class="active">@Global.PendingApplication</li>
    </ol>
}

<form id="ReportPendingApplicationListForm" onsubmit=" return false ">
    <div class="uif-row">
        <div class="uif-col-4">
            <label class="control-label">
                @Global.Branch
            </label>
            @Html.DropDownList("BranchPendingApplicationList", Enumerable.Empty<SelectListItem>(), new
           {
               @class = "uif-select form-control",
               data_source = @Url.Content("~/Accounting/Common/GetListBranchesbyUserName"),
               data_id = "Id",
               data_name = "Description",
               data_selectedid = @ViewBag.BranchDefault,
               data_val = "true",
               data_native = "true",
               data_val_required = @Global.RequiredField
           })
            <span class="text-danger" data-valmsg-for="BranchPendingApplicationList" data-valmsg-replace="true" />
        </div>

        <div class="uif-col-4">
            <label>@Global.DateFrom</label>
            @Html.TextBox("StartDatePendingApplicationList", "", new
           {
               style = "text-align: left",
               maxlength = "40",
               data_val = "true",
               data_name = "StartDateBillingMovements",
               @class = "uif-datepicker",
               data_mask = "99/99/9999",
               data_val_required = @Resources.Global.RequiredField
           })
            <span class="text-danger" data-valmsg-for="StartDatePendingApplicationList" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-4">
            <label>@Global.DateTo</label>
            @Html.TextBox("EndDatePendingApplicationList", "", new
           {
               style = "text-align: left",
               maxlength = "40",
               data_val = "true",
               data_name = "EndDateBillingMovements",
               @class = "uif-datepicker",
               data_mask = "99/99/9999",
               data_val_required = @Resources.Global.RequiredField
           })
            <span class="text-danger" data-valmsg-for="EndDatePendingApplicationList" data-valmsg-replace="true" />
        </div>

    </div>

    <div class="uif-row">
        <div class="uif-col-12">
            <div class="uif-alert" id="alertForm"></div>
        </div>
    </div>

    @section Toolbar
    {
        <footer>
            <button id="CancelReportPendingApplicationList" class="btn btn-default" role="button">
                <span class="glyphicon glyphicon-remove"></span>  @Global.Clean
            </button>
            <button id="MassiveReportPendingApplicationList" class="btn btn-primary" role="button">
                <span class="glyphicon glyphicon-play"></span>  @Global.btnPlay
            </button>
        </footer>
    }


    @section modals{

        @*VENTANAS MODALES DE CONFIRMACION*@
        <!-- Modal Confirma proceso-->
        <div class="modal fade" id="modalMassiveTotRecords" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title"><b>@Global.PendingApplication</b></h4>
                    </div>
                    <div class="modal-body">
                        <b id="pnlModalTotRecords"></b>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnModalPendingApplicationList">@Global.Yes</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" id="btnModalMassiveNo">@Global.No</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
        <!-- Modal Confirmacion del Proceso Masivo de cada reporte -->
        <div class="modal fade" id="modalMassiveReport" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title"><b>@Global.PendingApplication</b></h4>
                    </div>
                    <div class="modal-body">
                        @Global.ConfirmMessageProcess
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnModalMassiveProcessReport">@Global.Yes</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">@Global.No</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <input type="hidden" id="ViewBagPendingApplicationList" value="PendingApplicationList" />
</form>

@section scripts
{
    @Scripts.Render("~/accounting/bundles/PendingApplicationList")
}

<div class="uif-row">
    <div class="uif-col-12">
        <div style="padding: 0 0 0 0">
            @Html.Partial("PartialProgressReports")
        </div>
    </div>
</div>