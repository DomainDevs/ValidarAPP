@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.AccountInventory;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.Reports</li>
        <li>@Global.AccountingReports</li>
        <li>@Global.AccountingLable</li>
        <li class="active">@Global.AccountInventory</li>
    </ol>
}


@section Toolbar
{
    <footer>
        <div class="pull-right">
            <button id="CancelInventory" class="btn btn-default" role="button">
                <span class="glyphicon glyphicon-remove"></span>   @Global.Clean
            </button>
            <button id="GenerateInventory" class="btn btn-primary" role="button">
                <span class="glyphicon glyphicon-play"></span>  @Global.btnPlay
            </button>
        </div>
    </footer>
}

@section modals{

    @*VENTANAS MODALES DE CONFIRMACION*@
    <!-- Modal Confirma proceso de masivos reaseguros -->
    <div class="modal fade" id="modalMassiveTotRecords" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><b>@Global.AccountInventory</b></h4>
                </div>
                <div class="modal-body">
                    <b id="pnlModalTotRecords"></b>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnModalAccountInventory">@Global.Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="btnModalMassiveNo">@Global.No</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <!-- Modal Confirmacion del Proceso Masivo de cada reporte -->
    <div class="modal fade" id="modalMassiveReport" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><b>@Global.AccountInventory</b></h4>
                </div>
                <div class="modal-body">
                    @Global.ConfirmMessageProcess
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnModalMassiveProcessReport">@Global.Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Global.No</button>
                </div>
            </div>
        </div>
    </div>
}

<form id="ReportFormAccountInventory" onsubmit=" return false ">
    <div class="uif-row">
        <div class="uif-col-3">
            <label class="control-label">
                @Global.MonthFrom
            </label>
            @Html.DropDownList("MonthFromAccountInventory", Enumerable.Empty<SelectListItem>(), new
             {
                 @class = "uif-select form-control",
                 data_source = @Url.Content("~/Accounting/Common/GetYearMonths"),
                 data_id = "Id",
                 data_name = "Description",
                 data_val = "true",
                 data_native = "true",
                 data_val_required = @Global.RequiredField
             })
            <span class="text-danger" data-valmsg-for="MonthFromAccountInventory" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-3">
            <label class="control-label">
                @Global.MonthTo
            </label>
            @Html.DropDownList("MonthToAccountInventory", Enumerable.Empty<SelectListItem>(), new
             {
                 @class = "uif-select form-control",
                 data_source = @Url.Content("~/Accounting/Common/GetYearMonths"),
                 data_id = "Id",
                 data_name = "Description",
                 data_val = "true",
                 data_native = "true",
                 data_val_required = @Global.RequiredField
             })
            <span class="text-danger" data-valmsg-for="MonthToAccountInventory" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-3">
            <label>@Global.Year</label>
            <input class="form-control" placeholder='@Global.ExampleYear' data-val="true" data-val-required="@Global.RequiredField"
                   id="YearAccountInventory" name="YearAccountInventory" type="text" onkeypress="return JustNumbers(event, this);" maxlength="4" min="1900" />
            <span class="text-danger" data-valmsg-for="YearAccountInventory" data-valmsg-replace="true"></span>
        </div>
        <div class="uif-col-3">
            <label class="control-label">
                @Global.Branch
            </label>
            @Html.DropDownList("BranchAccountInventory", Enumerable.Empty<SelectListItem>(), new
               {
                   @class = "uif-select form-control",
                   data_source = @Url.Content("~/Accounting/Common/GetBranchs"),
                   data_id = "Id",
                   data_name = "Description",
                   data_selectedid = @ViewBag.BranchDefault,
                   data_val = "true",
                   data_native = "true",
                   data_val_required = @Global.RequiredField
               })
            <span class="text-danger" data-valmsg-for="BranchAccountInventory" data-valmsg-replace="true" />
        </div>
      
    </div>
    <div class="uif-row">
       
        <div class="uif-col-3">
            <span class="glyphicon glyphicon-check" id="checkAllAccountInventory"></span><input type="checkbox" id="checkAllAccountInventory"> @Global.AllAccounts
        </div>
        <div class="uif-col-3">
            <span class="glyphicon glyphicon-check" id="checkAccumulatedAccountInventory"></span><input type="checkbox" id="checkAccumulatedAccountInventory"> @Global.Accumulated
        </div>
    </div>

    <div class="uif-row">
        <div class="uif-col-3">
            <span class="glyphicon glyphicon-check" id="checkAssetsAccountInventory"></span><input type="checkbox" id="checkAssetsAccountInventory"> @Global.Assets
        </div>
        <div class="uif-col-3">
            <span class="glyphicon glyphicon-check" id="checkLiabilitiesAccountInventory"></span><input type="checkbox" id="checkLiabilitiesAccountInventory"> @Global.Liabilities
        </div>
        <div class="uif-col-3">
            <span class="glyphicon glyphicon-check" id="checkPatrimonyAccountInventory"></span><input type="checkbox" id="checkPatrimonyAccountInventory"> @Global.Patrimony
        </div>
        @*<div class="uif-col-3">
            <span class="glyphicon glyphicon-check" id="checkMemorandumAccounts"></span><input type="checkbox" id="checkMemorandumAccounts"> @Global.MemorandumAccounts
        </div>*@
    </div>

    <div class="uif-row">
        <div class="uif-col-3">
            <span class="glyphicon glyphicon-check" id="checkIncomeAccountInventory"></span><input type="checkbox" id="checkIncomeAccountInventory"> @Global.Income
        </div>
        <div class="uif-col-3">
            <span class="glyphicon glyphicon-check" id="checkExpensesAccountInventory"></span><input type="checkbox" id="checkExpensesAccountInventory"> @Global.Expenses
        </div>
        @*<div class="uif-col-3">
            <span class="glyphicon glyphicon-check" id="checkContingentAccount"></span><input type="checkbox" id="checkContingentAccount"> @Global.ContingentAccount
        </div>*@
    </div>

    <div class="uif-row">
        <div class="uif-col-12">
            <div class="uif-alert" id="alertAccountInventory"></div>
        </div>
    </div>

</form>
@*<input type="hidden" id="ViewBagControlSpanAccountInventory" value="true" />*@

@*VIEWBAGS*@
<input type="hidden" id="ViewBagAssets" value="@ViewBag.Assets" />
<input type="hidden" id="ViewBagLiabilities" value="@ViewBag.Liabilities" />
<input type="hidden" id="ViewBagPatrimony" value="@ViewBag.Patrimony" />
<input type="hidden" id="ViewBagIncome" value="@ViewBag.Income" />
<input type="hidden" id="ViewBagExpenses" value="@ViewBag.Expenses" />

<div class="uif-row">
    <div class="uif-col-12">
        <div style="padding: 0 0 0 0">
            @Html.Partial("PartialProgressReports")
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/accounting/bundles/AccountInventory")
}