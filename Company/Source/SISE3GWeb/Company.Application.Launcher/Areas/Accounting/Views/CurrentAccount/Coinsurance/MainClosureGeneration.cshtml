@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.ClosureGeneration;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.CurrentAccount</li>
        <li>@Global.Coinsurances</li>
        <li>@Global.ClosureGeneration</li>
    </ol>
}

@section Toolbar
{
    <footer>
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0559"))
        {
            <button class="btn btn-primary" id="AcceptClosureGeneration">
                <i class="fa fa-save"></i> @Global.Accept
            </button>
        }  
        </footer>
}

<form id="formClosureGeneration" onsubmit="return false">
    <div class="uif-row">
        <div class="uif-col-6">
            <label>@Global.Date</label>
            @Html.TextBox("DateClosureGeneration", "", new
            {
                id = "DateClosureGeneration",
                maxlength = "10",
                @class = "uif-datepicker",
                data_val = "true",
                data_val_required = @Global.RequiredField,
                data_max_date = @ViewBag.DateAccounting
            })
            <span class="text-danger" data-valmsg-for="DateClosureGeneration" data-valmsg-replace="true" />
        </div>
    </div>
   
    <div class="uif-row">
        <div class="uif-col-12">
            <div class="uif-alert" id="alertForm"></div>
        </div>
    </div>
</form>

@section scripts
{
    @Scripts.Render("~/accounting/bundles/MainClosureGeneration")
}