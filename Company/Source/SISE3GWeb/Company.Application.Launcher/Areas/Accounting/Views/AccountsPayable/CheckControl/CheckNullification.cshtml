@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.PathCancelCheck;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.AccountingAdministrative</li>
        <li>@Global.MenuCashOtuflows</li>
        <li>@Global.AnnulmentChecks</li>
    </ol>
}

@section Toolbar
{
    <footer>
        <button type="button" class="btn btn-default" id="CancelCheckNullification">
            <i class="fa fa-remove"></i>  @Global.Cancel
        </button>
        <button id="AcceptCheckNullification" class="btn btn-primary" role="button">
            <i class="fa fa-check"></i>  @Global.Accept
        </button>
    </footer>
}



@*----------------------------------------------------------------------------------------------------------------------------------------------------------
                                                                CODIGO HTML
    ----------------------------------------------------------------------------------------------------------------------------------------------------------  *@
<form id="CheckNullificationForm" onsubmit=" return false ">
    <div class="uif-row">
        <div class="uif-col-3">
            <label>@Global.Branch @Global.Bank</label>
            @Html.DropDownList("BranchCheckNullification", Enumerable.Empty<SelectListItem>(), new
             {
                 @class = "uif-select form-control",
                 data_source = @Url.Content("~/Accounting/Common/GetBranchs"),
                 data_id = "Id",
                 data_name = "Description",
                 data_selectedid = @ViewBag.BranchDefault,
                 data_native = "true",
                 data_val = "true",
                 data_val_required = @Global.RequiredField
             })
            <span class="text-danger" data-valmsg-for="BranchCheckNullification" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-3">
            <label>@Global.BankName</label>
            @Html.DropDownList("BankNameCheckNullification", Enumerable.Empty<SelectListItem>(), new
             {
                 @class = "uif-select form-control",
                 data_id = "Id",
                 data_name = "Description",
                 data_native = "true",
                 data_val = "true",
                 data_val_required = @Global.RequiredField
             })
            <span class="text-danger" data-valmsg-for="BankNameCheckNullification" data-valmsg-replace="true" />
        </div>

        <div class="uif-col-3">
            <label>@Global.BankAccountNumber</label>
            <br />

            @Html.DropDownList("AccountNumberCheckNullification", Enumerable.Empty<SelectListItem>(), new
       {
           @class = "uif-select form-control",
           data_id = "Id",
           data_name = "Number",
           data_val = "true",
           data_native = "true",
     
           data_val_required = @Global.RequiredField
       })
            <span class="text-danger" data-valmsg-for="AccountNumberCheckNullification" data-valmsg-replace="true" />
        </div>

        <div class="uif-col-3">
            <label>@Global.Currency</label>
            @Html.TextBox("CurrencyCheckNullification", "", new
            {
                disabled = "disabled",
                data_val = "true",
                data_val_required = @Global.RequiredField
            })
            <span class="text-danger" data-valmsg-for="CurrencyCheckNullification" data-valmsg-replace="true" />
        </div>
    </div>

    <div class="uif-row">
        <div class="uif-col-3">
            <label>@Global.CheckNumber</label>
            @Html.TextBox("CheckNumberCheckNullification", "", new
                        {
                            @onkeypress = "return JustNumbers(event,this)",
                            maxlength = "9",
                            data_val = "true",
                            data_val_required = @Global.RequiredField
                        })
            <span class="text-danger" data-valmsg-for="CheckNumberCheckNullification" data-valmsg-replace="true" />
        </div>
    </div>
</form>

<div class="form-footer">
    <button type="button" class="btn btn-default" id="CleanCheckNullification">
        <i class="fa fa-paint-brush"></i>        @Global.Clean
    </button>
    <button type="button" class="btn btn-primary" id="SearchCheckNullification">
        <i class="fa fa-search"></i>        @Global.Search
    </button>
</div>

<div class="uif-row">
    <div class="uif-col-12">
        <div class="uif-alert" id="alertCheckullification"></div>
    </div>
</div>

<div class="uif-row">
    <div class="uif-col-12">
        <table class="uif-table" id="CheckNullification" data-exporttocsv="false" data-edit="false" data-delete="false"
               data-filter="false" data-paginate="true" data-selectiontype="multiple"
               data-title="@Global.PaymentOrders">
            <thead>
                <tr>
                    <th data-property="PaymentOrderCode">@Global.PaymentOrderNumber</th>
                    <th data-property="PayTo">@Global.BeneficiaryName</th>
                    <th data-property="PaymentDate">@Global.PaymentDate</th>
                    <th data-visible="false" data-property="CheckPaymentOrderCode">@Global.LabelReceiptPayNumber</th>
                    <th data-property="Amount">@Global.Amount</th>
                    <th data-property="PaymetOrderStatusDescription">@Global.Status</th>
                    <th data-visible="false" data-property="IndividualId">IndividualId</th>
                    <th data-visible="false" data-property="TempImputationCode">TempImputationCode</th>
                    <th data-visible="false" data-property="ExchangeRate">ExchangeRate</th>

                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<input type="hidden" id="ViewBagBranchDisableCheckNull" value="@ViewBag.BranchDisable" />

@section scripts
{
    @Scripts.Render("~/accounting/bundles/CheckNullification")
}