
@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.MenuAutomaticAssignment;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.AccountingAdministrative</li>
        <li>@Global.MenuCashOtuflows</li>
        <li>@Global.MenuAutomaticAssignment</li>
    </ol>
}

@section Toolbar
{
    <footer>
        <button class="btn btn-default" id="Cancel"><i class="fa fa-remove"></i> @Global.Cancel</button>
        <button class="btn btn-primary" id="Accept"><i class="fa fa-check"></i> @Global.Accept</button>
        <button class="btn btn-primary" id="Associate"><i class="fa fa-plus"></i> @Global.ToAssign</button>
        <button class="btn btn-primary" id="Liberate"><i class="fa fa-arrow-up"></i> @Global.Liberate</button>
    </footer>
}


<form id="CheckAutomaticAssignmentForm" >
    <div class="uif-row">
        <div class="uif-col-4">
            <label>@Global.Branch</label>
            <br />

            @Html.DropDownList("BranchCheckAutomatic", Enumerable.Empty<SelectListItem>(), new
             {
                 @class = "uif-select form-control",
                 data_source = @Url.Content("~/Accounting/Common/GetBranchs"),
                 data_id = "Id",
                 data_name = "Description",
                 data_selectedid = @ViewBag.BranchDefault,
                 data_val = "true",
                 data_native="true",
                 data_val_required = @Global.RequiredField
             })
            <span class="text-danger" data-valmsg-for="BranchCheckAutomatic" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-4">
            <label>@Global.BankName</label>
            <br />
            @Html.DropDownList("BankName", Enumerable.Empty<SelectListItem>(), new
             {
                 @class = "uif-select form-control",
                 data_id = "Id",
                 data_name = "Description",
                 data_val = "true",
                 data_native = "true",
                 data_val_required = @Global.RequiredField
             })
            <span class="text-danger" data-valmsg-for="BankName" data-valmsg-replace="true" />
        </div>

        <div class="uif-col-4">
            <label>@Global.BankAccountNumber</label>
            <br />
            @Html.DropDownList("AccountNumberCheckAutomatic", Enumerable.Empty<SelectListItem>(), new
             {
                 @class = "uif-select form-control",
                 data_id = "Id",
                 data_name = "Number",
                 data_val = "true",
                 data_native = "true",
                 data_val_required = @Global.RequiredField
             })
            <span class="text-danger" data-valmsg-for="AccountNumberCheckAutomatic" data-valmsg-replace="true" />
        </div>
    </div>

    <div class="uif-row">
        <div class="uif-col-2">
            <label>@Global.CheckNumber</label>
            <input type="text" value="" id="CheckAsigment" placeholder="" onkeypress="return JustNumbers(event, this) " maxlength="15" disabled="disabled" />
        </div>
        <div class="uif-col-2">
            <label>@Global.Currency</label>
            <input type="text" id="Currency" name="Currency" disabled="disabled" />
        </div>
        <div class="uif-col-4">
            <label>@Global.PaymentSource</label>
            <br />

            @Html.DropDownList("OriginPayment", Enumerable.Empty<SelectListItem>(), new
             {
                 @class = "uif-select form-control",
                 data_source = @Url.Content("~/GeneralLedger/Base/GetPaymentSources"),
                 data_id = "Id",
                 data_name = "Description",
                 data_val = "true",
                 data_native = "true",
                 data_val_required = @Global.RequiredField
             })
            <span class="text-danger" data-valmsg-for="OriginPayment" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-4">
            <label>@Global.EstimatedPaymentDate</label>
            @Html.TextBox("DatePayment", "", new
            {
                @class = "uif-datepicker",
                style = "text-align: left",
                data_mask = "99/99/9999",
                maxlength = "40",
                data_val = "true",
                data_val_required = @Global.RequiredField
            })
            <span class="text-danger" data-valmsg-for="DatePayment" data-valmsg-replace="true" />
        </div>
    </div>
</form>

<!--BUTTONS-->
<div class="form-footer">
    <button type="button" class="btn btn-default" id="CleanSearchCheckAutomatic">
        <i class="fa fa-paint-brush"></i>  @Global.Clean
    </button>
    <button type="button" class="btn btn-primary" id="SearchCheckAutomatic">
        <i class="fa fa-search"></i>  @Global.Search
    </button>
</div>

<!--ALERT-->
<div class="uif-row">
    <div class="uif-col-12">
        <div class="uif-alert" id="alertCheckAutomatic"></div>
    </div>
</div>
<!--GRID-->
<div class="uif-row">
    <div class="uif-col-12">
        <table class="uif-table" id="PaymentOrdersCheckAutomatic" data-exporttocsv="false" data-edit="false" data-delete="false"
               data-filter="false" data-paginate="true" data-selectiontype="multiple"
               data-title="@Global.PaymentOrders">
            <thead>
                <tr>
                    <th data-property="TempPaymentOrderId">@Global.PaymentOrderNumber</th>
                    <th data-property="BeneficiaryType">@Global.BeneficiaryType</th>
                    <th data-property="BeneficiaryName">@Global.FullName</th>
                    <th data-property="EstimatedPaymentDate">@Global.EstimatedPaymentDate</th>
                    <th data-property="Amount">@Global.Amount</th>
                    <th data-property="NumberAssociate">@Global.AssociationNumber</th>
                    <th data-property="IndividualId" data-visible="false"></th>
                    <th data-property="PersonTypeId" data-visible="false"></th>

                </tr>
            </thead>
            <tbody></tbody>
    </table>
    </div>
</div>

@*VIEWBAGS*@
<input type="hidden" id="ViewBagBranchDisableChecKAutomatic" value="@ViewBag.BranchDisable" />

@section scripts
{
    @Scripts.Render("~/accounting/bundles/CheckAutomaticAssignment")
}
