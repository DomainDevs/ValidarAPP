@using Sistran.Core.Framework.UIF.Web.Resources

@{
    Layout = null;
}

<div class="uif-row">
    <div class="uif-col-12">
        <table class="uif-table" id="TableTaxCondition" data-exporttocsv="false"
               data-add="false" data-edit="false" data-delete="false" data-selectiontype="none" data-filter="false"
               data-paginate="true" data-title="">

            <thead>
                <tr>
                    <th data-property="TaxDescription"><b>@Global.Tax</b></th>
                    <th data-property="TaxConditionDescription"><b>@Global.TaxCondition</b></th>
                    <th data-property="StateDescription"><b>@Global.LocalTax</b></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="uif-row">
    <div class="uif-col-12">
        <div class="uif-modalbuttons">
            <button type="button" class="btn btn-default" data-dismiss="modal">
                <i class="fa fa-close"></i> @Global.Close
            </button>
        </div>
    </div>
</div>
