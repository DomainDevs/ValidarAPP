@using Sistran.Core.Framework.UIF.Web.Resources
@{
    ViewBag.Title = @ViewBag.MassiveDataGenerate;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
<ol class="breadcrumb global-header-breadcrumb">
    <li>@Global.AccountingAdministrative</li>
    <li class="active">@Global.Billing</li>
    <li class="active">@Global.PaymentAreaInsured</li>
</ol>
}

@section Toolbar
{
    <footer>
        <div class="uif-col-12">
            <div class="uif-col-2 leftAlign">
                <b>@Global.TotalToPay</b>
                <br />
                <input type="text" id="_totalPay" name="_totalPay" disabled="disabled"
                       style="text-align:right;background-color:beige;" />
                <br />
                <b>@Global.Policies</b>
                <br />
                <input type="text" id="textSelectedPolicies" name="textSelectedPolicies" disabled="disabled"
                       style="text-align:right;background-color:beige;" />
            </div>
            <div class="uif-col-10 rightAlign">
                <button class="btn btn-default" id="PreviousPage">
                    <i class="fa fa-backward"></i> [ 1000 ]
                </button>
                <button class="btn btn-default" id="NextPage">
                    [ 1000 ] <i class="fa fa-forward"></i>
                </button>
                <button class="btn btn-default" id="BankDepositButton">
                    <i class="fa fa-save"></i> @Global.BankDeposit
                </button>

                <button class="btn btn-default" id="CreditCardsButton">
                    <i class="fa fa-save"></i> @Global.CreditCards
                </button>
                <button class="btn btn-default" id="PaymentAreaButton">
                    <i class="fa fa-save"></i> @Global.PaymentArea
                </button>
                <button class="btn btn-default" id="PrintInvoiceButton">
                    <i class="fa fa-print"></i> @Global.Print
                </button>
            </div>
        </div>
    </footer>
}

@*MODAL DETALLE DEL REGISTRO DETALLE POLIZAS*@
<div class="uif-modal" id="DetailedConsultationDialog" style="display: none">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Accounting/Views/PaymentService/PaymentServiceConsultationDialog.cshtml")
    </div>
    <div class="uif-modalbuttons">
        <button type="button" class="btn btn-primary" data-dismiss="modal">
            <i class="fa fa-sign-out"></i> @Global.Close
        </button>
    </div>
</div>

@*MODAL DEPOSITO BANCARIO *@
<div class="uif-modal" id="BankDepositDialog" style="display: none">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Accounting/Views/PaymentService/DepositBankDialog.cshtml")
    </div>
    <div class="uif-modalbuttons">
        <button id="btnPayBank" type="button" class="btn btn-primary">
            <i class="glyphicon glyphicon-usd"></i> @Global.btnPayExpense
        </button>
    </div>
</div>

@*MODAL GRABACION DE BILL*@
<div class="uif-modal" id="PaymentServiceSaveBillModal" style="display: none">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Accounting/Views/Billing/SaveBillSuccessModal.cshtml")
    </div>

    <div class="uif-modalbuttons">
        <button type="button" class="btn btn-default" id="SuccessCancell" data-dismiss="modal">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Global.Close&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
        <button type="submit" class="btn btn-default" id="ApplyReceipt" onclick="return false">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Global.Apply&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
        <button type="submit" class="btn btn-primary" id="PrintDetail" onclick="return false">@Global.PrintDetail</button>
    </div>
</div>

@*MODAL PAGO TARJETAS*@
<div class="uif-modal" id="CardPaymentDialog" style="display: none">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Accounting/Views/PaymentService/CreditCardPaymentDialog.cshtml")
    </div>
    <div class="uif-modalbuttons">
        <button id="btnPayCard" type="button" class="btn btn-primary">
            <i class="glyphicon glyphicon-usd"></i> @Global.btnPayExpense
        </button>
    </div>
</div>


@*MODAL PAGO ZONA DE PAGOS*@
<div class="uif-modal" id="PaymentZoneDialog" style="display: none">
    <div class="uif-modalbody">
        @Html.Partial("~/Areas/Accounting/Views/PaymentService/PaymentZoneDialog.cshtml")
    </div>
    <div class="uif-modalbuttons">
        <button id="btnPayZone" type="button" class="btn btn-primary">
            <i class="glyphicon glyphicon-usd"></i> @Global.btnPayExpense
        </button>
    </div>
</div>

<div class="uif-row">
    <div class="uif-col-12">
    </div>
</div>
<div class="uif-row">
    <div class="uif-col-12">
        @Html.Partial("PaymentServiceInformationPartial")
    </div>
</div>
<div class="uif-row">
    <div class="uif-col-12">
        <div class="uif-alert" id="alertMainPaymentService"></div>
    </div>
</div>
<div class="uif-row">
    <div class="uif-col-12">
        @Html.Partial("PaymentServicePoliciesPartial")
    </div>
</div>

@*VIEWBAGS*@
<input type="hidden" id="ViewBagBranchPaymentService" value="@ViewBag.BranchPaymentService" />
<input type="hidden" id="ViewBagBranchDescriptionPaymentService" value="@ViewBag.BranchDescriptionPaymentService" />
<input type="hidden" id="ViewBagTransferReceivingBankPaymentService" value="@ViewBag.TransferReceivingBankPaymentService" />
<input type="hidden" id="ViewBagAccountNumberReceivingBankPaymentService" value="@ViewBag.AccountNumberReceivingBankPaymentService" />
<input type="hidden" id="ViewBagPaymentConceptPaymentService" value="@ViewBag.PaymentConceptPaymentService" />
<input type="hidden" id="ViewBagIssuingBankPaymentService" value="@ViewBag.IssuingBankPaymentService" />

<input type="hidden" id="ViewBagParamPaymentMethodDepositVoucher" value="@ViewBag.ParamPaymentMethodDepositVoucher" />
<input type="hidden" id="ViewBagParamPaymentConsignmentCheck" value="@ViewBag.ParamPaymentConsignmentCheck" />
<input type="hidden" id="ViewBagParamPaymentMethodCreditableCreditCard" value="@ViewBag.ParamPaymentMethodCreditableCreditCard" />
<input type="hidden" id="ViewBagParamPaymentMethodTransfer" value="@ViewBag.ParamPaymentMethodTransfer" />
<input type="hidden" id="ViewBagParamPaymentMethodPaymentArea" value="@ViewBag.ParamPaymentMethodPaymentArea" />
<input type="hidden" id="ViewBagAccountingDate" value="@ViewBag.AccountingDate" />
<input type="hidden" id="ViewBagDateAccounting" value="@ViewBag.DateAccounting" />
<input type="hidden" id="ViewBagAgentInsured" value="@ViewBag.AgentInsured" />

@section scripts
{
    @Scripts.Render("~/accounting/bundles/MainPaymentService")
}