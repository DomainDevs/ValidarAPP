@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = "ConsignmentCheckModal";
}

<script id="ConsignmentCheck-display-template" type="text/template">

    <div>
        <strong>{{RecievingBankName}}</strong> | @Global.AccountNumber: {{RecievingBankAccountNumber}} |
        @Global.BallotNumber: {{DocumentNumber}}
        @Global.Amount: {{Amount}}|
        <div class="text-left">{{IssuerName}}</div>
    </div>
    <div class="text-right vertical-center">
        <div class="number">@Global.TotalLocalCurrency: {{LocalAmount}}</div>
    </div>


</script>

<form id="addConsignmentCheckForm" onsubmit="return false" class="form">
    @*<div class="main-content"></div>*@
    <div class="uif-row">
        <!--left col-->
        <div class="uif-col-6">
            <div class="uif-row">
                <div class="uif-col-6">
                    <label>@Global.Currency</label>
                    <select class="uif-select form-control"
                            id="selectConsignmentCheckCurrency"
                            data-id="Id"
                            data-name="Description"
                            data-val-required="@Global.RequiredField"></select>
                    <span class="text-danger" data-valmsg-for="selectConsignmentCheckCurrency" data-valmsg-replace="true" />
                </div>
                <div class="uif-col-6">
                    <label>@Global.AmountExchange</label>
                    <br />
                    <input type="text" id="ConsignmentCheckExchangeRate" style="text-align: right" />
                </div>
            </div>
            <div class="uif-row">
                <div class="uif-col-6">
                    <label>@Global.Amount</label>
                    <br />
                    @Html.TextBox("ConsignmentCheckAmount", "", new
               {
                   @onkeypress = "return OnlyDecimalNumber(event,this)",
                   style = "text-align: right",
                   data_val = "true",
                   maxlength = "26",
                   data_val_required = @Global.RequiredField
               })
                    <span class="text-danger" data-valmsg-for="ConsignmentCheckAmount" data-valmsg-replace="true" />
                </div>
                <div class="uif-col-6">
                    <label>@Global.TotalLocalCurrency</label>
                    <br />
                    <input type="text" id="ConsignmentCheckLocalAmount" disabled="disabled" style="text-align: right" />
                </div>
            </div>
            <div class="uif-row">
                <div class="uif-col-12">
                    <label>@Global.ReceivingBankConsignment</label>
                    <br />
                    <select class="uif-select form-control"
                            id="selectConsignmentCheckReceivingBank"
                            data-id="Id"
                            data-name="Description"
                            data-val-required="@Global.RequiredField"></select>
                    <span class="text-danger" data-valmsg-for="selectConsignmentCheckReceivingBank" data-valmsg-replace="true" />
                    <input type="hidden" id="HiddenReceivingBankName" />
                    <input type="hidden" id="HiddenReceivingBankId" />
                </div>
            </div>
            <div class="uif-row">
                <div class="uif-col-12">
                    <label>@Global.AccountNumberConsignment</label>
                    <br />
                    <select class="uif-select form-control"
                            id="selectConsignmentCheckAccountNumber"
                            name="selectConsignmentCheckAccountNumber"
                            data-id="Id"
                            data-name="Description"
                            data-val="true" data-native="true" data-val-required='@Global.RequiredField'></select>
                    <span class="text-danger" data-valmsg-for="selectConsignmentCheckAccountNumber" data-valmsg-replace="true" />
                    <input type="hidden" id="HiddenAccountNumber" />
                </div>
            </div>
            <div class="uif-row">
                <div class="uif-col-12">
                    <label>@Global.DepositorNameConsignment</label>
                    <br />
                    @Html.TextBox("ConsignmentCheckDepositorName", "", new
                    {
                        style = "text-align: left",
                        maxlength = "40",
                        @onblur = "this.value = this.value.toUpperCase();",
                        data_val = "true",
                        data_val_required = @Global.RequiredField
                    })
                    <span class="text-danger" data-valmsg-for="ConsignmentCheckDepositorName" data-valmsg-replace="true" />
                </div>
            </div>
            <div class="uif-row">
                <div class="uif-col-6">
                    <label>@Global.DateConsignment</label>
                    <br />
                    <input type="text" value="@ViewBag.DateAccounting" class="uif-datepicker" data-mask="99/99/9999" id="ConsignmentCheckDate"
                           name="ConsignmentCheckDate" data-val="true" data-val-required='@Global.RequiredField' />
                    <span class="text-danger" data-valmsg-for="ConsignmentCheckDate" data-valmsg-replace="true" />
                </div>
                <div class="uif-col-6">
                    <div style="display: none;">
                        <label>@Global.BallotNumberConsignment</label>
                        <br />
                        @Html.TextBox("ConsignmentCheckBallotNumber", "0", new
                        {
                            @class = "uif-mask",
                            data_pattern = "0000000000",
                            style = "text-align: right",
                            maxlength = "9"
                        })
                        <span class="text-danger" data-valmsg-for="ConsignmentCheckBallotNumber" data-valmsg-replace="true" />
                        <input type="hidden" id="HiddenBallotNumber" />
                    </div>
                </div>
            </div>
            <div class="uif-row">
                <div class="uif-col-12">
                    <div class="uif-alert" id="alertForm"></div>
                </div>
            </div>

            <!--Cheques-->

            <div class="uif-row">
                <div class="uif-col-xs-12">
                    <label>@Global.IssuingBankConsignmentCheck</label>
                    <br />
                    <input class="uif-autocomplete" type="text" data-source="@Url.Action("GetBanks", "Billing")" data-displaykey="Value" placeholder='@Global.EnterIssuingBank'
                           id="inputConsignmentCheckIssuingBank" name="inputConsignmentCheckIssuingBank" data-val="true" data-val-required='@Global.RequiredField' />
                    <input type="hidden" id="HiddenConsignmentIssuingBankId" />
                    <span class="text-danger" data-valmsg-for="inputCheckIssuingBank" data-valmsg-replace="true" />
                </div>
            </div>
            <div class="uif-row">
                <div class="uif-col-xs-6">
                    <label>@Global.AccountNumberConsignmentCheck</label>
                    <br />
                    @Html.TextBox("ConsignmentCheckAccountNumber", "", new
                    {
                        @class = "uif-mask",
                        data_pattern = "000000000000000",
                        style = "text-align: right",
                        maxlength = "15",
                        data_val = "true",
                        data_val_required = @Global.RequiredField
                    })
                    <span class="text-danger" data-valmsg-for="CheckAccountNumber" data-valmsg-replace="true" />
                    <input type="hidden" id="HiddenConsignmentCheckAccountNumber" />
                </div>
                <div class="uif-col-xs-6">
                    <label>@Global.DocumentNumberConsignmentCheck</label>
                    <br />
                    @Html.TextBox("ConsignmentCheckDocumentNumber", "", new
                    {
                        @class = "uif-mask",
                        data_pattern = "000000000",
                        style = "text-align: right",
                        maxlength = "9",
                        data_val = "true",
                        data_val_required = @Global.RequiredField
                    })
                    <span class="text-danger" data-valmsg-for="CheckDocumentNumber" data-valmsg-replace="true" />
                    <input type="hidden" id="HiddenConsignmentCheckDocumentNumber" />
                </div>
            </div>
            <div class="uif-row">
                <div class="uif-col-12">
                    <label>@Global.PayHolderNameConsignmentCheck</label>
                    <br />
                    @Html.TextBox("ConsignmentCheckHolderName", "", new
                    {
                        style = "text-align: left",
                        maxlength = "40",
                        @onblur = "this.value = this.value.toUpperCase();",
                        data_val = "true",
                        data_val_required = @Global.RequiredField
                    })
                    <span class="text-danger" data-valmsg-for="CheckHolderName" data-valmsg-replace="true" />
                </div>
            </div>
            <div class="uif-row">
                <div class="uif-col-xs-6">
                    <label>@Global.DateConsignmentCheck</label>
                    <input type="text" value="@ViewBag.DateAccounting" class="uif-datepicker" data-mask="99/99/9999" id="CheckDate"
                           name="CheckDate" data-val="true" data-val-required='@Global.RequiredField' />
                    <span class="text-danger" data-valmsg-for="CheckDate" data-valmsg-replace="true" />
                </div>
                <div class="uif-col-xs-6" style="display:none">
                    <span class="glyphicon glyphicon-unchecked" id="ConsignmentCheckPostDated"></span><input type="checkbox" id="ConsignmentPostDatedCheck"> @Global.Postdated
                </div>
            </div>
            <div class="uif-row">
                <div class="uif-col-12">
                    <div class="uif-alert" id="alertForm"></div>
                </div>
            </div>

            <!--Fin cheques-->

        </div>
        <!--End left col-->
        <!--right col-->
        <div class="uif-col-6">
            <div class="uif-listview" id="ConsignmentChecksListView">
                <div class="footer">
                    <div class="uif-col-xs-6">
                        @Global.Total
                    </div>
                    <div class="uif-col-xs-6 text-right">
                        <b id="TotalConsignmentCheck">$ 0.00</b>
                    </div>
                </div>
            </div>
        </div>
        <!--End right col-->
    </div>

</form>

