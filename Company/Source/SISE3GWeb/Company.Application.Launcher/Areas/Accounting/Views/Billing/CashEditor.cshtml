@using Sistran.Core.Framework.UIF.Web.Resources

<div class="title">
    <div class="row">
        <div class="col-xs-6 bg-blue">
            @Global.Cash
        </div>
    </div>
</div>

<div class="row height-100 flex">
    <div class="col-xs-12 col-md-7 no-padding-right col-left">
        <div class="form">
            <div class="row form-group">
                <div class="col-xs-6">
                    <label>@Global.Currency</label>
                    <select class="uif-select form-control" id="selectDatafonoCurrency" name="selectDatafonoCurrency"
                            data-source='@Url.Content("~/Accounting/Common/GetCurrencies")' data-id="Id" data-name="Description"></select>
                </div>
                <div class="col-xs-6">
                    <label>@Global.AmountExchange</label>
                    <input type="text" id="DatafonoExchangeRate" disabled="disabled" style="text-align: right" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-6">
                    <label>@Global.Amount</label>
                    <input type="text" id="CashAmount" style="text-align: right" 
                           onkeypress="return OnlyDecimalNumber(event,this)"
                           maxlength="26"/>
                </div>
                <div class="col-xs-6">
                    <label>@Global.TotalLocalCurrency</label>
                    <br />
                    <input type="text" id="CashLocalAmount" disabled="disabled" style="text-align: right" />
                </div>
            </div>
            <div class="form-group">
                <div class="uif-alert" id="alertForm"></div>
            </div>
        </div>
        <!-- form -->
    </div>
    <!-- left col -->
    <div class="col-xs-12 col-md-5 no-padding-left col-right">
        <div id="cashsListView" class="uif-listview">
            <div class="footer">
                <div>
                    @Global.Total
                </div>
                <div class="text-right col-number">
                    <b id="TotalCash">$0.00</b><br>
                </div>
            </div>
        </div>
    </div><!-- right col -->
</div>