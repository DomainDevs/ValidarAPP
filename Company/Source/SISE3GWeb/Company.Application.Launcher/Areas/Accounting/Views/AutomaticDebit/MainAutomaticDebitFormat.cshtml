@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.AutomaticDebitFormats;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.AutomaticDebit</li>
        <li>@Global.AutomaticDebitFormats</li>
    </ol>
}

@section Modals
{
    <form id="MainDebitFormatAddForm" onsubmit="return false" class="form">
        <div class="uif-modal" id="MainDebitFormatModalAdd">
            <div class="uif-modalbody">
                @Html.Partial("~/Areas/Accounting/Views/AutomaticDebit/AutomaticDebitFormatModal.cshtml")
            </div>

            <div class="uif-modalbuttons">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Global.Cancel</button>
                <button type="submit" class="btn btn-primary" id="DebitFormatSaveAdd" onclick="return false">@Global.Save</button>
            </div>
        </div>
    </form>

    <form id="MainDebitFormatEditForm" onsubmit="return false" class="form">
        <div class="uif-modal" id="MainDebitFormatModalEdit">
            <div class="uif-modalbody">
                @Html.Partial("~/Areas/Accounting/Views/AutomaticDebit/AutomaticDebitFormatModal.cshtml")
            </div>
            <div class="uif-modalbuttons">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Global.Cancel</button>
                <button type="submit" class="btn btn-primary" id="DebitFormatSaveEdit" onclick="return false">@Global.Save</button>
            </div>
        </div>
    </form>

    <div class="uif-modal" id="modalDebitFormat"></div>

    <!-- /.Modal de Eliminación -->
    <div class="modal fade" id="modalDeleteDebitFormat" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="padding: 10px">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="fa fa-times-circle">
                        </i>
                    </button>
                    <h4 class="modal-title"><label id="deleteMessageTitle">@Global.Delete</label></h4>
                </div>
                <div class="modal-body" id="deleteMessageModal">
                    <p>@Global.DeleteConfirmationMessage</p>
                    <br />
                    <p id="selectedMessageDelete"></p>
                </div>
                <div class="modal-footer" style="padding: 10px 20px 10px">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove"></span> @Global.Cancel
                    </button>
                    <button type="button" class="btn btn-primary" id="DebitFormatDeleteModal">
                        <span class="glyphicon glyphicon-ok"></span> @Global.Accept
                    </button>
                </div>
            </div>
        </div>
    </div>

}

<br />

<form id="formDebitFormat" onsubmit="return false" class="form">
    <div class="uif-row">
        <div class="uif-col-12">
            <label>@Global.Net</label>
            <select class="uif-select form-control" id="selectBankNetwork" name="selectBankNetwork" data-val="true" data-val-required='@Global.RequiredField'
                    data-source='@Url.Content("~/Accounting/Common/GetNets")' data-id="Id" data-name="Description" data-native="true"></select>
            <span class="text-danger" data-valmsg-for="selectBankNetwork" data-valmsg-replace="true" />
        </div>
    </div>

    <div class="uif-row">
        <div class="uif-alert" id="MainDebitFormatAlert"></div>
    </div>

    <div class="uif-row">
        <div class="uif-col-12">
            <table class="uif-table" id="tableAutomaticDebitFormat" data-exporttocsv="false" data-add="true" data-edit="true"
                   data-delete="true" data-selectiontype="none" data-filter="false"
                   @*data-source="@Url.Action("GetAutomaticDebitFormats", "AutomaticDebit")"*@
                   data-paginate="true" data-title="@Global.AutomaticDebitFormats">
                <thead>
                    <tr>
                        <th data-property="Id" style="text-align:left">Id</th>
                        <th data-property="BankNetworkId" data-visible="false">BankNetworkId</th>
                        <th data-property="FileUsing" style="text-align:left">@Global.FormatUse</th>
                        <th data-property="FileUsingId" data-visible="false">FileUsingId</th>
                        <th data-property="FormatId" data-visible="false">FormatId</th>
                        <th data-property="FormatName" style="text-align:left">@Global.Format</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</form>

<input type="hidden" id="ViewBagControlSpanDebitFormat" value="true" />

@section scripts
{
    @Scripts.Render("~/accounting/bundles/MainAutomaticDebitFormat")
}

