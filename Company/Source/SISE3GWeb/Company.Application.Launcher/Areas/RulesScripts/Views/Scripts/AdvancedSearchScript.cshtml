@{
    Layout = null;
}

<form class="form">
    <div class="row">
        <div class="uif-col-12">
            <h4>@Resources.Language.AdvancedSearch</h4>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-6">
            <label>@Resources.Language.LabelPackages</label>
            <select class="uif-select form-control"
                    id="selectPackageFilter"
                    data-selectedId="0"
                    data-source=""
                    data-id="PackageId"
                    data-name="Description"
                    data-native="false"></select>
        </div>
        <div class="uif-col-6">
            <label>@Resources.Language.LabelLevels</label>
            <select class="uif-select form-control"
                    id="selectLevelFilter"
                    data-selectedid="0"
                    data-source=""
                    data-id="LevelId"
                    data-name="Description"
                    data-native="false"></select>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-6">
            <label>@Resources.Language.LabelScript</label>
            <input type="text" class="uif-autocomplete" data-source="@Url.Content("~/RulesScripts/Scripts/GetScriptsAutocomplete")" data-displaykey="Description" id="txtNameScript"/>
        </div>
        <div class="uif-col-6">
            <label>@Resources.Language.Question</label>
            <input type="text" class="uif-autocomplete" data-source="@Url.Content("~/RulesScripts/Scripts/GetQuestionsAutocomplete")" data-displaykey="Description" id="txtQuestionScript"/>
        </div>
    </div>

    <div class="row">
        <div class="uif-col-12">
            <button class="btn btn-primary-Co width-container" id="btnsearchScriptAdv" type="button">
                    <span aria-hidden="true"></span>
                    @Resources.Language.search
            </button>
        </div>
    </div>

    <div class="row">
        <div class="uif-col-12">
            <div class="uif-listview" id="lvSearchScript">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="uif-col-12">
            <div class="pull-right width-save">
                <button class="btn btn-default" id="btnCancelSearchScript" type="button">@Resources.Language.Close</button>
                <button class="btn btn-primary" id="btnOkSearchSript" type="button">@Resources.Language.Accept</button>
            </div>
        </div>
    </div>
</form>