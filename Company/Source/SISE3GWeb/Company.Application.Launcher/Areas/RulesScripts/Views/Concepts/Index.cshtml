@section Toolbar
    {
    <footer>
        <div class="pull-right">
            <button type="button" class="btn btn-default" id="btnExit">
                <i class="fa fa-times-circle" aria-hidden="true"></i>
                <span class="" aria-hidden="true">
                    @Resources.Language.ButtonExit
                </span>
            </button>
            <button type="button" class="btn btn-default" id="btnExportConcepts">
                <i class="fa fa-download" aria-hidden="true"></i>
                <span class="" aria-hidden="true">
                    @Resources.Language.ButtonExport
                </span>
            </button>
            <button class="btn btn-default" id="btnClearForm">
                <span class="fa fa-file-o" aria-hidden="true"></span>
                @Resources.Language.ButtonNew
            </button>
            <button type="button" class="btn btn-primary" id="btnSaveForm">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                <span class="" aria-hidden="true">@Resources.Language.ButtonSave</span>
            </button>
        </div>
    </footer>
}

@section Scripts
{
    @Scripts.Render("~/Areas/RulesScripts/Scripts/Concepts/ListConcepts.js")
    @Scripts.Render("~/Areas/RulesScripts/Scripts/Concepts/AdvancedSearchConcepts.js")
}