@using Sistran.Core.Framework.UIF.Web.Resources
@model Sistran.Core.Framework.UIF.Web.Areas.GeneralLedger.Models.AccountingCompanyModel

@{
    ViewBag.Title = "AccountingCompanyModal";
    Layout = null;
}

<form id="addAccountingCompany" onsubmit=" return false ">
    <div class="uif-modalbody">
        @Html.HiddenFor(m => m.AccountingCompanyId)
        <div class="form">
            <div class="uif-row">
                <div class="uif-col-6">
                    <span class="required-color">*</span>
                    @Html.Label(Global.Description, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej.: Nueva compañia", onblur = "this.value = this.value.toUpperCase();" } })
                    @Html.ValidationMessageFor(m => m.Description)
                </div>
                <div class="uif-col-6">
                    @Html.Label(Global.Default, htmlAttributes: new { @class = "control-label" })
                    <div class="checkbox">
                        <input type="checkbox" id="Default" checked="@Model.Default">
                        <label for="Default"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="uif-alert" id="alertAccountingCompanyModel"></div>
    <div class="uif-modalbuttons">
        <button type="button" class="btn btn-default" id="cancelButton" data-dismiss="modal" data-role="button">
            <span class="glyphicon glyphicon-remove"></span> @Global.Cancel
        </button>
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0772"))
        {
            <button type="submit" class="btn btn-primary" id="AccountingCompanySaveButton" onclick=" return false " data-role="button">
                <span class="glyphicon glyphicon-save"></span> @Global.Save
            </button>
        }

    </div>
</form>

