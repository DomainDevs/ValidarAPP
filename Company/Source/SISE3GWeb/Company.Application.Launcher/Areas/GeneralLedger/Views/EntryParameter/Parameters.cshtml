@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = Global.Parameters;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li>@Global.CentralAccounting</li>
        <li>@Global.Parameter</li>
        <li>@Global.Dynamic</li>
        <li>@Global.Parameters</li>
    </ol>
}

@section modals
{
    <div class="form">
    <div class="uif-modal" id="parametersModal">
        <div class="uif-modalbody">
            <div class="uif-row">
                <div class="uif-col-4">
                    <input type="hidden" id="Id" name="Id" />
                    <label class="control-label">@Global.Order</label>
                    <input class="form-control" placeholder='@Global.Order' data-val="true" data-val-required="@Global.RequiredField"
                           id="Order" name="Order" type="text" value="" onblur="this.value=this.value.toUpperCase();" disabled="disabled" />
                    <span class="text-danger" data-valmsg-for="ParameterCode" data-valmsg-replace="true">
                    </span>
                </div>
                <div class="uif-col-4">
                    <label class="control-label">@Global.Description</label>
                    <input class="form-control" placeholder='@Global.Description' data-val="true" data-val-required="@Global.RequiredField"
                           id="ParameterDescription" name="ParameterDescription" type="text" value="" onblur="this.value=this.value.toUpperCase();" />
                    <span class="text-danger" data-valmsg-for="ParameterDescription" data-valmsg-replace="true">
                    </span>
                </div>
                <div class="uif-col-4">
                    <label class="control-label">@Global.DataType</label>
                    <select class="uif-select form-control required"
                            data-source="@Url.Content("~/EntryParameter/GetDataTypeList")"
                            id="DataType" name="DataType"
                            data-id="TypeId" data-name="TypeDescription" data-val="true"
                            data-val-required='@Global.RequiredField' data-native="true"></select>
                    <span class="text-danger" data-valmsg-for="DataType" data-valmsg-replace="true" />
                </div>
            </div>
        </div>
        <div class="uif-modalbuttons">
            <button type="button" class="btn btn-default" id="cancelParameter" data-dismiss="modal">@Global.Cancel</button>
            @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0775"))
            {
                <button type="submit" class="btn btn-primary" id="addParameter">@Global.Accept</button>
            }

        </div>
    </div>
</div>
}

<script id="parametersListTemplate" type="text/template">
    <span>
        <strong>@Global.Order:</strong>
        {{Order}} -
        <strong>@Global.Description:</strong>
        {{ParameterDescription}} -
        <strong>@Global.DataType:</strong>
        {{TypeDescription}}
    </span>
</script>

<div class="uif-row">
    <div class="uif-col-4">
        <label class="control-label">@Global.Module</label>
        <select class="uif-select form-control required"
                data-source="@Url.Content("~/GeneralLedger/Base/GetModuleDates")"
                id="Module" name="Module"
                data-id="Id" data-name="Description" data-val="true"
                data-val-required='@Global.RequiredField' data-native="true"></select>
        <span class="text-danger" data-valmsg-for="Module" data-valmsg-replace="true" />
    </div>
</div>

<div class="uif-row">
    <div class="uif-col-12">
        <div class="uif-alert" id="parametersAlert"></div>
    </div>
</div>

<div class="row">
    <div class="uif-col-12">
        <div class="uif-listview" id="ParametersViewTemplate">
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/generalLedger/bundles/EntryParameters")
}


