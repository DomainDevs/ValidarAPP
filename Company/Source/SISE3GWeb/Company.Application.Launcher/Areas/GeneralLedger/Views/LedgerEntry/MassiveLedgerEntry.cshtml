        <thead>
            <tr>
                <th data-property="Id" data-visible="false">Id</th>
                <th data-property="ProcessDate">@Global.ProcessDate</th>
                <th data-property="OperationDate">@Global.OperationDate</th>
                <th data-property="RowNumber">@Global.MovementRowNumber</th>
                <th data-property="Success" data-visible="false">Success</th>
                <th data-property="Description">@Global.ErrorDescription</th>
