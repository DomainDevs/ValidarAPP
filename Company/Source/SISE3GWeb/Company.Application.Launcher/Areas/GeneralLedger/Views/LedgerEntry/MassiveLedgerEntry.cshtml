@using Sistran.Core.Framework.UIF.Web.Resources

@{
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li><a href="/Home">@Global.AccountingEntry</a></li>
        <li class="active">@Global.EntryMassiveLoad</li>
    </ol>
}

@section Toolbar
{
    <footer>
        <button class="btn btn-default" id="CancelLedgerEntry">
            <i class="fa fa-remove"></i> @Global.Cancel
        </button>
        <button class="btn btn-primary" id="GenerateLedgerEntry">
            <i class="fa fa-save"></i> @Global.GenerateEntry
        </button>
    </footer>
}

<form id="uploadFileForm" onsubmit="return false" class="form">
    <div class="uif-row">
        <div class="uif-col-9" id="divUploadFile">
            <label>@Global.File</label>
            <input type="file" id="inputControlSingle" class="uif-inputfile" data-input="true" name="inputControlSingle" data-val="true" 
                   data-val-required="@Global.RequiredField">
            <span class="text-danger" data-valmsg-for="inputControlSingle" data-valmsg-replace="true" />
        </div>
        <div class="uif-col-3">
            <br />
            @*
            <button class="btn btn-default btn-file" id="uploadFile">
                <span class="glyphicon glyphicon-upload"></span>&nbsp;  @Global.UploadFile
            </button>
            *@
            <button class="btn btn-default" id="uploadFile">
                <i class="fa fa-file-excel-o"></i> @Global.UploadFile
            </button>
        </div>
    </div>
</form>
