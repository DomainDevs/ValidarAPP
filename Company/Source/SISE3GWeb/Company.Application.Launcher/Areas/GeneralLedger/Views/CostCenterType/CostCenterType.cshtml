@using Sistran.Core.Framework.UIF.Web.Resources

@{
    ViewBag.Title = @Global.CostCenterType;
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li><a href="/Home">@Global.Parameter</a></li>
        <li class="active">@Global.CostCenterType</li>
    </ol>
}

@section modals{
    <div class="uif-modal" id="costCenterTypeModal">
    </div>
}

<script id="listTemplateCostCenter" type="text/template">
    <span>
        <strong>
            -@Global.Description:
        </strong>
        <span class="label label-primary">
            {{Description}}.
        </span>
    </span>
</script>

<div class="uif-row">
    <div class="uif-col-12">
        <div class="uif-alert" id="alertCostCenterType"></div>
    </div>
</div>
<div class="uif-listview" id="costCenterTypeListView">
</div>

@*VIEWBAGS*@
<input type="hidden" id="ViewBagCenterType" value="true" />

@section scripts
{
    @Scripts.Render("~/generalLedger/bundles/CostCenterType")
}