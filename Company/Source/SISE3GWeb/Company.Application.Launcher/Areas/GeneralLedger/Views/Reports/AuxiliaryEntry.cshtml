@using Sistran.Core.Framework.UIF.Web.Resources

@{
    Layout = "~/Views/Shared/_UIFLayout-r2-BigMenu.cshtml";
}

@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li><a href="/Home">@Global.Reports</a></li>
        <li class="active">@Global.CashAccountEntryAuxiliar</li>
    </ol>
}

@section Toolbar
{
    <footer>
        <button class="btn btn-primary" id="entryReport"><i class="fa fa-file-pdf-o"></i>@Global.BtnReport</button>
        <button class="btn btn-primary" id="entryExcel"><i class="fa fa-file-excel-o"></i>@Global.GenerateExcel</button>
    </footer>
}

<form id="formData">
    <div class="uif-row">
        <div class="uif-col-12">
            <div class="uif-tab-content">
                <div class="active" id="tabDailyEntry">
                    <div class="uif-row">
                        <div class="uif-col-3">
                            <label class="checkbox">@Global.DateFrom</label>
                            <input type="text" class="uif-datepicker" data-mask="99/99/9999" id="entryDateFrom" name="entryDateFrom" data-val="true" data-val-required="@Global.RequiredField" />
                            <span class="text-danger" data-valmsg-for="entryDateFrom" data-valmsg-replace="true" />
                        </div>
                        <div class="uif-col-3">
                            <label class=" checkbox">@Global.DateTo</label>
                            <input type="text" class="uif-datepicker" data-mask="99/99/9999" id="entryDateTo" name="entryDateTo" data-val="true" data-val-required="@Global.RequiredField" />
                            <span class="text-danger" data-valmsg-for="entryDateTo" data-valmsg-replace="true" />
                        </div>
                        <div class="uif-col-2">
                            <label class="control-label">@Global.AllBranches</label>
                            <div class="checkbox">
                                <input type="checkbox" id="allBranchesAuxiliaryEntry">
                                <label for="allBranchesAuxiliaryEntry"></label>
                            </div>
                        </div>
                        <div class="uif-col-3 " id="divEntryBranches">
                            <label class="checkbox">
                                @Global.Select @Global.Branch
                            </label>
                            <select class="uif-col-12 uif-select form-control "
                                    id="ddlEntryBranchesAuxiliaryEntry" 
                                    data-id="Id"
                                    data-name="Description"
                                    name="ddlEntryBranchesAuxiliaryEntry"
                                    data-val="true" 
                                    data-val-required="@Global.RequiredField"></select>
                            <span class="text-danger" data-valmsg-for="ddlEntryBranchesAuxiliaryEntry" data-valmsg-replace="true" />
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="uif-row">
        <div class="uif-col-12">
            <div class="uif-alert" id="alert"></div>
        </div>
    </div>
    <div class="uif-row">
        <iframe src="" name="framePdf" id="framePdf" scrolling="auto" frameborder="no" width="100%" height="900px" style="margin: 0 0px 0 0;"></iframe>
    </div>
</form>

@*VIEWBAGS*@
<input type="hidden" id="ViewBagOptionId" value="AuxiliaryEntry" />

@section scripts
{
    @Scripts.Render("~/generalLedger/bundles/AuxiliaryEntry")
}
