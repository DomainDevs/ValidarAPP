@using Sistran.Core.Framework.UIF.Web.Resources
@model Sistran.Core.Framework.UIF.Web.Areas.GeneralLedger.Models.EntryTypeModel

@{
    ViewBag.Title = "EntryTypeModal";
    Layout = null;
}

<form id="addEntryType" onsubmit="return false">
    <div class="uif-modalbody">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.EntryTypeId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form">
            <div class="row">
                <div class="col-md-6">
                    <span class="required-color">*</span>
                    @Html.Label(Global.Description, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(m => m.EntryTypeDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej.: Nuevo tipo de asiento", onblur = "this.value = this.value.toUpperCase();" } })
                    @Html.ValidationMessageFor(model => model.EntryTypeDescription, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <span class="required-color">*</span>
                    @Html.Label(Global.SmallDescription, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(m => m.EntryTypeSmallDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej.: breve descripcion", onblur = "this.value = this.value.toUpperCase();" } })
                    @Html.ValidationMessageFor(model => model.EntryTypeSmallDescription, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="uif-modalbuttons">
        <button type="button" class="btn btn-default" id="cancelButtonType" data-dismiss="modal" data-role="button">
            <span class="glyphicon glyphicon-remove"></span> @Global.Cancel
        </button>
        @if (Sistran.Core.Framework.UIF.Web.Helpers.SessionHelper.IsAuthorize("0774"))
        {
            <button type="submit" class="btn btn-primary" id="saveEntryType" data-role="button" onclick="return false">
                <span class="glyphicon glyphicon-save"></span> @Global.Save
            </button>
        }

    </div>
</form>

