
@{
    Layout = null;
}
<div class="uif-row">
    <div class="uif-col-12">
        <h5>
            <strong>@Resources.Language.Risks</strong>
        </h5>
    </div>
    <div class="uif-col-12">
        <table class="uif-table" data-title="@Resources.Language.RiskListing" id="tableRiskFidelity"
               data-add="false" data-edit="false" data-delete="false" data-filter="true" data-paginate="true">
            <thead>
                <tr>
                    <th data-property="Risk"><b>@Resources.Language.Risk</b></th>
                    <th data-property="OccupationDescription"><b>@Resources.Language.LabelIdOccupation</b></th>
                    <th data-property="CommercialClassDescription"><b>@Resources.Language.LabelActivityRisk</b></th>
                    <th data-property="DiscoveryDate"><b>@Resources.Language.LabelDiscoveryDate</b></th>
                    <th data-property="InsuredAmount" data-type="currency"><b>@Resources.Language.InsuredAmount</b></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>