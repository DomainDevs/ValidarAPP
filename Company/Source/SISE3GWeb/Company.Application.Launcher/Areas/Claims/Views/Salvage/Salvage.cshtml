@{
    Layout = null;
}

<script id="title-template" type="text/template">
    <div class="column" id="titleSalvage">
        <div class="column">
            @Resources.Language.Salvage
        </div>
    </div>
</script>

@section modals
{

    <div class="uif-modal" id="modalDeleteSale">
        <div class="uif-modalbody">
            <div class="uif-row">
                <div class="uif-col-12">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h5><label id="deleteMessageTitle">@Resources.Language.Delete</label></h5>
                </div>
            </div>
            <div id="deleteMessageModal">
                @Resources.Language.WantDeleteRegister
            </div>
        </div>
        <div class="uif-modalbuttons">
            <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Language.No</button>
            <button type="button" class="btn btn-primary" id="btnDeleteSale">@Resources.Language.Yes</button>
        </div>
    </div>

}

@section Title{
    <div class="uif-row main-title">
        <div class="column">
            @Resources.Language.Salvage
        </div>
    </div>
}

<a id="top"></a>
<form id="salvageForm" onsubmit="return false" class="form">
    <div>
        <div>
            <ul class="uif-tab" id="mainSalvageTab">
                <li class="active"><a href="#tabSalvage" id="tabSalvageId">@Resources.Language.Salvage</a></li>
                <li><a href="#tabSale" id="_tabSale">@Resources.Language.Sales</a></li>
                <li><a href="#tabSalvageSummary" id="tabSalvageSummaryId">@Resources.Language.SalvageSummary</a></li>
            </ul>
            <div class="uif-tab-content" id="salvageTab">
                <div class="active" id="tabSalvage">
                    @Html.Partial("SalvagePrincipalPartial")
                </div>
                <div id="tabSale">
                    @Html.Partial("SalePartial")    
                </div>
                <div id="tabSalvageSummary">
                    @Html.Partial("SalvageSummaryPartial")
                </div>
            </div>
        </div>
    </div>
</form>

<div class="uif-modal" id="modalPolicyConsult">
    <div class="uif-modalbody">
        @Html.Partial("../Claim/ModalPolicyConsult")
    </div>
</div>
@Html.Partial("SalvageModal")


