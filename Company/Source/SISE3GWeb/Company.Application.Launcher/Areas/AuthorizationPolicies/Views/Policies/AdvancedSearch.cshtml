<form class="form">
    <div class="row">
        <div class="uif-col-12">
            <h4>@Resources.Language.AdvancedSearch</h4>
        </div>
    </div>

    <div class="row">
        <div class="uif-col-6">
            <label class="field-required">Grupo de politicas</label>
            <select class="uif-select" id="ddlAvdGroupPolicies" data-val="true" data-id="IdGroupPolicies" data-native="false" data-name="Description"></select>
        </div>
        <div class="uif-col-6">
            <label>Tipo de politica</label>
            <select class="uif-select" id="ddlAvdTypePolicies" data-val="true" data-id="IdTypePolicies" data-native="false" data-name="Description"></select>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-6">
            <label>@Resources.Language.LabelLevels</label>
            <select class="uif-select" id="ddlLevels" data-val="true" data-id="LevelId" data-native="false" data-name="Description"></select>
        </div>
        <div class="uif-col-6">
            <label>Nombre</label>
            <input type="text" class="rightAlign" id="txtName" />
        </div>
    </div>
    <div class="row">
        <div class="uif-col-8">
            <label>Mensaje</label>
            <input type="text" class="rightAlign" id="txtMessage" />
        </div>
        <div class="without-label">
            <div class="uif-col-4">
                <div class="checkbox">
                    <input type="checkbox" name="ChkEnabled" id="ChkEnabled" />
                    <label for="ChkEnabled">@Resources.Language.LabelEnabled</label>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="uif-col-12">
            <div class="pull-right width-save">
                <button class="btn btn-default" id="btnCancelSearchPolicyAvd" type="button">@Resources.Language.Cancel</button>
                <button class="btn btn-primary" id="btnSearchPolicyAvd" type="button">@Resources.Language.search</button>
            </div>
        </div>
    </div>
</form>


