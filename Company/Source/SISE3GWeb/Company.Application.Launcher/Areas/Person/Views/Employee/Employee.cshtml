<form id="formEmployee">
    <div class="row">
        <div class="uif-col-12">
            <div>
                <div class="uif-row">
                    <div class="uif-col-12">
                        <div class="uif-col-6">
                            <label class="field-required">@Resources.LanguagePerson.Branch</label>
                            <select class="uif-select form-control" id="selectBranchEmployee" data-id="Id" data-name="Description"></select>
                        </div>
                        <div class="uif-col-3">
                            <label>@Resources.LanguagePerson.codePerson</label>
                            <div id="CodPersonIdEmployee" style="color: red">0</div>
                        </div>

                        <div class="uif-col-3">
                            <label>@Resources.LanguagePerson.EmployeeCode</label>
                            <input type="text" class="field-required" data-type="number" id="InputCodeEmployee" maxlength="14" />
                        </div>

                    </div>
                </div>
                <div class="uif-row">
                    <div class="uif-col-12">
                        <div class="uif-col-3">
                            <label>@Resources.LanguagePerson.DateCreate</label>
                            <input type="text" class="uif-datepicker" data-type="date" data-mask="99/99/9999" id="InputDateCreateEmployee" disabled="disabled" maxlength="14" />
                        </div>
                        <div class="uif-col-3">
                            <label>@Resources.LanguagePerson.DateModifid</label>
                            <input type="text" class="uif-datepicker" data-type="date" data-mask="99/99/9999" id="InputDateModificationEmployee" disabled="disabled" maxlength="14" />
                        </div>
                        <div class="uif-col-3">
                            <label>@Resources.LanguagePerson.DateDeclined</label>
                            <input type="text" class="uif-datepicker" data-type="date" data-mask="99/99/9999" id="InputDateDeclinedEmployee" disabled="disabled" maxlength="14" />
                        </div>

                        <div class="uif-col-3">
                            <label class="">@Resources.LanguagePerson.LabelReasonLow</label>
                            <select class="uif-select form-control" id="selectReasonLowEmployee" data-id="Id" data-name="Description"></select>
                        </div>

                    </div>
                </div>
                <div class="uif-row">
                    <div class="uif-col-12">
                        <div class="uif-col-6">
                            <label class="radio-inline">
                                <input type="radio" name="rbEnabledEmployee" checked="checked" id="rbEnabledEmployee">@Resources.LanguagePerson.EnabledEmployee
                            </label>
                        </div>
                    </div>
                </div>

                <div class="uif-row">
                    <div class="uif-col-12">

                        <div class="uif-col-12">
                            <label>@Resources.LanguagePerson.LabelObservations</label>
                            <textarea rows="4" id="notesEmployee" style="text-align:left; resize: none" maxlength="79">
                                    </textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
