@model Sistran.Core.Framework.UIF.Web.Models.LoginModel

@{
    ViewBag.Title = "Ingresar";
}

<img class="login-background" src="~/Lib/framework/build/layout/default/images/login-background.jpg" alt="" />
<div class="login-wrapper">
    <img src="~/Lib/framework/build/layout/dark/images/logo.png" alt="" />
    <div class="form-wrapper">
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.ValidationSummary(true);
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Usuario", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <input type="submit" class="btn btn-primary btn-main" value="INGRESAR">
        }
    </div>
</div>


<script src="~/Scripts/jquery-2.1.3.min.js"></script>
<script src="~/Scripts/aes.js"></script>
<script src="~/Scripts/EncryptPassword.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}