@model Sistran.Core.Framework.UIF.Web.Models.QuotationViewModel

@section Title{
    <div class="row main-title">
        <div class="column-60">
            <div id="globalTitle">@Resources.Language.TitleQuotation</div>
        </div>
        <div class="column-20 important">
            <div class="date">
                <i class="fa fa-calendar"></i>@Resources.Language.LabelQuotationDate <span id="inputIssueDate"></span>
            </div>
        </div>
        <div class="column-20 even">
            @Html.TextBoxFor(model => model.QuotationId, new { @id = "inputQuotationId", @maxlenght = "10", @class = "uif-input-search", @placeholder = Resources.Language.LabelSearchQuotation })
            <button class="btn btn-default" id="btnShowAdvQuot"><i class="fa fa-angle-down"></i></button>
        </div>
    </div>
}

<template id="templateInsuredObject" type="text/template">
    <div><b><strong>{{Description}}</strong></b></div>
    <div>@Resources.Language.LabelInsuredValue: <b><strong>$ {{Amount}}</strong></b> </div>
    <div>@Resources.Language.LabelInsuredObjectPremium: <b><strong>$ {{Premium}}</strong></b></div>
    <a href="#" onclick="QuotationView.ShowCoverages('{{Id}}')">+ @Resources.Language.LabelDetails </a>
</template>

@section toolbar {
    <footer>
        <div class="pull-right">
            <button class="btn btn-default" id="btnDownload">
                <span aria-hidden="true"><i class="fa fa-file-pdf-o"></i></span>
                @Resources.Language.LabelDownloadPDF
            </button>
            <button type="button" class="btn btn-default" id="btnSendToEmail">
                <span aria-hidden="true"><i class="fa fa-envelope-o"></i></span>
                @Resources.Language.LabelSendToEmail
            </button>
            <button class="btn btn-primary" id="btnNewQuotation">
                <span aria-hidden="true"><i class="fa fa-file-text-o"></i></span>
                @Resources.Language.LabelNewQuotation
            </button>
        </div>
    </footer>
}

<div id="uif-spinner-loading" hidden="hidden">
    <div class="spinner spinner-three-bounce">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
    </div>
</div>

<form id="formQuotation" autocomplete="off" class="form">
    @Html.HiddenFor(model => model.TemporalId, new { id = "hiddenTemporalId" })
    @Html.HiddenFor(model => model.QuotationVersion, new { id = "hiddenQuotationVersion" })
    @Html.HiddenFor(model => model.CustomerId, new { id = "hiddenCustomerId" })
    @Html.HiddenFor(model => model.CustomerTypeId, new { id = "hiddenCustomerTypeId" })
    <div class="row">
        <div class="uif-col-7">
            <div class="row">
                <div class="uif-col-12">
                    <h5><strong>@Resources.Language.LabelPropertyData</strong></h5>
                </div>
            </div>
            <div class="row">
                <div class="uif-col-8">
                    <label class="field-required">@Resources.Language.LabelFullAddress</label>
                    @Html.TextBoxFor(model => model.FullAddress, new { id = "inputFullAddress" })
                    @Html.ValidationMessageFor(model => model.FullAddress)
                </div>
                <div class="uif-col-4">
                    <label class="field-required">@Resources.Language.LabelConstructionYear</label>
                    @Html.TextBoxFor(model => model.ConstructionYear, new { id = "inputConstructionYear" })
                    @Html.ValidationMessageFor(model => model.ConstructionYear)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-4">
                    <label class="field-required">@Resources.Language.LabelCountry</label>
                    <select class="uif-select form-control" id="selectCountry" data-id="Id" data-name="Description" name="CountryId"
                            data-val="true" data-val-required="@Resources.Language.ValidationRequiredCountry"></select>
                    @Html.ValidationMessageFor(model => model.CountryId)
                </div>
                <div class="uif-col-4">
                    <label class="field-required">@Resources.Language.LabelState</label>
                    <select class="uif-select form-control" id="selectState" data-id="Id" data-name="Description" name="StateId"
                            data-val="true" data-val-required="@Resources.Language.ValidationRequiredState"></select>
                    @Html.ValidationMessageFor(model => model.StateId)
                </div>
                <div class="uif-col-4">
                    <label class="field-required">@Resources.Language.LabelCity</label>
                    <select class="uif-select form-control" id="selectCity" data-id="Id" data-name="Description" name="CityId"
                            data-val="true" data-val-required="@Resources.Language.ValidationRequiredCity"></select>
                    @Html.ValidationMessageFor(model => model.CityId)
                </div>
            </div>
            <div class="row">
                <div class="uif-col-12">
                    <h5><strong>@Resources.Language.TitleCustomerData</strong></h5>
                </div>
            </div>
            <div class="row">
                <div class="uif-col-4">
                    <input type="radio" name="radioIndividualType" id="radioIndividualTypePerson" value="1" checked="checked" />
                    <label for="radioIndividualTypePerson">@Resources.Language.LabelSmallPerson</label>
                    <br />
                    <input type="radio" name="radioIndividualType" id="radioIndividualTypeCompany" value="2" />
                    <label for="radioIndividualTypeCompany">@Resources.Language.LabelSmallCompany</label>
                </div>
                <div class="uif-col-4">
                    <label class="field-required">@Resources.Language.LabelDocumentType</label>
                    <select class="uif-select form-control" id="selectDocumentType" data-id="Id" data-name="Description" name="DocumentTypeId"
                            data-val="true" data-val-required="@Resources.Language.ValidationRequiredDocumentType"></select>
                    @Html.ValidationMessageFor(model => model.DocumentTypeId)
                </div>
                <div class="uif-col-3">
                    <label class="field-required">@Resources.Language.LabelDocumentNumber</label>
                    @Html.TextBoxFor(model => model.DocumentNumber, new { id = "inputDocumentNumber", @maxlength = "14", @class = "uif-input-search rightAlign" })
                    @Html.ValidationMessageFor(model => model.DocumentNumber)
                </div>
                <div class="uif-col-1">
                    <div class="without-label">
                        <input type="text" id="inputVerifyDigit" maxlength="1" class="rightAlign" disabled="disabled" />
                    </div>
                </div>
            </div>
            <div class="panelPerson">
                <div class="row">
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelNames</label>
                        @Html.TextBoxFor(model => model.Names, new { id = "inputNames", @maxlength = "30" })
                        @Html.ValidationMessageFor(model => model.Names)
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelSurname</label>
                        @Html.TextBoxFor(model => model.Surname, new { id = "inputSurname", @maxlength = "20" })
                        @Html.ValidationMessageFor(model => model.Surname)
                    </div>
                    <div class="uif-col-4">
                        <label>@Resources.Language.LabelSecondSurname</label>
                        @Html.TextBoxFor(model => model.SecondSurname, new { id = "inputSecondSurname", @maxlength = "20" })
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <input type="radio" name="radioGender" id="radioGenderFemale" value="F" checked="checked" />
                        <label for="radioGenderFemale">@Resources.Language.LabelFemale</label>
                        <br />
                        <input type="radio" name="radioGender" id="radioGenderMale" value="M" />
                        <label for="radioGenderMale">@Resources.Language.LabelMale</label>
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelBirthDate</label>
                        @Html.TextBoxFor(model => model.BirthDate, new { id = "inputBirthDate", @class = "uif-datepicker" })
                        @Html.ValidationMessageFor(model => model.BirthDate)
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelCorrespondenceAddress</label>
                        @Html.TextBoxFor(model => model.PersonAddress, new { id = "inputPersonAddress", @maxlength = "180" })
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label>@Resources.Language.LabelPhone</label>
                        @Html.TextBoxFor(model => model.PersonPhone, new { id = "inputPersonPhone", @maxlength = "10", @class = "rightAlign" })
                    </div>
                    <div class="uif-col-8">
                        <label class="field-required">@Resources.Language.LabelEmail</label>
                        @Html.TextBoxFor(model => model.PersonEmail, new { id = "inputPersonEmail", @maxlength = "60" })
                    </div>
                </div>
            </div>
            <div class="panelCompany">
                <div class="row">
                    <div class="uif-col-12">
                        <label class="field-required">@Resources.Language.LabelTradeName</label>
                        @Html.TextBoxFor(model => model.TradeName, new { id = "inputTradeName", @maxlength = "120" })
                        @Html.ValidationMessageFor(model => model.TradeName)
                    </div>
                </div>
                <div class="row">
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelCorrespondenceAddress</label>
                        @Html.TextBoxFor(model => model.CompanyAddress, new { id = "inputCompanyAddress", @maxlength = "180" })
                    </div>
                    <div class="uif-col-4">
                        <label>@Resources.Language.LabelPhone</label>
                        @Html.TextBoxFor(model => model.CompanyPhone, new { id = "inputCompanyPhone", @maxlength = "10", @class = "rightAlign" })
                    </div>
                    <div class="uif-col-4">
                        <label class="field-required">@Resources.Language.LabelEmail</label>
                        @Html.TextBoxFor(model => model.CompanyEmail, new { id = "inputCompanyEmail", @maxlength = "60" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="uif-col-12">
                    <h5><strong>@Resources.Language.LabelInsuranceData</strong></h5>
                </div>
            </div>
            <div class="row">
                <div class="uif-col-3">
                    <label class="field-required">@Resources.Language.LabelProduct</label>
                    <select class="uif-select form-control" id="selectProduct" data-id="Id" data-name="Description" name="ProductId"
                            data-val="true" data-val-required="@Resources.Language.ValidationRequiredProduct"></select>
                    @Html.ValidationMessageFor(model => model.ProductId)
                </div>
                <div class="uif-col-3">
                    <label class="field-required">@Resources.Language.LabelGroupCoverages</label>
                    <select class="uif-select form-control" id="selectCoverageGroup" data-id="Id" data-name="Description" name="CoverageGroupId"
                            data-val="true" data-val-required="@Resources.Language.ValidationRequiredGroupCoverage"></select>
                    @Html.ValidationMessageFor(model => model.CoverageGroupId)
                </div>
                <div class="uif-col-3">
                    <label>@Resources.Language.LabelInsuredObject</label>
                    <select class="uif-select form-control" id="selectInsuredObject" data-id="Id" data-name="Description" name="InsuredObjectId"></select>
                </div>
                <div class="uif-col-3">
                    <label>@Resources.Language.LabelInsuredValue</label>
                    <input type="text" id="inputInsuredValue" class="rightAlign" />
                </div>
            </div>
        </div>
        <div class="uif-col-5 fit-col-secondary">
            <div class="row">
                <div class="uif-col-12">
                    <div id="listInsuredObjects" class="uif-listview"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="uif-col-6">

        </div>
        <div class="uif-col-1 pull-right">
            <button type="button" class="btn btn-primary btn-calculate" id="btnQuote">
                <div>
                    <i class="fa fa-calculator"></i>
                    <div>
                        @Resources.Language.LabelQuote
                    </div>
                </div>
            </button>
        </div>
        <div class="uif-col-5">
            <div id="summaryQuotation">
                <div class="uif-summary">
                    <div class="items">
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelPremium</div>
                                <div id="labelPremium">0</div>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelTax</div>
                                <div id="labelTax">0</div>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelExpenses</div>
                                <div id="labelExpenses">0</div>
                            </div>
                        </div>
                        <div class="item">
                            <div>
                                <div>@Resources.Language.LabelTotal</div>
                                <div id="labelTotal">0</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Modals
{
    <div class="uif-modal" id="modalVersions">
        <div class="uif-modalbody">
            @Html.Partial("~/Views/Quotation/DefaultResults.cshtml")
        </div>
    </div>

    <div class="uif-modal" id="modalCoverages">
        <div class="uif-modalbody">
            @Html.Partial("~/Views/Quotation/Coverages.cshtml")
        </div>
        <div class="uif-modalbuttons width-width-saveRule" id="buttonsCoverage">
            <button type="button" class="btn btn-default" data-dismiss="modal" id="btnCoverageClose">@Resources.Language.Close</button>
        </div>
    </div>
}

@section Scripts
{
@Scripts.Render("~/bundle/js/Quotation/Property")
}
